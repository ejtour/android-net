<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/base_colorPrimary</item>
        <item name="colorPrimaryDark">@color/base_colorPrimaryDark</item>
        <item name="colorAccent">@color/base_colorAccent</item>
        <item name="android:windowAnimationStyle">@style/base_activityAnimation</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/base_colorPrimary</item>
        <item name="colorPrimaryDark">@color/base_colorPrimaryDark</item>
        <item name="colorAccent">@color/base_colorAccent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="BaseRightAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/base_right_push</item>
        <item name="android:windowExitAnimation">@anim/base_right_pull</item>
    </style>


    <style name="BasePopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/base_pop_up</item>
        <item name="android:windowExitAnimation">@anim/base_pop_down</item>
    </style>

    <!--Activity进入和退出动画-->
    <style name="base_activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/base_slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/base_slide_right_out</item>
        <item name="android:activityOpenExitAnimation">@anim/base_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_slide_left_in</item>
    </style>

</resources>
