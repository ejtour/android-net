<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#999999"/>
                    <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"/>
                </shape>
            </item>
            <item android:bottom="1dp"
                  android:left="1dp"
                  android:top="1dp">
                <shape>
                    <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"/>
                    <solid android:color="@color/base_white"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item android:state_checked="true" android:state_enabled="true">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"/>
            <solid android:color="#999999"/>
            <stroke android:width="1px" android:color="#999999"/>
        </shape>
    </item>

</selector>