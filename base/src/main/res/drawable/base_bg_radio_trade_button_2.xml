<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#c2c2c2"/>
                    <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp"/>
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp"/>
                    <solid android:color="@color/base_white"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item android:state_checked="true" android:state_enabled="true">
        <shape>
            <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp"/>
            <solid android:color="#359EF1"/>
            <stroke android:width="1dp" android:color="#359EF1"/>
        </shape>
    </item>

</selector>