<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="465dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/base_bg_shadow_top_white_bar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择地区"
            android:textColor="@color/base_text222"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/txt_cancel"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/base_bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/base_ic_select_type_cancel"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="1dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_area_province"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/base_bg_selector_bottom_primary_div"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="请选择"
            android:textColor="@drawable/base_color_state_on_pri_off_333"
            android:textSize="13sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_area_city"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/base_bg_selector_bottom_primary_div"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="请选择"
            android:textColor="@drawable/base_color_state_on_pri_off_333"
            android:textSize="13sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_area_district"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/base_bg_selector_bottom_primary_div"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="请选择"
            android:textColor="@drawable/base_color_state_on_pri_off_333"
            android:textSize="13sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_white" />
</LinearLayout>