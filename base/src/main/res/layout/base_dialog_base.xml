<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="275dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:text="操作提示标题"
                android:textColor="@color/base_colorPrimary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dialog_button_parent"
                android:layout_below="@+id/txt_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="4dp"
                android:textColor="#999"
                android:textSize="12sp"
                tools:text="客官~~\n你确定一定以及肯定要退出吗？"/>

            <LinearLayout
                android:id="@+id/dialog_button_parent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/dialog_verify_v2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/dialog_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/base_bg_item_white"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:textColor="@color/base_text_gray_light"
                        android:textSize="12sp"
                        tools:text="取消"/>

                    <TextView
                        android:id="@+id/dialog_verify"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/base_bg_item_white"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:textColor="@color/base_colorPrimary"
                        android:textSize="12sp"
                        tools:text="确定"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/dialog_verify_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/base_bg_item_white"
                    android:gravity="center"
                    android:minWidth="60dp"
                    android:textColor="@color/base_colorPrimary"
                    android:textSize="12sp"
                    tools:text="知道了"/>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>