<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:scaleType="centerInside"
            android:src="@drawable/base_left"/>

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@+id/btn_left"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_title"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/center_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:drawablePadding="20px"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="200px"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_title"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_right_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:clickable="true"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btn_right_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:clickable="true"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:textColor="@color/base_white"
                android:textSize="@dimen/base_text_medium_small"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:clickable="true"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:scaleType="centerInside"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/search_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_action_bar">

            <com.hualala.citymall.base.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toLeftOf="@+id/search_cancel"
                android:background="@drawable/base_bg_input">

            </com.hualala.citymall.base.widget.SearchView>

            <TextView
                android:id="@+id/search_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:text="完成"
                android:textColor="@color/base_text_gray_medium"
                android:textSize="@dimen/base_text_medium"/>
        </RelativeLayout>
    </io.codetail.widget.RevealFrameLayout>


</RelativeLayout>