<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:minHeight="232dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/img_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dialog_success"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dialog_state_success"
                    android:tint="@color/base_colorPrimary"/>

                <TextView
                    android:id="@+id/txt_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/base_colorPrimary"
                    android:textSize="16sp"
                    tools:text="恭喜您注册成功"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:lineSpacingExtra="1dp"
                android:textColor="#222222"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="完善资料，即可享受更优质的服务"/>

            <TextView
                android:id="@+id/txt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="提交成功，审核结果会以短信形式发送到您的手机，请耐心等待~"/>

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cancel"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/base_bg_selector_dialog_cancel"
                    android:gravity="center"
                    android:textColor="@color/base_colorPrimary"
                    android:textSize="12sp"
                    tools:text="先去逛逛"/>

                <TextView
                    android:id="@+id/txt_confirm"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/base_bg_selector_dialog_confirm"
                    android:gravity="center"
                    android:textColor="@color/base_white"
                    android:textSize="@dimen/base_text_12"
                    tools:text="立即完善"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_button_one"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_finish"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/base_bg_selector_dialog_cancel"
                    android:gravity="center"
                    android:textColor="@color/base_colorPrimary"
                    android:textSize="@dimen/base_text_12"
                    tools:text="先去逛逛"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>