<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_activity_bg">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/rl_toolbar"
        app:tb_title="从商品库导入"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <com.hll_sc_app.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/searchView"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_close">

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:hint="分类"
                android:singleLine="true"
                android:textColor="@drawable/base_color_state_on_pri_off_666"
                android:textColorHint="@drawable/base_color_state_on_pri_off_666"
                android:textSize="@dimen/base_text_12"/>

            <ImageView
                android:id="@+id/img_category"
                android:layout_width="6dp"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_category"
                android:scaleType="centerInside"
                android:src="@drawable/bg_select_window_arrow"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="#ddd"/>

        <RelativeLayout
            android:id="@+id/rl_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_close">

            <TextView
                android:id="@+id/txt_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:hint="行业标签"
                android:singleLine="true"
                android:textColor="@drawable/base_color_state_on_pri_off_666"
                android:textColorHint="@drawable/base_color_state_on_pri_off_666"
                android:textSize="@dimen/base_text_12"/>

            <ImageView
                android:id="@+id/img_label"
                android:layout_width="6dp"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_label"
                android:scaleType="centerInside"
                android:src="@drawable/bg_select_window_arrow"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="#ddd"/>

        <RelativeLayout
            android:id="@+id/rl_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_close">

            <TextView
                android:id="@+id/txt_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:text="筛选"
                android:textColor="@drawable/base_color_state_on_pri_off_666"
                android:textSize="@dimen/base_text_12"/>

            <ImageView
                android:id="@+id/img_filter"
                android:layout_width="6dp"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_filter"
                android:scaleType="centerInside"
                android:src="@drawable/bg_select_window_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_bottom"
        android:layout_below="@+id/ll_filter">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:id="@+id/fl_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_bg_shadow_bottom_bar">

        <ImageView
            android:id="@+id/img_allCheck"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/bg_selector_check_box"/>

        <TextView
            android:id="@+id/txt_allCheck"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_allCheck"
            android:gravity="center"
            android:text="全选"
            android:textAppearance="@style/TextAppearance.City22.Little.Color666"/>

        <TextView
            android:id="@+id/text_commit"
            style="@style/BtnOrderAction.PrimarySolid"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:enabled="false"
            android:text="确定选择(0)"/>

    </RelativeLayout>

</RelativeLayout>