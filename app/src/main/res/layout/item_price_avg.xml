<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/white"
    tools:layout_marginLeft="@dimen/dp_10"
    tools:layout_marginRight="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_number"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="序号"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toStartOf="@id/ipa_name"
        app:layout_constraintHorizontal_weight="19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipa_number"
        app:layout_constraintStart_toStartOf="@id/ipa_number"
        app:layout_constraintTop_toTopOf="@id/ipa_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="商品名称"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toStartOf="@id/ipa_price"
        app:layout_constraintHorizontal_weight="55"
        app:layout_constraintStart_toEndOf="@id/ipa_number"
        app:layout_constraintTop_toTopOf="@id/ipa_number" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipa_number"
        app:layout_constraintStart_toStartOf="@id/ipa_name"
        app:layout_constraintTop_toTopOf="@id/ipa_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_price"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="涨跌率"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="26"
        app:layout_constraintStart_toEndOf="@id/ipa_name"
        app:layout_constraintTop_toTopOf="@id/ipa_number" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipa_number"
        app:layout_constraintStart_toStartOf="@id/ipa_price"
        app:layout_constraintTop_toTopOf="@id/ipa_number" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipa_number"
        app:layout_constraintEnd_toEndOf="@id/ipa_price"
        app:layout_constraintTop_toTopOf="@id/ipa_number" />
</androidx.constraintlayout.widget.ConstraintLayout>