<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.order.OrderFilterView
        android:id="@+id/fom_filter_view"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fom_order_summary"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_white_radius_8_solid"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="待接单订单汇总"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/fom_deliver_type_stub"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout="@layout/view_order_deliver_type_header" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fom_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fom_list"
            android:clipToPadding="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ViewStub
        android:id="@+id/fom_bottom_bar_stub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout="@layout/view_order_bottom_bar" />
</LinearLayout>