<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/aod_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_rightText="保存"
        app:tb_rightVisibility="true"
        app:tb_title="定向售卖">

        <TextView
            android:id="@+id/aod_copy"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/bg_selector_close"
            android:gravity="center"
            android:minWidth="@dimen/title_bar_height"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="复制"
            android:textAppearance="@style/TextAppearance.City22.Middle.White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vtb_right_text"
            app:layout_constraintTop_toTopOf="parent" />
    </com.hll_sc_app.widget.TitleBar>

    <RelativeLayout
        android:id="@+id/rl_cooperation_info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@color/base_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/img_logoUrl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_group_placeholder"
            app:base_placeholder="@drawable/ic_group_placeholder" />

        <TextView
            android:id="@+id/txt_cooperation_name"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_logoUrl"
            android:singleLine="true"
            android:text="合作采购商集团名称"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/base_text_13" />

        <TextView
            android:id="@+id/txt_change_tip"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@+id/txt_cooperation_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_logoUrl"
            android:text="点击可进行修改"
            android:textAppearance="@style/TextAppearance.City22.Small.Color999" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_gray" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl_tip"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="定向售卖商品"
            android:textColor="@color/color_aeaeae"
            android:textSize="@dimen/text_middle_size" />

        <TextView
            android:id="@+id/txt_delete_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:text="移除"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <FrameLayout
        android:id="@+id/rl_add_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar">

        <TextView
            android:id="@+id/txt_add_product"
            style="@style/BtnSubmit"
            android:layout_gravity="center"
            android:text="选择定向商品" />

    </FrameLayout>
</LinearLayout>