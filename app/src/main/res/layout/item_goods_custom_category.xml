<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/img_sort"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_custom_category_sort"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_categoryName"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_categoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_sort"
        app:layout_constraintRight_toLeftOf="@+id/img_edit"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="一级分类"/>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_custom_category_edit"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_categoryName"
        app:layout_constraintRight_toLeftOf="@+id/img_del"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_del"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_custom_category_del"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_edit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>

