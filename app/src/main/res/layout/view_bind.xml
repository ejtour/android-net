<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:background="@android:color/white"
    tools:parentTag="LinearLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hll_sc_app.base.widget.ClearEditText
            android:id="@+id/vl_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_bind_edit"
            android:drawableLeft="@drawable/ic_login_phone_222"
            android:drawablePadding="15dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:nextFocusDown="@+id/vl_password_edit"
            android:paddingLeft="15dp"
            android:paddingRight="60dp"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_aeaeae"
            android:textSize="@dimen/text_large_size" />

        <ImageView
            android:id="@+id/vl_account_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:rotation="90"
            android:scaleType="centerInside"
            android:src="@drawable/ic_price_manager_arrow"
            android:tint="#ccc" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vl_account_list"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:padding="1dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.hll_sc_app.base.widget.ClearEditText
        android:id="@+id/vl_password_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_bind_edit"
        android:drawableLeft="@drawable/ic_login_pwd_222"
        android:drawablePadding="15dp"
        android:hint="请输入密码"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_aeaeae"
        android:textSize="@dimen/text_large_size" />

    <TextView
        android:id="@+id/vl_login"
        style="@style/BtnLogin"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:enabled="false"
        android:text="立即绑定" />

    <LinearLayout
        android:id="@+id/vl_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vl_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textAppearance="@style/TextAppearance.City22.Middle.Blue" />
    </LinearLayout>
</merge>