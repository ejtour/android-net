<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/img_imgUrl"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:padding="5dp"
        app:base_placeholder="@drawable/ic_placeholder"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder"/>

    <TextView
        android:id="@+id/txt_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/txt_specContent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/img_imgUrl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_imgUrl"
        tools:text="可好吃可好吃的红彤彤的大苹果"/>

    <TextView
        android:id="@+id/txt_specContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_costPrice"
        app:layout_constraintStart_toEndOf="@+id/img_imgUrl"
        app:layout_constraintTop_toBottomOf="@+id/txt_productName"
        tools:text="商品规格"/>

    <TextView
        android:id="@+id/txt_costPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@+id/img_imgUrl"
        app:layout_constraintLeft_toRightOf="@+id/img_imgUrl"
        app:layout_constraintTop_toBottomOf="@+id/txt_specContent"
        tools:text="成本：2800"/>

    <TextView
        android:id="@+id/txt_edt_costPrice"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_button_large_stroke_primary"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="修改成本"
        android:textColor="@color/base_colorPrimary"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_costPrice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_costPrice"
        app:layout_constraintVertical_bias="1"/>

    <TextView
        android:id="@+id/txt_productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintLeft_toRightOf="@+id/img_imgUrl"
        app:layout_constraintTop_toBottomOf="@+id/txt_costPrice"
        tools:text="售价：2800"/>

    <TextView
        android:id="@+id/txt_edt_productPrice"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_button_large_stroke_primary"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="修改售价"
        android:textColor="@color/base_colorPrimary"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_productPrice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_productPrice"
        app:layout_constraintVertical_bias="1"/>

</android.support.constraint.ConstraintLayout>
