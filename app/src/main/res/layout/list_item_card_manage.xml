<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_list_item_card_manage"
    android:paddingLeft="14dp"
    android:paddingTop="16dp"
    android:paddingRight="@dimen/dp_10">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/img_purchaser_url"
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:base_circle="true"
        app:base_placeholder="@drawable/ic_default_house_green_radius"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_default_house_green_radius" />

    <TextView
        android:id="@+id/txt_purchaser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_purchaser_url"
        app:layout_constraintLeft_toRightOf="@id/img_purchaser_url"
        app:layout_constraintTop_toTopOf="@id/img_purchaser_url"
        tools:text="北京二十二城电子商务有限公司" />

    <TextView
        android:id="@+id/txt_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:textColor="@color/text_666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="100291009220190909001" />

    <TextView
        android:id="@+id/txt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/base_text_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_card_num"
        tools:text="¥9,800.00" />

</android.support.constraint.ConstraintLayout>