<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/rrc_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_rightVisibility="true">

        <com.hll_sc_app.widget.SearchView
            android:id="@+id/rrc_search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/vtb_left_image"
            app:layout_constraintEnd_toStartOf="@id/vtb_right_image"
            app:layout_constraintStart_toEndOf="@id/vtb_left_image"
            app:layout_constraintTop_toTopOf="@id/vtb_left_image"
            app:layout_goneMarginRight="16dp" />
    </com.hll_sc_app.widget.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/rrc_type_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/rrc_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_filter"
                android:drawablePadding="5dp"
                android:text="全部"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666" />

            <com.hll_sc_app.widget.TriangleView
                android:id="@+id/rrc_type_arrow"
                android:layout_width="6dp"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                app:trv_color="@color/color_666666"
                app:trv_direction="bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rrc_date_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/rrc_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="5dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="2018/09/09 - 2018/09/16" />


            <com.hll_sc_app.widget.TriangleView
                android:id="@+id/rrc_date_arrow"
                android:layout_width="6dp"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                app:trv_color="@color/color_dddddd"
                app:trv_direction="bottom" />
        </LinearLayout>
    </LinearLayout>

    <com.hll_sc_app.widget.report.ExcelLayout
        android:id="@+id/rrc_excel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" />
</LinearLayout>