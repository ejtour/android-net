<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/rog_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightVisibility="true"
        app:tb_title="" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/title_bar_height"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/title_bar_height"
        app:layout_constraintBottom_toBottomOf="@id/rog_title_bar"
        app:layout_constraintEnd_toEndOf="@id/rog_title_bar"
        app:layout_constraintStart_toStartOf="@id/rog_title_bar"
        app:layout_constraintTop_toTopOf="@id/rog_title_bar">

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="287dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_fafafa_radius_20_solid"
            android:drawableLeft="@drawable/ic_search_aeaeae"
            android:drawablePadding="10dp"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            android:textColor="@color/base_white"
            android:textColorHint="#FFFFFF" />

        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/edt_search"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_clear_search"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/rog_purchaser_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/rog_date_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rog_title_bar" />

    <View
        android:id="@+id/rog_date_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/rog_purchaser_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rog_purchaser_btn"
        app:layout_constraintTop_toTopOf="@id/rog_purchaser_btn" />

    <View
        android:id="@+id/rog_ver_line"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="@color/color_dddddd"
        app:layout_constraintBottom_toBottomOf="@id/rog_purchaser_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rog_purchaser_btn" />

    <TextView
        android:id="@+id/rog_purchaser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="货主"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/rog_purchaser_btn"
        app:layout_constraintEnd_toStartOf="@id/rog_purchaser_arrow"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/rog_purchaser_btn"
        app:layout_constraintTop_toTopOf="@id/rog_purchaser_btn" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/rog_purchaser_arrow"
        android:layout_width="8dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@id/rog_purchaser_btn"
        app:layout_constraintEnd_toEndOf="@id/rog_purchaser_btn"
        app:layout_constraintStart_toEndOf="@id/rog_purchaser"
        app:layout_constraintTop_toTopOf="@id/rog_purchaser_btn"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <TextView
        android:id="@+id/rog_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="按日期筛选"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@id/rog_date_btn"
        app:layout_constraintEnd_toStartOf="@id/rog_date_arrow"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/rog_date_btn"
        app:layout_constraintTop_toTopOf="@id/rog_date_btn" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/rog_date_arrow"
        android:layout_width="8dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@id/rog_date_btn"
        app:layout_constraintEnd_toEndOf="@id/rog_date_btn"
        app:layout_constraintStart_toEndOf="@id/rog_date"
        app:layout_constraintTop_toTopOf="@id/rog_date_btn"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <com.hll_sc_app.widget.report.ExcelLayout
        android:id="@+id/ogd_excel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>