<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll_alter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#F6FAF9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请确定业务联系人为"
                android:textColor="@color/text_666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户法定代表人或相关负责人"
                android:textColor="#F5A623"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再填写信息"
                android:textColor="@color/text_666"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="45dp"
            android:background="@color/border_eee"
            app:layout_constraintTop_toBottomOf="@+id/ll_alter" />

        <View
            android:id="@+id/view_divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="45dp"
            android:background="@color/border_eee"
            app:layout_constraintTop_toBottomOf="@+id/view_divider" />

        <View
            android:id="@+id/view_divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="45dp"
            android:background="@color/border_eee"
            app:layout_constraintTop_toBottomOf="@+id/view_divider1" />

        <View
            android:id="@+id/view_divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/view_divider2" />


        <TextView
            android:id="@+id/txt_title_link_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务联系人"
            android:textColor="@color/text_666"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider"
            app:layout_constraintStart_toStartOf="@+id/view_divider"
            app:layout_constraintTop_toBottomOf="@id/ll_alter" />

        <EditText
            android:id="@+id/edt_link_man"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入业务联系人姓名"
            android:singleLine="true"
            android:textColor="@color/text_666"
            android:textColorHint="@color/text_aeaeae"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_link_man"
            app:layout_constraintTop_toBottomOf="@id/ll_alter" />

        <TextView
            android:id="@+id/txt_title_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人身份证号"
            android:textColor="@color/text_666"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider1"
            app:layout_constraintStart_toStartOf="@+id/view_divider"
            app:layout_constraintTop_toBottomOf="@id/view_divider" />

        <EditText
            android:id="@+id/edt_identity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入业务联系人身份证号"
            android:singleLine="true"
            android:textColor="@color/text_666"
            android:textColorHint="@color/text_aeaeae"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_identity"
            app:layout_constraintTop_toBottomOf="@id/view_divider" />


        <TextView
            android:id="@+id/txt_title_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务联系电话"
            android:textColor="@color/text_666"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider2"
            app:layout_constraintStart_toStartOf="@+id/view_divider"
            app:layout_constraintTop_toBottomOf="@id/view_divider1" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入业务联系人的电话"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/text_666"
            android:textColorHint="@color/text_aeaeae"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_identity"
            app:layout_constraintTop_toBottomOf="@id/view_divider1" />


        <TextView
            android:id="@+id/txt_title_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务联系邮箱"
            android:textColor="@color/text_666"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider3"
            app:layout_constraintStart_toStartOf="@+id/view_divider"
            app:layout_constraintTop_toBottomOf="@id/view_divider2" />

        <EditText
            android:id="@+id/edt_mail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入业务联系人的邮箱"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/text_666"
            android:textColorHint="@color/text_aeaeae"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_identity"
            app:layout_constraintTop_toBottomOf="@id/view_divider2" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>