<?xml version="1.0" encoding="utf-8"?>
<com.hll_sc_app.base.widget.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/img_imgUrl"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:base_RoundingRadius="3"
            app:base_placeholder="@drawable/ic_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginLeft="@dimen/dp_10"
            tools:src="@drawable/ic_placeholder"/>

        <TextView
            android:id="@+id/txt_productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constraintLeft_toRightOf="@+id/img_imgUrl"
            app:layout_constraintRight_toLeftOf="@+id/txt_nextDayDelivery"
            app:layout_constraintTop_toTopOf="@+id/img_imgUrl"
            tools:text="可好吃可好吃的红彤彤的大苹果"/>

        <TextView
            android:id="@+id/txt_nextDayDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_tag_primary_stroke"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="隔日送"
            android:textAppearance="@style/TextAppearance.City22.Little.Primary"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/txt_productName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_imgUrl"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/txt_productCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintBottom_toTopOf="@+id/txt_specsSize"
            app:layout_constraintStart_toEndOf="@+id/img_imgUrl"
            tools:text="编码：1234567890"/>

        <TextView
            android:id="@+id/txt_specsSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintBottom_toBottomOf="@+id/img_imgUrl"
            app:layout_constraintStart_toEndOf="@+id/img_imgUrl"
            tools:text="规格：2种"/>

        <TextView
            android:id="@+id/txt_disableTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="注：该商品已被平台禁用，如有疑问请联系客服"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintBottom_toBottomOf="@+id/img_imgUrl"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#E6E9ED">

        <TextView
            android:id="@+id/txt_specStatus"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="上架\n商品"
            android:textAppearance="@style/TextAppearance.City22.Little.Color666"/>
    </FrameLayout>


</com.hll_sc_app.base.widget.SwipeItemLayout>