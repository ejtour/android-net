<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_spec_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="6dp"
        android:text="示例商品规格一"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/base_text_12" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="right"
        android:lineSpacingExtra="6dp"
        android:text="¥6.00"
        android:textColor="@color/color_de5c5c"
        android:textSize="@dimen/base_text_12" />

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/base_text_16"
        android:layout_height="@dimen/base_text_16"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:src="@drawable/bg_selector_check_box_circular" />


</LinearLayout>