<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bg_loading"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/otm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.White"
        tools:text="08月18日" />

    <TextView
        android:id="@+id/otm_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/dot_order_trend_amount"
        android:drawablePadding="5dp"
        android:text="交易金额：0"
        android:textAppearance="@style/TextAppearance.City22.Small.White" />

    <TextView
        android:id="@+id/otm_bill_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/dot_order_trend_bill_num"
        android:drawablePadding="5dp"
        android:text="订单量：0"
        android:textAppearance="@style/TextAppearance.City22.Small.White" />
</LinearLayout>