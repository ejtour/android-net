<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_main_mine_background" />

    <RelativeLayout
        android:id="@+id/txt_main_title_block"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="待退货统计"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/txt_wait_refund_basic_block"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/txt_main_title_block"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/base_bg_white_radius_5_solid">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_main_order_normal"
            android:tint="#5695D2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="待退统计"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/base_text_12"
            app:layout_constraintBottom_toBottomOf="@+id/img_title"
            app:layout_constraintStart_toEndOf="@+id/img_title"
            app:layout_constraintTop_toTopOf="@id/img_title" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <TextView
            android:id="@+id/wait_refund_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_222"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wait_refund_num"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="待退货单(笔)"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wait_refund_num" />

        <TextView
            android:id="@+id/wait_refund_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_222"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12/12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wait_refund_customer"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="待退客户数"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/wait_refund_customer" />
    </android.support.constraint.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/refund_amount_label"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_wait_refund_basic_block"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_radius_top_half_5_solid">

        <ImageView
            android:id="@+id/img_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_after_sales_money" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_title_2"
            android:text="金额统计"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wait_refund_amount_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/refund_amount_label"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/base_white">

        <TextView
            android:id="@+id/wait_refund_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_222"
            android:textSize="22sp"
            tools:text="40,000.00" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wait_refund_amount_label_block"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/wait_refund_amount_block"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/base_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:text="待退金额(元)"
            android:textSize="10sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/border_eee" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/txt_amount_block"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/wait_refund_amount_label_block"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_radius_bottom_half_5_solid">

        <TextView
            android:id="@+id/txt_cash_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_cash_amount_label"
            app:layout_constraintEnd_toStartOf="@+id/view_divider_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="1000000" />

        <TextView
            android:id="@+id/txt_cash_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cash_amount"
            android:layout_centerInParent="true"
            android:layout_marginTop="6dp"
            android:text="现金(元)"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txt_cash_amount"
            app:layout_constraintStart_toStartOf="@+id/txt_cash_amount"
            app:layout_constraintTop_toBottomOf="@+id/txt_cash_amount" />

        <View
            android:id="@+id/view_divider_0"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/base_color_divider"
            app:layout_constraintBottom_toBottomOf="@+id/txt_cash_amount_label"
            app:layout_constraintEnd_toStartOf="@+id/txt_online_amount"
            app:layout_constraintStart_toEndOf="@+id/txt_cash_amount"
            app:layout_constraintTop_toTopOf="@+id/txt_cash_amount" />

        <TextView
            android:id="@+id/txt_online_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/view_divider_1"
            app:layout_constraintStart_toEndOf="@+id/view_divider_0"
            app:layout_constraintTop_toTopOf="@+id/txt_cash_amount"
            tools:text="1000000" />

        <TextView
            android:id="@+id/txt_online_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_online_amount"
            android:layout_centerInParent="true"
            android:layout_marginTop="6dp"
            android:text="线上支付(元)"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_online_amount"
            app:layout_constraintStart_toStartOf="@+id/txt_online_amount"
            app:layout_constraintTop_toBottomOf="@+id/txt_online_amount" />

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/base_color_divider"
            app:layout_constraintBottom_toBottomOf="@+id/txt_cash_amount_label"
            app:layout_constraintEnd_toStartOf="@+id/txt_bank_card_amount"
            app:layout_constraintStart_toEndOf="@+id/txt_online_amount"
            app:layout_constraintTop_toTopOf="@+id/txt_cash_amount" />

        <TextView
            android:id="@+id/txt_bank_card_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/view_divider_2"
            app:layout_constraintStart_toEndOf="@+id/view_divider_1"
            app:layout_constraintTop_toTopOf="@+id/txt_online_amount"
            tools:text="1000000" />

        <TextView
            android:id="@+id/txt_bank_card_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_bank_card_amount"
            android:layout_centerInParent="true"
            android:layout_marginTop="6dp"
            android:text="银行卡(元)"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_bank_card_amount"
            app:layout_constraintStart_toStartOf="@+id/txt_bank_card_amount"
            app:layout_constraintTop_toBottomOf="@id/txt_bank_card_amount" />

        <View
            android:id="@+id/view_divider_2"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/base_color_divider"
            app:layout_constraintBottom_toBottomOf="@+id/txt_cash_amount_label"
            app:layout_constraintEnd_toStartOf="@+id/txt_account_amount"
            app:layout_constraintStart_toEndOf="@+id/txt_bank_card_amount"
            app:layout_constraintTop_toTopOf="@+id/txt_cash_amount" />

        <TextView
            android:id="@+id/txt_account_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_divider_2"
            app:layout_constraintTop_toTopOf="@+id/txt_bank_card_amount"
            tools:text="1000000" />

        <TextView
            android:id="@+id/txt_account_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_account_amount"
            android:layout_centerInParent="true"
            android:layout_marginTop="6dp"
            android:text="账期支付(元)"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_account_amount"
            app:layout_constraintStart_toStartOf="@+id/txt_account_amount"
            app:layout_constraintTop_toBottomOf="@+id/txt_account_amount" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/wait_refund_amount_label_block"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:orientation="horizontal"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="89dp"
            android:layout_weight="1">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="178dp"
            android:layout_weight="1">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="266dp"
            android:layout_weight="1">


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_amount_block"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/txt_wait_customer_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableRight="@drawable/ic_arrow_blue"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="查看待退客户统计明细"
                android:textColor="#5695D2"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_wait_product_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableRight="@drawable/ic_arrow_blue"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="查看待退商品统计明细"
                android:textColor="#5695D2"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>