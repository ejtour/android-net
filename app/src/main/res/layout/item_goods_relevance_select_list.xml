<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@android:color/white">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/img_imgUrl"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:base_placeholder="@drawable/ic_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder"/>

    <TextView
        android:id="@+id/txt_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/img_imgUrl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_imgUrl"
        tools:text="可好吃可好吃的红彤彤的大苹果"/>

    <TextView
        android:id="@+id/txt_productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color999"
        android:textColor="@color/base_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintRight_toLeftOf="@+id/img_check"
        app:layout_constraintTop_toBottomOf="@+id/txt_productName"
        app:layout_constraintVertical_bias="0"
        tools:text="¥12.00" />

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/bg_selector_check_box_circular"
        app:layout_constraintBottom_toBottomOf="@+id/txt_specContent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_specContent" />

    <TextView
        android:id="@+id/txt_specContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintLeft_toRightOf="@+id/img_imgUrl"
        app:layout_constraintRight_toLeftOf="@id/txt_productPrice"
        app:layout_constraintTop_toBottomOf="@+id/txt_productName"
        app:layout_constraintVertical_bias="0"
        tools:text="示例商品规格一" />

</androidx.constraintlayout.widget.ConstraintLayout>
