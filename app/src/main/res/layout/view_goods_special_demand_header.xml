<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/white"
    tools:padding="@dimen/dp_10"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/sdh_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="特殊需求商品"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sdh_bg"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_item_goods_detail_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sdh_title" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/sdh_image"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/sdh_bg"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/sdh_bg"
        app:layout_constraintTop_toTopOf="@id/sdh_bg"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/sdh_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="@id/sdh_bg"
        app:layout_constraintStart_toEndOf="@id/sdh_image"
        app:layout_constraintTop_toTopOf="@id/sdh_image"
        tools:text="特别好吃的青苹果" />

    <TextView
        android:id="@+id/sdh_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBottom_toBottomOf="@id/sdh_image"
        app:layout_constraintStart_toStartOf="@id/sdh_name"
        tools:text="编码：319214214" />
</merge>