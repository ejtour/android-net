<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/img_imgUrl"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:base_RoundingRadius="3"
        app:base_placeholder="@drawable/ic_placeholder"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="@dimen/dp_10"
        tools:src="@drawable/ic_placeholder"/>

    <TextView
        android:id="@+id/txt_productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/img_imgUrl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_imgUrl"
        app:layout_constraintWidth_default="wrap"
        tools:text="可好吃可好吃的红彤彤的大苹果"/>

    <TextView
        android:id="@+id/txt_productCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintStart_toEndOf="@+id/img_imgUrl"
        app:layout_constraintTop_toBottomOf="@+id/txt_productName"
        app:layout_constraintVertical_bias="0"
        tools:text="编码：1234567890"/>

    <TextView
        android:id="@+id/txt_top"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_button_large_stroke_primary"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="置顶"
        android:textColor="@drawable/base_text_selector_dialog_cancel"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_productCode"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_productCode"
        app:layout_constraintVertical_bias="1"/>

</android.support.constraint.ConstraintLayout>
