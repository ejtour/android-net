<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/base_white"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/img_product"
        app:base_RoundingRadius="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10" />

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_text_13"
        android:textColor="@color/base_text222"
        tools:text="四川眉山爱媛38号果冻橙柑橘"
        app:layout_constraintTop_toTopOf="@+id/img_product"
        app:layout_constraintStart_toEndOf="@+id/img_product"
        android:layout_marginLeft="@dimen/dp_10" />

    <TextView
        android:id="@+id/txt_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/base_text999"
        tools:text="这里显示商品供应商"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@id/txt_product_name" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F33030"
        android:textSize="@dimen/base_text_10"
        tools:text="¥350.00/箱"
        app:layout_constraintStart_toStartOf="@id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@id/txt_group_name"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txt_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="100个/箱"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@id/txt_price"
        app:layout_constraintTop_toTopOf="@id/txt_price" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_product_name"
        android:background="@drawable/line_dash_divider" />
</android.support.constraint.ConstraintLayout>