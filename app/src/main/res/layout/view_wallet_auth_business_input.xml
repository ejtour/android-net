<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <View
        android:id="@+id/abi_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/abi_confirm"
        style="@style/BtnOrderAction.PrimarySolid"
        android:layout_width="200dp"
        android:enabled="false"
        android:text="确认提交认证申请"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintBottom_toBottomOf="@id/abi_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/abi_bottom_bg"
        app:layout_constraintStart_toStartOf="@id/abi_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/abi_bottom_bg" />

    <!--许可证信息 start-->
    <View
        android:id="@+id/abi_license_info_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        app:layout_constraintBottom_toBottomOf="@id/abi_end_date_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/abi_license_judgment_label"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:text="是否有相关许可证"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintStart_toStartOf="@id/abi_license_info_bg"
        app:layout_constraintTop_toTopOf="@id/abi_license_info_bg" />

    <TextView
        android:id="@+id/abi_license_judgment"
        style="@style/InfoEdit"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:drawablePadding="5dp"
        android:hint="请选择是否有相关许可证"
        app:layout_constraintBottom_toBottomOf="@id/abi_license_judgment_label"
        app:layout_constraintEnd_toEndOf="@id/abi_license_info_bg"
        app:layout_constraintStart_toEndOf="@id/abi_license_judgment_label"
        app:layout_constraintTop_toTopOf="@id/abi_license_judgment_label" />

    <View
        android:id="@+id/abi_license_info_div1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/abi_license_judgment_label"
        app:layout_constraintEnd_toEndOf="@id/abi_license_judgment"
        app:layout_constraintStart_toStartOf="@id/abi_license_judgment_label" />

    <TextView
        android:id="@+id/abi_start_date_label"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:text="起始日期"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintStart_toStartOf="@id/abi_license_info_bg"
        app:layout_constraintTop_toBottomOf="@id/abi_license_judgment_label" />

    <TextView
        android:id="@+id/abi_start_date"
        style="@style/InfoEdit"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:drawablePadding="5dp"
        android:hint="请选择许可证的起始日期"
        app:layout_constraintBottom_toBottomOf="@id/abi_start_date_label"
        app:layout_constraintEnd_toEndOf="@id/abi_license_info_bg"
        app:layout_constraintStart_toEndOf="@id/abi_start_date_label"
        app:layout_constraintTop_toTopOf="@id/abi_start_date_label" />

    <View
        android:id="@+id/abi_license_info_div2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/abi_start_date_label"
        app:layout_constraintEnd_toEndOf="@id/abi_license_judgment"
        app:layout_constraintStart_toStartOf="@id/abi_license_judgment_label" />

    <TextView
        android:id="@+id/abi_end_date_label"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:text="结束日期"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintStart_toStartOf="@id/abi_license_info_bg"
        app:layout_constraintTop_toBottomOf="@id/abi_start_date_label" />

    <TextView
        android:id="@+id/abi_end_date"
        style="@style/InfoEdit"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:drawablePadding="5dp"
        android:hint="请选择许可证的结束日期"
        app:layout_constraintBottom_toBottomOf="@id/abi_end_date_label"
        app:layout_constraintEnd_toEndOf="@id/abi_license_info_bg"
        app:layout_constraintStart_toEndOf="@id/abi_end_date_label"
        app:layout_constraintTop_toTopOf="@id/abi_end_date_label" />
    <!--许可证信息 end-->


    <!--许可证照片 start-->
    <View
        android:id="@+id/abi_license_photo_bg"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abi_license_info_bg" />

    <com.hll_sc_app.base.widget.ImgUploadBlock
        android:id="@+id/abi_license_photo"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:base_title="点击上传许可证"
        app:layout_constraintBottom_toBottomOf="@id/abi_license_photo_bg"
        app:layout_constraintEnd_toEndOf="@id/abi_license_photo_bg"
        app:layout_constraintStart_toStartOf="@id/abi_license_photo_bg" />

    <TextView
        android:id="@+id/abi_license_photo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传许可证"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        app:layout_constraintBottom_toTopOf="@id/abi_license_photo"
        app:layout_constraintStart_toStartOf="@id/abi_license_photo"
        app:layout_constraintTop_toTopOf="@id/abi_license_photo_bg" />
    <!--许可证照片 end-->

    <android.support.constraint.Group
        android:id="@+id/abi_license_info_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="abi_license_photo_bg,
abi_license_photo,abi_license_photo_label,
abi_license_info_div1,abi_license_info_div2,
abi_start_date,abi_start_date_label,
abi_end_date,abi_end_date_label" />

    <!--店铺图片 start-->
    <View
        android:id="@+id/abi_shop_photo_bg"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abi_license_photo_bg" />

    <com.hll_sc_app.base.widget.ImgUploadBlock
        android:id="@+id/abi_shop_doorway"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:base_title="点击上传店铺门头图"
        app:layout_constraintBottom_toBottomOf="@id/abi_shop_photo_bg"
        app:layout_constraintEnd_toStartOf="@id/abi_shop_indoor"
        app:layout_constraintStart_toStartOf="@id/abi_shop_photo_bg" />

    <com.hll_sc_app.base.widget.ImgUploadBlock
        android:id="@+id/abi_shop_indoor"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:base_title="点击上传店内图"
        app:layout_constraintBottom_toBottomOf="@id/abi_shop_photo_bg"
        app:layout_constraintEnd_toEndOf="@id/abi_shop_photo_bg"
        app:layout_constraintStart_toEndOf="@id/abi_shop_doorway" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺图片"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        app:layout_constraintBottom_toTopOf="@id/abi_shop_doorway"
        app:layout_constraintStart_toStartOf="@id/abi_shop_doorway"
        app:layout_constraintTop_toTopOf="@id/abi_shop_photo_bg" />
    <!--店铺图片 end-->
</merge>