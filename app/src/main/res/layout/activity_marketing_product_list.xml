<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/base_bg_shadow_top_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose" />

        <com.hll_sc_app.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/txt_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="导出"
            android:visibility="invisible"
            android:textColor="@color/base_white"
            android:textSize="12sp" />
    </LinearLayout>

    <!--有数据的页面-->
    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/csl_filter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical">

            <View
                android:id="@+id/view_divider"
                android:layout_width="0.5dp"
                android:layout_height="22dp"
                android:background="@color/color_aeaeae"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view_divider_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_divider_1"
                android:layout_width="0.5dp"
                android:layout_height="22dp"
                android:background="@color/color_aeaeae"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_divider"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_filter_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="促销状态"
                android:textColor="@color/base_text666"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_arrow_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bg_select_window_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_filter_status"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_filter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="促销时间"
                android:textColor="@color/base_text666"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view_divider_1"
                app:layout_constraintStart_toStartOf="@id/view_divider"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_arrow_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bg_select_window_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_filter_date"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_filter_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="促销规则"
                android:textColor="@color/base_text666"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_divider_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_arrow_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bg_select_window_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_filter_type"
                app:layout_constraintTop_toTopOf="parent" />

            <!--真正响应点击事件的-->
            <TextView
                android:id="@+id/txt_filter_status_true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="@id/view_divider"
                app:layout_constraintStart_toStartOf="parent" />
            <!--真正响应点击事件的-->
            <TextView
                android:id="@+id/txt_filter_date_true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@+id/view_divider"
                app:layout_constraintEnd_toStartOf="@id/view_divider_1" />
            <!--真正响应点击事件的-->
            <TextView
                android:id="@+id/txt_filter_type_true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_divider_1" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/view_divider_filter"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_aeaeae" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

    <!--无数据的页面-->
    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_view_empty" />

        <TextView
            android:id="@+id/txt_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="您还没有设置过商品促销活动"
            android:textColor="@color/base_text222"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="多做一些营销活动可以增加营业收入噢～"
            android:textColor="@color/color_aeaeae"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_add"
            style="@style/BtnOrderAction.PrimarySolid"
            android:layout_width="230dp"
            android:layout_marginTop="20dp"
            android:text="新增一个商品促销活动"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_white"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_add"
            style="@style/BtnAfterSalesAction.PrimarySolid"
            android:layout_width="230dp"
            android:text="新增商品活动" />
    </LinearLayout>
</LinearLayout>