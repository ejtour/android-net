<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增商品"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18" />

        <TextView
            android:id="@+id/txt_title_save"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_selector_close"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_13"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fl_bottom"
        android:layout_below="@+id/rl_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/base_white"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_productImg_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品图片"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="请至少添加1张主图，最多可添加4张辅图~"
                    android:textAppearance="@style/TextAppearance.City22.Small.ColorAE"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_productImg_title"
                    app:layout_constraintLeft_toRightOf="@+id/txt_productImg_title" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_productImg_title">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:orientation="horizontal">

                        <com.hll_sc_app.base.widget.ImgUploadBlock
                            android:id="@+id/img_imgUrl"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:base_title="添加主图" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/base_dash_line"
                            android:layerType="software"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />

                        <LinearLayout
                            android:id="@+id/ll_imgUrlSub"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.hll_sc_app.base.widget.ImgUploadBlock
                                android:id="@+id/img_imgUrlSub"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:base_title="添加辅图" />
                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>
            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_productCode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品编码"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <EditText
                    android:id="@+id/et_productCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_productCode_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="商品唯一标识码，最多20位"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/base_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_productName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品名称"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <EditText
                    android:id="@+id/et_productName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_productName_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="最多可输入20字"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_categoryName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_categoryName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商城分类"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:id="@+id/txt_categoryName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_categoryName_title"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:hint="请选择商城分类"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_categoryName_copy"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/color_fafafa"
                android:gravity="right|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="复制商城分类为自定义分类"
                android:textAppearance="@style/TextAppearance.City22.Small.Blue" />

            <RelativeLayout
                android:id="@+id/rl_shopProductCategorySubName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_shopProductCategorySubName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="自定义分类"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:id="@+id/txt_shopProductCategorySubName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_shopProductCategorySubName_title"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:hint="请选择自定义分类"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品规格"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:id="@+id/txt_specs_add_assistUnit"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txt_specs_add"
                    android:background="@drawable/base_bg_selector_dialog_cancel"
                    android:gravity="center"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="选择辅助规格"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/txt_specs_add"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/base_bg_selector_dialog_cancel"
                    android:gravity="center"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="新增规格"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                tools:visibility="gone" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/base_white"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_another_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/base_white"
                    android:text="商品别称"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/base_white"
                    android:text="最多可输入6个字~"
                    android:textAppearance="@style/TextAppearance.City22.Small.ColorAE"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_another_name"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_another_name" />

                <EditText
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/et_nickNames1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_gray_solid_radius_5"
                    android:gravity="center"
                    android:hint="别称1"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"
                    app:layout_constraintEnd_toStartOf="@+id/et_nickNames2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_another_name" />

                <EditText
                    android:id="@+id/et_nickNames2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_gray_solid_radius_5"
                    android:gravity="center"
                    android:hint="别称2"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"
                    app:layout_constraintEnd_toStartOf="@+id/et_nickNames3"
                    app:layout_constraintStart_toEndOf="@+id/et_nickNames1"
                    app:layout_constraintTop_toTopOf="@id/et_nickNames1" />

                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/et_nickNames3"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_gray_solid_radius_5"
                    android:gravity="center"
                    android:hint="别称3"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/et_nickNames2"
                    app:layout_constraintTop_toTopOf="@id/et_nickNames1" />

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品属性"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:id="@+id/txt_productAttrs_add"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/base_bg_selector_dialog_cancel"
                    android:gravity="center"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="选择商品属性"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_productAttrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                tools:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品标签"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:id="@+id/txt_label_add"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/base_bg_selector_dialog_cancel"
                    android:gravity="center"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="选择商品标签"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue" />

            </RelativeLayout>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_depositProductType_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设置为押金商品"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <Switch
                    android:id="@+id/switch_depositProductType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_stockCheckType_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="开启库存校验"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <Switch
                    android:id="@+id/switch_stockCheckType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_product_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品类型"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:id="@+id/txt_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:hint="请选择商品类型"
                    android:textSize="13sp"
                    android:textColor="@color/text_222"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_product_owner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_product_owner_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="选择货主"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:id="@+id/txt_product_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:hint="请选择商品货主"
                    android:textSize="13sp"
                    android:textColor="@color/text_222"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

            </RelativeLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/base_white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_brief_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/base_white"
                    android:text="商品简介"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/base_white"
                    android:text="最多可输入200个字~"
                    android:textAppearance="@style/TextAppearance.City22.Small.ColorAE"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_brief_introduction"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_brief_introduction" />

                <EditText
                    android:id="@+id/et_productBrief"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_gray_solid_radius_5"
                    android:gravity="left"
                    android:hint="请输入商品简介，最多可输入200字"
                    android:maxLength="200"
                    android:minHeight="45dp"
                    android:padding="@dimen/dp_10"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_brief_introduction" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_white"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/base_white"
                    android:text="商品详情图"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/base_white"
                    android:text="最多可添加5张详情图~"
                    android:textAppearance="@style/TextAppearance.City22.Small.ColorAE" />
            </LinearLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_imgUrlDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/base_white"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <com.hll_sc_app.base.widget.ImgUploadBlock
                        android:id="@+id/img_imgUrlDetail"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="10dp"
                        app:base_title="点击添加详情图" />
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
