<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/oid_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color999"
        app:layout_constraintBottom_toBottomOf="@id/oid_edit_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/oid_edit_num"
        tools:text="个" />

    <EditText
        android:id="@+id/oid_edit_num"
        android:layout_width="85dp"
        android:layout_height="28dp"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:inputType="number"
        android:background="@drawable/bg_goods_search"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toStartOf="@id/oid_unit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oid_edit_prefix"
        android:layout_height="wrap_content"
        android:text="验："
        android:textAppearance="@style/TextAppearance.City22.Middle.Color999"
        app:layout_constraintBottom_toBottomOf="@id/oid_edit_num"
        app:layout_constraintEnd_toStartOf="@id/oid_edit_num"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/oid_edit_num" />

    <TextView
        android:id="@+id/oid_name_spec"
        android:layout_width="0dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/oid_edit_num"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toStartOf="@id/oid_edit_prefix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/oid_edit_num"
        tools:text="鸡蛋，中" />
</android.support.constraint.ConstraintLayout>