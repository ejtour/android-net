<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/ios_pay_icon"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_order_ban"
        tools:tint="@color/colorPrimary" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ios_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_gray" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ios_pay_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toLeftOf="@+id/ios_arrow"
        android:layout_toRightOf="@+id/ios_pay_icon"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        tools:text="支付宝扫码" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_eeeeee" />
</RelativeLayout>