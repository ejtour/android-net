<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="保存"
        app:tb_rightVisibility="true"
        app:tb_title="新增仓库" />

    <View
        android:id="@+id/view_back_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_white"
        app:layout_constraintBottom_toBottomOf="@+id/edt_code"
        app:layout_constraintTop_toBottomOf="@id/title_bar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="仓库名称"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="@id/view_back_1"
        app:layout_constraintTop_toTopOf="@id/view_back_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="给您的仓库取个好听的名称吧"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_name" />

    <View
        android:id="@+id/view_divider_1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/base_color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_title_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_code"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="仓库编号"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="@id/view_back_1"
        app:layout_constraintTop_toBottomOf="@id/view_divider_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_code"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="请输入仓库编号"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_code" />


    <View
        android:id="@+id/view_back_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_white"
        app:layout_constraintBottom_toBottomOf="@+id/txt_title_addr"
        app:layout_constraintTop_toBottomOf="@id/view_back_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_link"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="联系人"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="@id/txt_title_name"
        app:layout_constraintTop_toTopOf="@id/view_back_2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_link"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="请输入仓库联系人称呼"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_link" />

    <View
        android:id="@+id/view_divider_2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/base_color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_title_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_link" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_tel"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="联系方式"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="@id/txt_title_name"
        app:layout_constraintTop_toBottomOf="@id/view_divider_2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_tel"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="请输入仓库联系方式"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_tel" />

    <View
        android:id="@+id/view_divider_3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/base_color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_title_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_tel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_addr"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="仓库地址"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="@id/txt_title_name"
        app:layout_constraintTop_toBottomOf="@id/view_divider_3" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_addr"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="请输入仓库的详细地址"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_addr" />

</androidx.constraintlayout.widget.ConstraintLayout>