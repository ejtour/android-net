<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tb_rightVisibility="true"
        app:tb_title="客户收货查询" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/csl_filter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/base_white">

        <View
            android:id="@+id/view_divider_0"
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:background="@color/base_color_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view_divider_1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:background="@color/base_color_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_divider_0"
            app:layout_constraintRight_toLeftOf="@id/view_divider_2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_divider_2"
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:background="@color/base_color_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_divider_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:text="客户"
            android:textColor="@color/text_666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view_divider_0"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="12"
            android:text="2019/19/23-2019/19/23"
            android:textColor="@color/text_666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_divider_0"
            app:layout_constraintRight_toLeftOf="@id/view_divider_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:text="单据类型"
            android:textColor="@color/text_666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_divider_1"
            app:layout_constraintRight_toLeftOf="@id/view_divider_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:text="状态"
            android:textColor="@color/text_666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_divider_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hll_sc_app.widget.TriangleView
            android:id="@+id/img_custom"
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_custom"
            app:layout_constraintTop_toTopOf="parent"
            app:trv_color="@color/color_dddddd"
            app:trv_direction="bottom" />

        <com.hll_sc_app.widget.TriangleView
            android:id="@+id/img_date"
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_date"
            app:layout_constraintTop_toTopOf="parent"
            app:trv_color="@color/color_dddddd"
            app:trv_direction="bottom" />

        <com.hll_sc_app.widget.TriangleView
            android:id="@+id/img_type"
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_type"
            app:layout_constraintTop_toTopOf="parent"
            app:trv_color="@color/color_dddddd"
            app:trv_direction="bottom" />

        <com.hll_sc_app.widget.TriangleView
            android:id="@+id/img_status"
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_status"
            app:layout_constraintTop_toTopOf="parent"
            app:trv_color="@color/color_dddddd"
            app:trv_direction="bottom" />

        <View
            android:id="@+id/view_filter_custome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@+id/view_divider_0"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_filter_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@+id/view_divider_1"
            app:layout_constraintStart_toStartOf="@id/view_divider_0" />

        <View
            android:id="@+id/view_filter_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@+id/view_divider_2"
            app:layout_constraintStart_toStartOf="@id/view_divider_1" />

        <View
            android:id="@+id/view_filter_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/view_divider_2" />
    </android.support.constraint.ConstraintLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>