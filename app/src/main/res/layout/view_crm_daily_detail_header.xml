<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/white"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/ddh_today_flag"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_primary_radius_1_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_today_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="今日完成工作"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintBottom_toBottomOf="@id/ddh_today_flag"
        app:layout_constraintStart_toEndOf="@id/ddh_today_flag"
        app:layout_constraintTop_toTopOf="@id/ddh_today_flag" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_today_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/dp_10"
        android:lineSpacingExtra="4dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_today_flag"
        tools:text="1、今天签约10个集团100家门店试用二十二城系统；\n2、这里显示日报内容，这里显示日报内容；\n3、这里显示日报内容这里显示日报内容这里显示日报内容这里显示日报内容这里显示日报内容。\n这里显示日报内容这里显示日报内容。" />

    <View
        android:id="@+id/ddh_div_1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@id/ddh_today_content"
        app:layout_constraintStart_toStartOf="@id/ddh_today_content"
        app:layout_constraintTop_toBottomOf="@id/ddh_today_content" />

    <View
        android:id="@+id/ddh_tomorrow_flag"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_primary_radius_1_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_div_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_tomorrow_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="明日工作计划"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintBottom_toBottomOf="@id/ddh_tomorrow_flag"
        app:layout_constraintStart_toEndOf="@id/ddh_tomorrow_flag"
        app:layout_constraintTop_toTopOf="@id/ddh_tomorrow_flag" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_tomorrow_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/dp_10"
        android:hint="暂无"
        android:lineSpacingExtra="4dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        android:textColorHint="@color/color_aeaeae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_tomorrow_flag"
        tools:text="明天努力拿下这几家集团的其他门店！" />

    <View
        android:id="@+id/ddh_div_2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@id/ddh_tomorrow_content"
        app:layout_constraintStart_toStartOf="@id/ddh_tomorrow_content"
        app:layout_constraintTop_toBottomOf="@id/ddh_tomorrow_content" />

    <View
        android:id="@+id/ddh_help_flag"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_primary_radius_1_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_div_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_help_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="需协调与帮助"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintBottom_toBottomOf="@id/ddh_help_flag"
        app:layout_constraintStart_toEndOf="@id/ddh_help_flag"
        app:layout_constraintTop_toTopOf="@id/ddh_help_flag" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_help_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/dp_10"
        android:hint="暂无"
        android:lineSpacingExtra="4dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        android:textColorHint="@color/color_aeaeae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_help_flag" />

    <View
        android:id="@+id/ddh_div_3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@id/ddh_help_content"
        app:layout_constraintStart_toStartOf="@id/ddh_help_content"
        app:layout_constraintTop_toBottomOf="@id/ddh_help_content" />

    <View
        android:id="@+id/ddh_remark_flag"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_primary_radius_1_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_div_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_remark_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="备注"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintBottom_toBottomOf="@id/ddh_remark_flag"
        app:layout_constraintStart_toEndOf="@id/ddh_remark_flag"
        app:layout_constraintTop_toTopOf="@id/ddh_remark_flag" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_remark_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/dp_10"
        android:hint="暂无"
        android:lineSpacingExtra="4dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        android:textColorHint="@color/color_aeaeae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_remark_flag" />

    <com.hll_sc_app.widget.ThumbnailView
        android:id="@+id/ddh_remark_pic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@android:color/transparent"
        app:ctv_padding="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ddh_remark_content" />

    <View
        android:id="@+id/ddh_div_4"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@id/ddh_today_content"
        app:layout_constraintStart_toStartOf="@id/ddh_today_content"
        app:layout_constraintTop_toBottomOf="@id/ddh_remark_pic" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_daily_read"
        android:drawablePadding="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@drawable/color_state_on_pri_off_999"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintStart_toStartOf="@id/ddh_today_content"
        app:layout_constraintTop_toTopOf="@id/ddh_div_4"
        tools:text="未读" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_review_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_daily_review"
        android:drawablePadding="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@drawable/color_state_on_pri_off_999"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintStart_toEndOf="@id/ddh_read_status"
        app:layout_constraintTop_toTopOf="@id/ddh_div_4"
        tools:text="暂无点评" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ddh_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@drawable/color_state_on_pri_off_999"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintEnd_toEndOf="@id/ddh_today_content"
        app:layout_constraintTop_toTopOf="@id/ddh_div_4"
        tools:text="提交时间：2019/01/29 22:16" />

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/base_activity_bg"
        app:layout_constraintTop_toBottomOf="@id/ddh_time" />
</merge>