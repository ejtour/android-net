<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/color_fafafa"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_specContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small"
        android:textColor="@drawable/base_color_state_on_pri_off_666"
        app:layout_constraintBottom_toTopOf="@+id/txt_saleUnitName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_ration"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="规格内容：300g／盘"/>

    <TextView
        android:id="@+id/txt_ration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small"
        android:textColor="@drawable/base_color_state_on_pri_off_666"
        app:layout_constraintBottom_toTopOf="@+id/txt_productPrice"
        app:layout_constraintLeft_toRightOf="@+id/txt_specContent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="转换率：1"/>

    <TextView
        android:id="@+id/txt_saleUnitName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small"
        android:textColor="@drawable/base_color_state_on_pri_off_666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_productPrice"
        app:layout_constraintTop_toBottomOf="@+id/txt_specContent"
        tools:text="售卖单位：盘"/>

    <TextView
        android:id="@+id/txt_productPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small"
        android:textColor="@drawable/base_color_state_on_pri_off_666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_saleUnitName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_specContent"
        tools:text="单价：¥58.00"/>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/base_ic_select_type"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
