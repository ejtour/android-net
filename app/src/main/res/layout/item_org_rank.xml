<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/ior_rank"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        tools:text=""
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toStartOf="@id/ior_name"
        app:layout_constraintHorizontal_weight="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ior_medal"
        android:layout_width="wrap_content"
        tools:src="@drawable/ic_medal_gold"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ior_rank"
        app:layout_constraintEnd_toEndOf="@id/ior_rank"
        app:layout_constraintStart_toStartOf="@id/ior_rank"
        app:layout_constraintTop_toTopOf="@id/ior_rank" />

    <TextView
        android:id="@+id/ior_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        tools:text="西直门集团"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toBottomOf="@id/ior_rank"
        app:layout_constraintEnd_toStartOf="@id/ior_amount"
        app:layout_constraintHorizontal_weight="53"
        app:layout_constraintStart_toEndOf="@id/ior_rank"
        app:layout_constraintTop_toTopOf="@id/ior_rank" />

    <TextView
        android:id="@+id/ior_amount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|right"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        tools:text="¥10000.00"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toBottomOf="@id/ior_rank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="31"
        app:layout_constraintStart_toEndOf="@id/ior_name"
        app:layout_constraintTop_toTopOf="@id/ior_rank" />
</android.support.constraint.ConstraintLayout>