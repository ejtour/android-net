<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/awr_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="充值" />

    <View
        android:id="@+id/awr_content_bg"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awr_title_bar" />

    <TextView
        android:id="@+id/awr_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="充值金额"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@id/awr_content_bg"
        app:layout_constraintTop_toTopOf="@id/awr_content_bg" />

    <TextView
        android:id="@+id/awr_money_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="¥"
        android:textColor="@color/color_222222"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="@id/awr_content_bg"
        app:layout_constraintStart_toStartOf="@id/awr_content_bg"
        app:layout_constraintTop_toBottomOf="@id/awr_label" />

    <com.hll_sc_app.base.widget.ClearEditText
        android:id="@+id/awr_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@null"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColor="@color/color_222222"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@id/awr_money_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/awr_money_symbol" />

    <TextView
        android:id="@+id/awr_next_step"
        style="@style/BtnLogin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="下一步"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awr_content_bg" />

    <FrameLayout
        android:id="@+id/awr_web_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awr_title_bar" />

    <ProgressBar
        android:id="@+id/awr_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="@id/awr_web_view_container"
        app:layout_constraintStart_toStartOf="@id/awr_web_view_container"
        app:layout_constraintTop_toTopOf="@id/awr_web_view_container" />
</android.support.constraint.ConstraintLayout>