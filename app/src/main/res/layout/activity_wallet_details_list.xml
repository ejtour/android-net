<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/wdl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="导出"
        app:tb_rightVisibility="true"
        app:tb_title="余额明细" />

    <RelativeLayout
        android:id="@+id/wdl_filter_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_divider_bottom"
        app:layout_constraintEnd_toEndOf="@+id/wdl_header"
        app:layout_constraintStart_toStartOf="@+id/wdl_header"
        app:layout_constraintTop_toBottomOf="@+id/wdl_header">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wdl_type_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_filter"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="16dp"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="12dp"
            android:text="筛选"
            android:textAppearance="@style/TextAppearance.City22.Middle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wdl_date_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/wdl_type_filter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/wdl_type_filter"
            android:drawableLeft="@drawable/ic_time_filter"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            tools:text="8月份" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wdl_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wdl_type_filter"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="12dp"
            android:text="交易金额：¥— —         交易费用：¥— —"
            android:textAppearance="@style/TextAppearance.City22.Small.Color999"
            android:visibility="gone" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/wdl_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wdl_filter_container">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wdl_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>