<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/fpl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2018年09月24日价格行情" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fpl_region_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/fpl_market_group"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpl_title">

        <TextView
            android:id="@+id/fpl_region_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区："
            android:textAppearance="@style/TextAppearance.City22.Small.Color999"
            app:layout_constraintBaseline_toBaselineOf="@id/fpl_region"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fpl_region"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_border_radius_3"
            android:paddingLeft="7dp"
            android:paddingTop="1dp"
            android:paddingRight="13dp"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:text="北京"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            app:layout_constraintStart_toEndOf="@id/fpl_region_label"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:rotation="90"
            android:src="@drawable/ic_little_right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/fpl_region"
            app:layout_constraintEnd_toEndOf="@id/fpl_region"
            app:layout_constraintTop_toTopOf="@id/fpl_region" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fpl_market_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/fpl_category_group"
        app:layout_constraintStart_toEndOf="@id/fpl_region_group"
        app:layout_constraintTop_toTopOf="@id/fpl_region_group">

        <TextView
            android:id="@+id/fpl_market_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市场："
            android:textAppearance="@style/TextAppearance.City22.Small.Color999"
            app:layout_constraintBaseline_toBaselineOf="@id/fpl_market"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fpl_market"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_border_radius_3"
            android:paddingLeft="7dp"
            android:paddingTop="1dp"
            android:paddingRight="13dp"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:text="全部"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            app:layout_constraintStart_toEndOf="@id/fpl_market_label"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:rotation="90"
            android:src="@drawable/ic_little_right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/fpl_market"
            app:layout_constraintEnd_toEndOf="@id/fpl_market"
            app:layout_constraintTop_toTopOf="@id/fpl_market" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fpl_category_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fpl_market_group"
        app:layout_constraintTop_toTopOf="@id/fpl_region_group">

        <TextView
            android:id="@+id/fpl_category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品类："
            android:textAppearance="@style/TextAppearance.City22.Small.Color999"
            app:layout_constraintBaseline_toBaselineOf="@id/fpl_category"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fpl_category"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_border_radius_3"
            android:paddingLeft="7dp"
            android:paddingTop="1dp"
            android:paddingRight="13dp"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:text="全部"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            app:layout_constraintStart_toEndOf="@id/fpl_category_label"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:rotation="90"
            android:src="@drawable/ic_little_right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/fpl_category"
            app:layout_constraintEnd_toEndOf="@id/fpl_category"
            app:layout_constraintTop_toTopOf="@id/fpl_category" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/fpl_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="注：该数据为国内均价 来源：中国农业信息网"
        android:textColor="@color/color_aeaeae"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="@id/fpl_region_group"
        app:layout_constraintTop_toBottomOf="@id/fpl_region_group" />

    <TextView
        android:id="@+id/fpl_header_category"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color0_1_primary"
        android:gravity="center"
        android:text="品类"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toStartOf="@id/fpl_header_market"
        app:layout_constraintHorizontal_weight="19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpl_tip" />

    <TextView
        android:id="@+id/fpl_header_market"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/color0_1_primary"
        android:gravity="center"
        android:text="批发市场"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toStartOf="@id/fpl_header_max"
        app:layout_constraintHorizontal_weight="33"
        app:layout_constraintStart_toEndOf="@id/fpl_header_category"
        app:layout_constraintTop_toTopOf="@id/fpl_header_category" />

    <TextView
        android:id="@+id/fpl_header_max"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/color0_1_primary"
        android:gravity="center"
        android:text="最高价"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toStartOf="@id/fpl_header_min"
        app:layout_constraintHorizontal_weight="16"
        app:layout_constraintStart_toEndOf="@id/fpl_header_market"
        app:layout_constraintTop_toTopOf="@id/fpl_header_category" />

    <TextView
        android:id="@+id/fpl_header_min"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/color0_1_primary"
        android:gravity="center"
        android:text="最低价"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toStartOf="@id/fpl_header_bulk"
        app:layout_constraintHorizontal_weight="16"
        app:layout_constraintStart_toEndOf="@id/fpl_header_max"
        app:layout_constraintTop_toTopOf="@id/fpl_header_category" />

    <TextView
        android:id="@+id/fpl_header_bulk"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color0_1_primary"
        android:gravity="center"
        android:text="大宗价"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="16"
        app:layout_constraintStart_toEndOf="@id/fpl_header_min"
        app:layout_constraintTop_toTopOf="@id/fpl_header_category" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fpl_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpl_header_category">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fpl_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</android.support.constraint.ConstraintLayout>