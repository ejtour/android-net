<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose"/>

        <RelativeLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_back"
            android:paddingLeft="15dp">

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="287dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_fafafa_radius_20_solid"
                android:drawableLeft="@drawable/ic_search_aeaeae"
                android:drawablePadding="10dp"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColor="@color/base_white"
                android:textColorHint="#FFFFFF" />
            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_clear_search"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/txt_options"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_options"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_select_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="19dp">
            <TextView
                android:id="@+id/txt_date_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_date_filter"
                android:drawablePadding="5dp"
                android:text="今日"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>
            <ImageView
                android:id="@+id/report_date_arrow"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/date_customer_display"
            android:visibility="gone"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_report_date_white"
                android:text="日统计"
                android:drawablePadding="5dp"
                android:textSize="@dimen/base_text_12"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

            <ImageView
                android:id="@+id/report_date_customer_arrow"
                android:src="@drawable/ic_arrow_drop"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:hint="请选择日期"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
            android:textColorHint="@color/color_aeaeae"/>

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="@color/base_white">

        <com.hll_sc_app.widget.SyncHorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/customer_shop_content_detail"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:padding="10dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            </RelativeLayout>

        </com.hll_sc_app.widget.SyncHorizontalScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.hll_sc_app.widget.SyncHorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:id="@+id/customer_shop_total_detail">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_customer_total">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/base_white"/>

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="合计"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_txt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="--"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_order_num"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="订单数"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_valid_order_num"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="有效订单数"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_trade_amount"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="交易金额(元)"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_avg_amount"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="单均(元)"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_refund_num"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="退单数"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_refund_amount"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="退货金额(元)"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd"/>

            <TextView
                android:id="@+id/total_total_amount"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Little"
                tools:text="小计金额(元)"/>

        </LinearLayout>
    </com.hll_sc_app.widget.SyncHorizontalScrollView>

</LinearLayout>