<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/wsn_open_account_bg"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_white_radius_5_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wsn_open_account_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="开通账户"
        android:textAppearance="@style/TextAppearance.City22.Large.Blue"
        app:layout_constraintEnd_toEndOf="@id/wsn_open_account_bg"
        app:layout_constraintStart_toStartOf="@id/wsn_open_account_bg"
        app:layout_constraintTop_toTopOf="@id/wsn_open_account_bg" />

    <TextView
        android:id="@+id/wsn_open_account_btn"
        style="@style/BtnAfterSalesAction.PrimarySolid"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:text="立即申请"
        app:layout_constraintBottom_toBottomOf="@id/wsn_open_account_bg"
        app:layout_constraintEnd_toEndOf="@id/wsn_open_account_bg"
        app:layout_constraintStart_toStartOf="@id/wsn_open_account_bg" />

    <TextView
        android:id="@+id/wsn_open_account_desc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="如果您还未获得“铁金库”的结算账号，请点立即申请先开通“铁金库”账号"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBottom_toTopOf="@id/wsn_open_account_btn"
        app:layout_constraintEnd_toEndOf="@id/wsn_open_account_bg"
        app:layout_constraintStart_toStartOf="@id/wsn_open_account_bg"
        app:layout_constraintTop_toBottomOf="@id/wsn_open_account_label" />

</android.support.constraint.ConstraintLayout>