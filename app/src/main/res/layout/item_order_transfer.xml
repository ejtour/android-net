<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iot_check_box"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/bg_selector_check_box"
        app:layout_constraintBottom_toBottomOf="@+id/iot_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iot_image" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/iot_image"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:base_RoundingRadius="3"
        app:base_placeholder="@drawable/ic_placeholder_shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@+id/iot_check_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="@dimen/dp_10"
        tools:src="@drawable/ic_placeholder_shop" />

    <TextView
        android:id="@+id/iot_tag"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@drawable/bg_transfer_item_tag"
        android:gravity="center"
        android:text="含未关联商品"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iot_image"
        app:layout_constraintEnd_toEndOf="@+id/iot_image"
        app:layout_constraintStart_toStartOf="@+id/iot_image" />

    <TextView
        android:id="@+id/iot_warehouse_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_tag_primary_solid"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="代仓"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iot_name"
        app:layout_constraintEnd_toStartOf="@+id/iot_self_lift_tag"
        app:layout_constraintStart_toStartOf="@+id/iot_money"
        app:layout_constraintTop_toTopOf="@+id/iot_name" />

    <TextView
        android:id="@+id/iot_self_lift_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_tag_primary_stroke"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="自提"
        android:textAppearance="@style/TextAppearance.City22.Little.Primary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iot_name"
        app:layout_constraintEnd_toStartOf="@+id/iot_name"
        app:layout_constraintStart_toEndOf="@+id/iot_warehouse_tag"
        app:layout_constraintTop_toTopOf="@+id/iot_name" />

    <TextView
        android:id="@+id/iot_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iot_self_lift_tag"
        app:layout_constraintTop_toTopOf="@+id/iot_image"
        tools:text="二十二城西直门旗舰店" />

    <TextView
        android:id="@+id/iot_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Red"
        app:layout_constraintStart_toEndOf="@+id/iot_image"
        app:layout_constraintTop_toBottomOf="@+id/iot_name"
        tools:text="¥236.50" />

    <TextView
        android:id="@+id/iot_purchase_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@+id/iot_money"
        app:layout_constraintTop_toBottomOf="@+id/iot_money"
        tools:text="采购商：北京二十二城电子商务有限公司" />

    <TextView
        android:id="@+id/iot_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@+id/iot_image"
        app:layout_constraintStart_toStartOf="@+id/iot_money"
        tools:text="订单号：2186213219" />

    <TextView
        android:id="@+id/iot_extra_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/iot_order_no"
        app:layout_constraintEnd_toEndOf="@+id/iot_name"
        tools:text="要求：2018-06-09 18:20送达" />

    <View
        android:id="@+id/iot_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iot_money"
        app:layout_constraintTop_toBottomOf="@+id/iot_image" />
</android.support.constraint.ConstraintLayout>