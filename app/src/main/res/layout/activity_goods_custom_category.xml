<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:background="@drawable/base_bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="自定义分类"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"/>

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_selector_close"
            android:gravity="center"
            android:text="编辑"
            android:textAppearance="@style/TextAppearance.City22.Middle.White"/>

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt_create_level1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/base_bg_item_white"
            android:gravity="center"
            android:text="新建一级分类"
            android:textAppearance="@style/TextAppearance.City22.Middle.Blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/txt_create_level2"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_create_level2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/base_bg_item_white"
            android:gravity="center"
            android:text="新建二级分类"
            android:textAppearance="@style/TextAppearance.City22.Middle.Blue"
            app:layout_constraintLeft_toRightOf="@+id/txt_create_level1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_level1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/color_fafafa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/recyclerView_level2"
            app:layout_constraintTop_toBottomOf="@+id/txt_create_level1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_level2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/base_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/recyclerView_level1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_create_level2"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>