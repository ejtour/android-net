<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="15dp"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gdd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需求说明："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBottom_toBottomOf="@id/gdd_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gdd_type" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gdd_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_goods_demand_tag"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:textColor="@color/color_379ff1"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintStart_toEndOf="@id/gdd_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="商品外形" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gdd_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_item_goods_detail_name"
        android:lineSpacingExtra="5dp"
        android:padding="@dimen/dp_10"
        android:text="用户在这里输入需求说明，注意写最大宽度和行高"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gdd_type" />

    <com.hll_sc_app.widget.ThumbnailView
        android:id="@+id/gdd_pic_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_10"
        app:ctv_padding="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gdd_content" />
</androidx.constraintlayout.widget.ConstraintLayout>