<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/asr_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="提醒设置" />

    <View
        android:id="@+id/asr_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/ars_label_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/asr_title_bar" />

    <TextView
        android:id="@+id/ars_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:text="订货数量超出日常均值提醒"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintStart_toStartOf="@id/asr_bg"
        app:layout_constraintTop_toTopOf="@id/asr_bg" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/ars_switch"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginRight="@dimen/dp_10"
        app:kswBackDrawable="@drawable/switch_track"
        app:kswThumbDrawable="@drawable/base_thumb"
        app:layout_constraintBottom_toBottomOf="@id/ars_label"
        app:layout_constraintEnd_toEndOf="@id/asr_bg"
        app:layout_constraintTop_toTopOf="@id/ars_label" />

    <TextView
        android:id="@+id/ars_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dp_10"
        android:lineSpacingExtra="4dp"
        android:text="*开启后当订货数量超出日常均值的某个倍数后系统会提示您确认当前的订货数量，避免误操作带来的损失。"
        android:textColor="@color/color_aeaeae"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintEnd_toEndOf="@id/asr_bg"
        app:layout_constraintStart_toStartOf="@id/asr_bg"
        app:layout_constraintTop_toBottomOf="@id/ars_switch" />

    <View
        android:id="@+id/ars_div"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ars_tip" />

    <TextView
        android:id="@+id/ars_label_setting"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:text="设置提醒均值倍数"
        android:textColor="@color/color_aeaeae"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintStart_toStartOf="@id/asr_bg"
        app:layout_constraintTop_toBottomOf="@id/ars_div" />

    <EditText
        android:id="@+id/ars_times"
        android:layout_width="0dp"
        android:gravity="right"
        app:layout_constraintStart_toEndOf="@id/ars_label_setting"
        android:layout_height="45dp"
        android:background="@null"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:padding="@dimen/dp_10"
        android:singleLine="true"
        android:text="5"
        android:textColor="@color/color_aeaeae"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintEnd_toEndOf="@id/asr_bg"
        app:layout_constraintTop_toTopOf="@id/ars_label_setting" />

    <View
        android:id="@+id/ars_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ars_save"
        style="@style/BtnSubmit"
        android:text="保存"
        app:layout_constraintBottom_toBottomOf="@id/ars_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/ars_bottom_bg"
        app:layout_constraintStart_toStartOf="@id/ars_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/ars_bottom_bg" />

    <android.support.constraint.Group
        android:id="@+id/ars_bottom_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="ars_bottom_bg,ars_save" />
</android.support.constraint.ConstraintLayout>