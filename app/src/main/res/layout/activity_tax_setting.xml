<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/ats_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="保存"
        app:tb_rightVisibility="true"
        app:tb_title="税率设置" />

    <TextView
        android:id="@+id/ats_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_item_goods_detail_name"
        android:padding="@dimen/dp_10"
        android:text="税率说明：设置后导出的明细里增加税率、税后金额、税额三个数值。"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ats_title_bar" />

    <TextView
        android:id="@+id/ats_setting"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_divider_top_bottom"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:text="商品特殊税率设置"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ats_tip" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ats_left_list"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="@color/color_fafafa"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ats_setting" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ats_right_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/ats_left_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ats_left_list"
        app:layout_constraintTop_toTopOf="@id/ats_left_list" />
</android.support.constraint.ConstraintLayout>