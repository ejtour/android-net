<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.order.OrderFilterView
        android:id="@+id/fot_filter_view"
        android:visibility="gone"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fot_transfer_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        tools:text="当前有 13 笔待下单的订单" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fot_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fot_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ViewStub
        android:id="@+id/fot_bottom_bar_stub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout="@layout/view_order_bottom_bar" />
</LinearLayout>