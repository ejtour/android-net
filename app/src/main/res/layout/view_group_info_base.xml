<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="RelativeLayout">

    <TextView
        android:id="@+id/gib_avatar_label"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:text="集团标志"
        android:textAppearance="@style/TextAppearance.City22.Middle" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/gib_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@id/gib_avatar_label"
        android:layout_alignRight="@id/gib_avatar_label"
        android:layout_alignBottom="@id/gib_avatar_label"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:base_circle="true"
        app:base_placeholder="@drawable/ic_camera_placeholder"
        tools:src="@drawable/ic_camera_placeholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/gib_avatar_label"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/gib_code_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_avatar_label"
        android:background="@android:color/white"
        android:text="公司编号"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_code"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_code_label"
        android:layout_alignBottom="@id/gib_code_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_code_label"
        android:background="@android:color/white"
        android:textColor="@color/color_666666"
        tools:text="8888888" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/gib_code_label"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/gib_name_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_code_label"
        android:background="@android:color/white"
        android:text="公司名称"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_name"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_name_label"
        android:layout_alignBottom="@id/gib_name_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_name_label"
        android:background="@android:color/white"
        android:textColor="@color/color_666666"
        tools:text="北京二十二城生鲜供应集团" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/gib_name_label"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/gib_address_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_name_label"
        android:background="@android:color/white"
        android:text="详细地址"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_address"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_address_label"
        android:layout_alignBottom="@id/gib_address_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_address_label"
        android:background="@android:color/white"
        android:textColor="@color/color_666666"
        tools:text="西直门凯德大厦" />

    <TextView
        android:id="@+id/gib_info_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_address_label"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:text="企业基础信息"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_info"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_info_label"
        android:layout_alignBottom="@id/gib_info_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_info_label"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:text="查看"
        android:textColor="@color/colorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/gib_info_label"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/gib_contact_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_info_label"
        android:background="@android:color/white"
        android:text="联系人"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_contact"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_contact_label"
        android:layout_alignBottom="@id/gib_contact_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_contact_label"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:hint="——————"
        android:textColor="@color/color_666666"
        tools:text="段经理" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/gib_contact_label"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/gib_phone_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_contact_label"
        android:background="@android:color/white"
        android:text="联系电话"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_phone"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_phone_label"
        android:layout_alignBottom="@id/gib_phone_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_phone_label"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:hint="——————"
        android:tag=""
        android:textColor="@color/color_666666"
        tools:text="138 6688 8866" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/gib_phone_label"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/gib_fax_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_phone_label"
        android:background="@android:color/white"
        android:text="传真"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_fax"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_fax_label"
        android:layout_alignBottom="@id/gib_fax_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_fax_label"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:hint="——————"
        android:textColor="@color/color_666666" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/gib_fax_label"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/gib_email_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_fax_label"
        android:background="@android:color/white"
        android:tag=""
        android:text="邮箱"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_email"
        style="@style/InfoEdit"
        android:layout_alignTop="@id/gib_email_label"
        android:layout_alignBottom="@id/gib_email_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/gib_email_label"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:hint="——————"
        android:textColor="@color/color_666666"
        tools:text="display@22city.cn" />

    <TextView
        android:id="@+id/gib_invite_code_label"
        style="@style/InfoLabel"
        android:layout_below="@id/gib_email_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:text="我的邀请码"
        android:textColor="@color/color_222222" />

    <TextView
        android:id="@+id/gib_invite_code"
        style="@style/InfoEdit"
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/gib_invite_code_label"
        android:layout_alignBottom="@id/gib_invite_code_label"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_qrcode"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:textColor="@color/color_666666" />
</merge>