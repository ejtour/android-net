<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/wos_bg"
        android:layout_width="0dp"
        android:layout_height="412dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/wos_top_bar_bg"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/bg_gray_border_radius_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wos_search_type"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_purchaser_toggle"
        android:gravity="center"
        android:text="集团"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@+id/wos_top_bar_bg"
        app:layout_constraintStart_toStartOf="@+id/wos_top_bar_bg"
        app:layout_constraintTop_toTopOf="@+id/wos_top_bar_bg" />

    <View
        android:id="@+id/wos_ver_div"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginRight="47dp"
        android:background="@color/color_dddddd"
        app:layout_constraintBottom_toBottomOf="@+id/wos_top_bar_bg"
        app:layout_constraintEnd_toEndOf="@+id/wos_top_bar_bg"
        app:layout_constraintTop_toTopOf="@+id/wos_top_bar_bg" />

    <TextView
        android:id="@+id/wos_search_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="搜索"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintBottom_toBottomOf="@+id/wos_top_bar_bg"
        app:layout_constraintEnd_toEndOf="@+id/wos_top_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/wos_ver_div"
        app:layout_constraintTop_toTopOf="@+id/wos_top_bar_bg" />

    <EditText
        android:id="@+id/wos_search_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@null"
        android:hint="请输入关键字搜索"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        android:textColorHint="@color/color_aeaeae"
        app:layout_constraintBottom_toBottomOf="@+id/wos_top_bar_bg"
        app:layout_constraintEnd_toStartOf="@+id/wos_ver_div"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/wos_search_type"
        app:layout_constraintTop_toTopOf="@+id/wos_top_bar_bg" />

    <ImageView
        android:id="@+id/wos_clear_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_clear_search"
        android:tint="@color/color_999999"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/wos_search_edit"
        app:layout_constraintEnd_toStartOf="@+id/wos_ver_div"
        app:layout_constraintTop_toTopOf="@+id/wos_search_edit" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wos_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/wos_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wos_top_bar_bg" />

</android.support.constraint.ConstraintLayout>