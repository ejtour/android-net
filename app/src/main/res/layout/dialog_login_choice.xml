<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="305dp"
    android:layout_height="360dp"
    android:background="@drawable/bg_white_radius_5_solid"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_failure"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="您的账号拥有多个员工类型"
        android:textColor="@color/base_colorPrimary"
        android:textSize="@dimen/base_text_16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="请选择登录哪种类型"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_12"/>

    <TextView
        android:id="@+id/txt_manage"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/base_bg_selector_dialog_confirm"
        android:gravity="center"
        android:text="管理型"
        android:textColor="@color/base_white"
        android:textSize="@dimen/base_text_12"/>

    <TextView
        android:id="@+id/txt_business"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/base_bg_selector_dialog_confirm"
        android:gravity="center"
        android:text="业务型"
        android:textColor="@color/base_white"
        android:textSize="@dimen/base_text_12"/>

    <TextView
        android:id="@+id/txt_no_login"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/base_bg_selector_dialog_cancel"
        android:gravity="center"
        android:text="取消登录"
        android:textColor="@color/base_colorPrimary"
        android:textSize="@dimen/base_text_12"/>
</LinearLayout>
