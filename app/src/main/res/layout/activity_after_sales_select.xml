<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/ass_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:tb_title="选择退货商品"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hll_sc_app.widget.SearchView
        android:id="@+id/ass_search_view"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/ass_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/ass_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/base_bg_shadow_bottom_white_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ass_apply"
        style="@style/BtnAfterSalesAction.PrimarySolid"
        android:text="确认提交"
        app:layout_constraintBottom_toBottomOf="@+id/ass_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ass_bottom_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ass_select_num_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="已选："
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintBottom_toBottomOf="@+id/ass_apply"
        app:layout_constraintStart_toStartOf="@+id/ass_bottom_bg"
        app:layout_constraintTop_toTopOf="@+id/ass_apply" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ass_select_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/TextAppearance.City22.Middle.Red"
        app:layout_constraintBaseline_toBaselineOf="@+id/ass_select_num_label"
        app:layout_constraintStart_toEndOf="@+id/ass_select_num_label" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ass_sum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="合计："
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintBaseline_toBaselineOf="@+id/ass_select_num_label"
        app:layout_constraintStart_toEndOf="@+id/ass_select_num" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ass_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- -"
        android:textAppearance="@style/TextAppearance.City22.Middle.Red"
        app:layout_constraintBaseline_toBaselineOf="@+id/ass_select_num_label"
        app:layout_constraintStart_toEndOf="@+id/ass_sum_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ass_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/ass_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ass_search_view" />
</androidx.constraintlayout.widget.ConstraintLayout>