<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/rog_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightVisibility="true"
        app:tb_title="" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/title_bar_height"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/title_bar_height"
        app:layout_constraintBottom_toBottomOf="@id/rog_title_bar"
        app:layout_constraintEnd_toEndOf="@id/rog_title_bar"
        app:layout_constraintStart_toStartOf="@id/rog_title_bar"
        app:layout_constraintTop_toTopOf="@id/rog_title_bar">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="流失门店明细表"
           android:layout_centerInParent="true"
           android:textSize="@dimen/base_text_18"
           android:textColor="@color/base_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_select_date"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        android:layout_height="45dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_filter_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:drawableLeft="@drawable/ic_report_drawable_date_type_white"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="7日流失"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>
            <ImageView
                android:id="@+id/report_date_arrow"
                android:src="@drawable/ic_arrow_drop"
                android:layout_width="7dp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_date"
            android:drawableRight="@drawable/ic_arrow_drop"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:hint="请选择日期"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
            android:textColorHint="@color/color_aeaeae"/>

    </RelativeLayout>

    <com.hll_sc_app.widget.report.ExcelLayout
        android:id="@+id/ogd_excel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_select_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>