<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="退货时效管理"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_title_center_size"/>

        <TextView
            android:id="@+id/txt_set"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_13"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_explain"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="12dp"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/txt_explain"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="退货时效：是指订单从验货完成开始计算，验货时间+时效天数*24H=最大退货时间；默认退货时效为7天！"
            android:textColor="@color/base_text999"
            android:textSize="@dimen/sp_12"
            android:lineSpacingExtra="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_vip"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_explain"
        android:layout_marginTop="12dp"
        android:background="@drawable/base_bg_item_white">

        <TextView
            android:id="@+id/txt_vip"
            style="@style/SettingStyle"
            android:text="VIP客户退货时效"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rl_explain"
        android:layout_marginTop="67dp"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="5dp"/>
    </LinearLayout>
</RelativeLayout>