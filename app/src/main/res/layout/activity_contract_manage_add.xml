<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tb_title="新建合同" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_999"
                android:textSize="10sp"
                android:text="基本信息" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_type"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="合同类型"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/txt_type"
                    android:layout_width="0dp"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_type"
                    android:layout_height="45dp"
                    android:gravity="center_vertical|right"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="合同名称"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_contract_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    app:layout_constraintTop_toTopOf="@+id/txt_title_name"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_name"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />

                <EditText
                    android:id="@+id/edt_contract_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写合同"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_name"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/border_eee"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_name" />

                <TextView
                    android:id="@+id/txt_title_no"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="合同编号"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_contract_no"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/edt_contract_no" />

                <TextView
                    app:layout_constraintTop_toTopOf="@+id/txt_title_no"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_no"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />

                <EditText
                    android:id="@+id/edt_contract_no"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写合同编号"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_no"
                    app:layout_constraintTop_toBottomOf="@+id/view_divider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="集团名称"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_group_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    app:layout_constraintTop_toTopOf="@+id/txt_title_group_name"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_group_name"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />

                <TextView
                    android:id="@+id/txt_group_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right|center_vertical"
                    android:hint="请选择集团名称"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_group_name"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/border_eee"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_group_name" />

                <TextView
                    android:id="@+id/txt_title_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="门店名称"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_group_name" />

                <TextView
                    app:layout_constraintTop_toTopOf="@+id/txt_title_shop_name"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_shop_name"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:id="@+id/txt_shop_xx"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />

                <TextView
                    android:id="@+id/txt_shop_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right|center_vertical"
                    android:hint="请选择门店名称"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_shop_name"
                    app:layout_constraintTop_toTopOf="@+id/txt_title_shop_name" />

                <View
                    android:id="@+id/view_divider_3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/border_eee"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_shop_name" />

                <TextView
                    android:id="@+id/txt_title_contract_person"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="签约人"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_shop_name" />

                <TextView
                    app:layout_constraintTop_toTopOf="@+id/txt_title_contract_person"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_contract_person"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_contract_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />


                <TextView
                    android:id="@+id/txt_contract_person"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="请选择签约人"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_contract_person"
                    app:layout_constraintTop_toTopOf="@+id/txt_title_contract_person" />

                <View
                    android:id="@+id/view_divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/border_eee"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_contract_person" />

                <TextView
                    android:id="@+id/txt_title_contract_time"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="签约时间"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_contract_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_contract_time" />

                <TextView
                    app:layout_constraintTop_toTopOf="@+id/txt_title_contract_time"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_contract_time"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_contract_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />


                <TextView
                    android:id="@+id/txt_contract_time"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right|center_vertical"
                    android:hint="请选择签约时间"
                    android:textColor="@color/base_text666"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_contract_time"
                    app:layout_constraintTop_toBottomOf="@+id/view_divider_2" />

                <TextView
                    android:id="@+id/txt_title_time_span"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="起止时间"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_contract_time" />

                <TextView
                    app:layout_constraintTop_toTopOf="@+id/txt_title_time_span"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_time_span"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_time_span"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:textSize="@dimen/base_text_13"
                    android:textColor="@color/color_ed5655" />

                <TextView
                    android:id="@+id/txt_contract_time_span"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right|center_vertical"
                    android:hint="请填写起止时间"
                    android:textColor="@color/base_text666"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_time_span"
                    app:layout_constraintTop_toTopOf="@+id/txt_title_time_span" />

                <androidx.constraintlayout.widget.Group
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/group_shop"
                    app:constraint_referenced_ids="txt_shop_xx,txt_shop_name,txt_title_shop_name,view_divider_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_999"
                android:textSize="10sp"
                android:text="业务信息" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_link_main"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="关联主合同"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/txt_link_main"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right|center_vertical"
                    android:hint="关联主合同后该合同即为子合同"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="10dp"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_money"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="本合同金额"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/edt_money"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_money"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_gray_solid_radius_5"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/ic_money_27_39"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_222"
                    android:textSize="24sp"
                    android:hint="0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_product"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="商品明细"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txt_add_product"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="添加商品"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txt_title_product" />

                <com.hll_sc_app.widget.report.ExcelLayout
                    android:padding="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_add_product"
                    android:id="@+id/execl_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附件上传"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_title_upload_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="支持扩展：.rar .zip .doc .docx .pdf .jpg .png"
                    android:textColor="@color/text_aeaeae"
                    android:textSize="@dimen/base_text_10"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_title_upload"
                    app:layout_constraintStart_toEndOf="@+id/txt_title_upload"
                    app:layout_constraintTop_toTopOf="@+id/txt_title_upload" />

                <TextView
                    android:id="@+id/txt_add_fujian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="点击上传"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/base_text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txt_title_upload_2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_gray_stroke_radius_5"
                    android:padding="1dp"
                    android:id="@+id/list_fujian"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:maxHeight="120dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:padding="@dimen/dp_10">

                <EditText
                    android:id="@+id/edt_bk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edit_border_gray_radius_3"
                    android:gravity="left"
                    android:hint="备注信息 (非必选)"
                    android:maxLength="500"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/text_222"
                    android:textSize="@dimen/base_text_12" />

                <TextView
                    android:id="@+id/txt_left_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/text_aeaeae"
                    android:textSize="8sp"
                    tools:text="500" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_btn_submit"
                style="@style/BtnAfterSalesAction.PrimarySolid"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:enabled="false"
                android:text="保存并提交审核" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>