<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/aos_header_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/base_bg_shadow_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/aos_close"
        style="@style/BtnClose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/aos_header_bg"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@+id/aos_header_bg"
        app:layout_constraintTop_toTopOf="@+id/aos_header_bg" />

    <TextView
        android:id="@+id/aos_search_button"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="搜索"
        android:textAppearance="@style/TextAppearance.City22.Middle.White"
        app:layout_constraintBottom_toBottomOf="@+id/aos_header_bg"
        app:layout_constraintEnd_toEndOf="@+id/aos_header_bg"
        app:layout_constraintTop_toTopOf="@+id/aos_header_bg" />

    <EditText
        android:id="@+id/aos_search_edit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_search_edit"
        android:gravity="center_vertical"
        android:hint="请输入采购商公司名称"
        android:paddingLeft="35dp"
        android:paddingRight="30dp"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toBottomOf="@+id/aos_header_bg"
        app:layout_constraintEnd_toStartOf="@+id/aos_search_button"
        app:layout_constraintStart_toEndOf="@+id/aos_close"
        app:layout_constraintTop_toTopOf="@+id/aos_header_bg" />

    <ImageView
        android:id="@+id/aos_search_icon"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:tint="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@+id/aos_search_edit"
        app:layout_constraintStart_toStartOf="@+id/aos_search_edit"
        app:layout_constraintTop_toTopOf="@+id/aos_search_edit" />

    <ImageView
        android:id="@+id/aos_search_clear"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_clear_search"
        android:tint="@color/base_text999"
        app:layout_constraintBottom_toBottomOf="@+id/aos_search_edit"
        app:layout_constraintEnd_toEndOf="@+id/aos_search_edit"
        app:layout_constraintTop_toTopOf="@+id/aos_search_edit" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/aos_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aos_header_bg" />
</android.support.constraint.ConstraintLayout>