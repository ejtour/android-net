<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:layout_margin="@dimen/dp_10">

    <View
        android:id="@+id/iot_div"
        android:layout_width="1.5dp"
        android:layout_height="0dp"
        android:background="@drawable/base_dash_line"
        android:layerType="software"
        app:layout_constraintBottom_toBottomOf="@id/iot_time"
        app:layout_constraintEnd_toEndOf="@id/iot_receive_tag"
        app:layout_constraintStart_toStartOf="@id/iot_receive_tag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iot_receive_tag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/dot_order_trace_large"
        android:gravity="center"
        android:text="收"
        android:textAppearance="@style/TextAppearance.City22.Small.White"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/iot_current_tag"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/dot_order_trace_current"
        app:layout_constraintBottom_toBottomOf="@id/iot_receive_tag"
        app:layout_constraintEnd_toEndOf="@id/iot_receive_tag"
        app:layout_constraintStart_toStartOf="@id/iot_receive_tag"
        app:layout_constraintTop_toTopOf="@id/iot_receive_tag" />

    <View
        android:id="@+id/iot_earlier_tag"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/dot_order_trace_small"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iot_receive_tag"
        app:layout_constraintEnd_toEndOf="@id/iot_receive_tag"
        app:layout_constraintStart_toStartOf="@id/iot_receive_tag"
        app:layout_constraintTop_toTopOf="@id/iot_receive_tag" />

    <TextView
        android:id="@+id/iot_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iot_receive_tag"
        app:layout_constraintTop_toTopOf="@id/iot_receive_tag"
        tools:text="仓库处理中" />

    <com.hll_sc_app.widget.LeakFixedTextView
        android:id="@+id/iot_extra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="4dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/iot_label"
        app:layout_constraintTop_toBottomOf="@id/iot_label" />

    <TextView
        android:id="@+id/iot_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="30dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@id/iot_label"
        app:layout_constraintTop_toBottomOf="@id/iot_extra"
        tools:text="2019-03-18 23:32:34" />
</android.support.constraint.ConstraintLayout>