<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_10"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cst_base_info"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:textColor="@color/text_222"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toTopOf="@+id/cst_base_info"
            tools:text="千禧年春季合同" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_name"
            android:id="@+id/view_divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />

        <TextView
            android:id="@+id/txt_title_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:textColor="@color/base_text666"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_1"
            android:text="合同类型" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_type"
            tools:text="销售合同" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_type"
            android:id="@+id/view_divider_2"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />

        <TextView
            android:id="@+id/txt_title_status"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="合同状态"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_2" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="#F5A623"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_status"
            tools:text="未审核" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_status"
            android:id="@+id/view_divider_3"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />

        <TextView
            android:id="@+id/txt_title_no"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="合同编号"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_3" />

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_no"
            tools:text="HT20190303" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_no"
            android:id="@+id/view_divider_4"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />

        <TextView
            android:id="@+id/txt_title_group_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="集团名称"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_4" />

        <TextView
            android:id="@+id/txt_group_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_group_name"
            tools:text="北京市千禧年餐饮管理股份有限公司" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_group_name"
            android:id="@+id/view_divider_5"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />

        <TextView
            android:id="@+id/txt_title_shop_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="门店名称"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_4" />

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_group_name"
            tools:text="千禧年北京机场店" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_shop_name"
            android:id="@+id/view_divider_6"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />


        <TextView
            android:id="@+id/txt_title_time_span"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="起止时间"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_6" />

        <TextView
            android:id="@+id/txt_time_span"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_time_span"
            tools:text="2019/03/03 - 2019/06/03" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_time_span"
            android:id="@+id/view_divider_7"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />


        <TextView
            android:id="@+id/txt_title_person"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="签约人"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_7" />

        <TextView
            android:id="@+id/txt_person"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_person"
            tools:text="千禧" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_time_span"
            android:id="@+id/view_divider_8"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />


        <TextView
            android:id="@+id/txt_title_time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="签约时间"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_8" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_time"
            tools:text="2019/03/03" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:id="@+id/cst_left_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid">

        <TextView
            android:id="@+id/txt_title_left_days"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="临期天数"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toTopOf="@+id/cst_left_days" />

        <TextView
            android:id="@+id/txt_left_days"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title_left_days"
            tools:text="200" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:id="@+id/cst_link_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid">

        <TextView
            android:id="@+id/txt_title_link_contract"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="关联合同"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toTopOf="@+id/cst_link_contract" />

        <TextView
            android:id="@+id/txt_link_contract"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_arrow_gray"
            app:layout_constraintTop_toTopOf="@+id/txt_title_link_contract"
            tools:text="已经关联 5 份合同" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/txt_link_contract"
            android:id="@+id/view_divider_9"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />

        <TextView
            android:id="@+id/txt_title_contract_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="本合同金额"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/txt_link_contract" />

        <EditText
            android:paddingLeft="14dp"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_money_42_60"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_contract_amount"
            android:id="@+id/edt_contract_amount"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_title_contract_amount"
            android:layout_height="50dp"
            android:background="@drawable/bg_gray_solid_radius_5"
            android:textSize="24sp"
            android:textColor="@color/text_222"
            android:textStyle="bold"
            tools:text="500000" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/edt_contract_amount"
            android:id="@+id/view_divider_10"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider" />

        <TextView
            android:id="@+id/txt_title_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:text="商品明细"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_10" />

        <com.hll_sc_app.widget.SyncHorizontalScrollView
            android:layout_width=""
            android:layout_height=""
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_product_list"
            android:background="@drawable/bg_gray_stroke_radius_5"
            android:id="@+id/list_product"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>



    </android.support.constraint.ConstraintLayout>


