<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="15dp"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="15dp">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/rcc_image"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:base_RoundingRadius="3"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rcc_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rcc_image"
        app:layout_constraintTop_toTopOf="@id/rcc_image"
        tools:text="客户门店名称" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rcc_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@id/rcc_image"
        app:layout_constraintEnd_toEndOf="@id/rcc_shop"
        app:layout_constraintStart_toStartOf="@id/rcc_shop"
        tools:text="客户集团名称" />

    <View
        android:id="@+id/rcc_div1"
        android:layout_width="0.5dp"
        android:layout_height="30dp"
        android:layout_marginTop="21dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toStartOf="@id/rcc_div2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcc_image" />

    <View
        android:id="@+id/rcc_div2"
        android:layout_width="0.5dp"
        android:layout_height="30dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rcc_div1"
        app:layout_constraintTop_toTopOf="@id/rcc_div1" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rcc_sales_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toStartOf="@id/rcc_div1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcc_image"
        tools:text="20,000.00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rcc_sales_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="总销售额(元)"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toEndOf="@id/rcc_sales_amount"
        app:layout_constraintStart_toStartOf="@id/rcc_sales_amount"
        app:layout_constraintTop_toBottomOf="@id/rcc_sales_amount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rcc_return_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toStartOf="@id/rcc_div2"
        app:layout_constraintStart_toEndOf="@id/rcc_div1"
        app:layout_constraintTop_toTopOf="@id/rcc_sales_amount"
        tools:text="20,000.00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="总回款额(元)"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toEndOf="@id/rcc_return_amount"
        app:layout_constraintStart_toStartOf="@id/rcc_return_amount"
        app:layout_constraintTop_toBottomOf="@id/rcc_return_amount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rcc_no_return_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rcc_div2"
        app:layout_constraintTop_toTopOf="@id/rcc_sales_amount"
        tools:text="20,000.00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="未回款额(元)"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toEndOf="@id/rcc_no_return_amount"
        app:layout_constraintStart_toStartOf="@id/rcc_no_return_amount"
        app:layout_constraintTop_toBottomOf="@id/rcc_no_return_amount" />

    <View
        android:id="@+id/rcc_hor_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcc_sales_amount_label" />

    <LinearLayout
        android:id="@+id/rcc_excel_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/base_activity_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcc_hor_line">

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="56"
            android:gravity="center"
            android:text="月份"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center"
            android:text="应收款"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center"
            android:text="回款额(元)"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center"
            android:text="未收款(元)"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcc_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcc_excel_title" />
</androidx.constraintlayout.widget.ConstraintLayout>