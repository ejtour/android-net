<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/acc_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">

        <com.hll_sc_app.widget.SearchView
            android:id="@+id/acc_search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/vtb_left_image"
            app:layout_constraintEnd_toStartOf="@id/vtb_right_image"
            app:layout_constraintStart_toEndOf="@id/vtb_left_image"
            app:layout_constraintTop_toTopOf="@id/vtb_left_image"
            app:layout_goneMarginRight="16dp" />
    </com.hll_sc_app.widget.TitleBar>

    <RelativeLayout
        android:id="@+id/acc_info_group"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white">

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/acc_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            app:base_placeholder="@drawable/ic_group_placeholder"
            tools:src="@drawable/ic_group_placeholder" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/acc_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_arrow_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/acc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/acc_image"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/acc_arrow"
            android:layout_toRightOf="@id/acc_image"
            android:textAppearance="@style/TextAppearance.City22.Large"
            tools:text="北京市二十二城采购集团" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/acc_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/acc_name"
            android:layout_alignRight="@id/acc_name"
            android:layout_alignBottom="@id/acc_image"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            tools:text="联系人：二经理 / 13202220222" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/acc_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/acc_contact"
            android:layout_alignLeft="@id/acc_name"
            android:layout_alignRight="@id/acc_name"
            android:layout_marginBottom="4dp"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            tools:text="默认结算方式：货到付款" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/acc_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_cooperation_title_shop"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        tools:text="本集团共计 35 个门店，其中 2 个新店" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/acc_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/acc_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>