<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        tools:text="微信" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iat_status"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        tools:text="解除绑定" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iat_flag"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/iat_status"
        android:background="@drawable/bg_02c160_circle"
        android:padding="4dp"
        android:src="@drawable/ic_login_wx"
        tools:background="@drawable/bg_ddddd_circle" />
</RelativeLayout>