<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="店铺信息"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_title_center_size" />

        <TextView
            android:id="@+id/txt_set"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_13" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_supplier_shop_title"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@drawable/ic_supplier_shop_title" />


    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_below="@+id/img_supplier_shop_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/base_white">
        <RelativeLayout
            android:id="@+id/rl_shop_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="49dp"
            android:background="@color/base_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="店铺名称"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/txt_shop_name_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/txt_shop_name"
                android:gravity="center_vertical|right"
                android:hint="无店铺名称"
                android:text="店铺名称"
                android:singleLine="true"
                android:textColor="@color/color_aeaeae"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_divide_shop_name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"
            android:layout_below="@id/rl_shop_name"
            android:layout_marginLeft="94dp"
            android:layout_marginRight="20dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shop_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/rl_shop_name"
            android:background="@color/base_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="店铺电话"
                android:textColor="@color/color_666666"/>

            <EditText
                android:id="@+id/et_shop_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入电话"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_divide_shop_phone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"
            android:layout_below="@id/rl_shop_phone"
            android:layout_marginLeft="94dp"
            android:layout_marginRight="20dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shop_admin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/rl_shop_phone"
            android:background="@color/base_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_shop_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="负责人"
                android:textColor="@color/color_666666"/>

            <EditText
                android:id="@+id/et_shop_admin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入负责人"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_divide_shop_admin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"
            android:layout_below="@id/rl_shop_admin"
            android:layout_marginLeft="94dp"
            android:layout_marginRight="20dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shop_area"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/rl_shop_admin"
            android:background="@color/base_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_shop_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所在区域"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/txt_shop_area_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请选择区域"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:drawablePadding="10dp"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_divide_shop_area"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"
            android:layout_below="@id/rl_shop_area"
            android:layout_marginLeft="94dp"
            android:layout_marginRight="20dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shop_address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/rl_shop_area"
            android:background="@color/base_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <TextView
                android:id="@+id/txt_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="详细地址"
                android:textColor="@color/color_666666"/>

            <EditText
                android:id="@+id/et_shop_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入地址"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/rl_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_supplier_shop"
        android:layout_marginTop="@dimen/dp_40">

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/img_imagePath"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_shop_icon"
            android:padding="5dp"
            android:src="@drawable/ic_shop_placeholder_camera"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/rl_detail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/base_white">

        <RelativeLayout
            android:id="@+id/rl_open_time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="营业时间"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/txt_open_time_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:hint="请选择营业时间"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:drawablePadding="10dp"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_divide_open_time"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"
            android:layout_below="@id/rl_open_time"
            android:layout_marginLeft="94dp"
            android:layout_marginRight="20dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_status"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:layout_below="@id/rl_open_time"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="营业状态"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/txt_status_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:hint="请选择营业状态"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:drawablePadding="10dp"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_divide_status"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"
            android:layout_below="@id/rl_status"
            android:layout_marginLeft="94dp"
            android:layout_marginRight="20dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_category"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            android:layout_below="@id/rl_status"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="经营品类"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/txt_category_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:hint="请选择经营品类"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:drawablePadding="10dp"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                android:textColorHint="@color/color_aeaeae"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>