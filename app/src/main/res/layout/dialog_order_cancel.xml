<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/base_bg_white_radius_5_solid"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/doc_title"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="您确定要取消该订单么？"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/doc_group"
        app:layout_constraintStart_toStartOf="@id/doc_title"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        tools:text="集团：美日美鲜食品有限公司"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doc_title"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/doc_shop"
        app:layout_constraintStart_toStartOf="@id/doc_title"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        tools:text="门店：北京西城区31号店"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/doc_group"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/doc_edit"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_edit_border_gray_radius_3"
        android:gravity="top"
        android:padding="@dimen/dp_10"
        android:maxLength="200"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        android:textColorHint="@color/color_aeaeae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doc_shop"
        android:hint="取消原因" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/doc_remain_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/color_aeaeae"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/doc_edit"
        app:layout_constraintEnd_toEndOf="@+id/doc_edit"
        android:text="200" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/doc_cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toStartOf="@+id/doc_ver_line"
        app:layout_constraintStart_toStartOf="@+id/doc_edit"
        app:layout_constraintTop_toBottomOf="@+id/doc_edit"
        android:text="容我再想想" />

    <View
        android:id="@+id/doc_ver_line"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:background="@color/color_d8d8d8"
        app:layout_constraintBottom_toBottomOf="@+id/doc_cancel"
        app:layout_constraintEnd_toStartOf="@+id/doc_ok"
        app:layout_constraintStart_toEndOf="@+id/doc_cancel"
        app:layout_constraintTop_toTopOf="@+id/doc_cancel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/doc_ok"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintEnd_toEndOf="@+id/doc_edit"
        app:layout_constraintStart_toEndOf="@+id/doc_ver_line"
        app:layout_constraintTop_toTopOf="@+id/doc_cancel"
        android:text="确认拒绝" />
</androidx.constraintlayout.widget.ConstraintLayout>