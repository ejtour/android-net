<?xml version="1.0" encoding="utf-8"?>
<com.hll_sc_app.base.widget.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/base_bg_item_white"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/bg_selector_check_box"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/img_imagePath"
            android:layout_width="60dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/img_select"
            android:src="@drawable/ic_shop_placeholder"
            app:base_placeholder="@drawable/ic_shop_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_goneMarginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/txt_shopAdmin"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/img_imagePath"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_imagePath"
            tools:text="供应链对接集团"/>

        <TextView
            android:id="@+id/txt_shopAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/txt_shopAddress"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/img_imagePath"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_shopName"
            tools:text="联系人：王铁锤 ／ 137 0987 6543"/>

        <TextView
            android:id="@+id/txt_shopAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/img_imagePath"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/img_imagePath"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_shopAdmin"
            tools:text="合作1个门店"/>

        <TextView
            android:id="@+id/txt_newShopNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_tag_primary_solid"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:text="新申请门店"
            android:textAppearance="@style/TextAppearance.City22.Little.White"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/txt_shopName"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/txt_shopName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_shopName"/>

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/base_colorPrimary">

        <TextView
            android:id="@+id/txt_del"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="解除"
            android:textAppearance="@style/TextAppearance.City22.Middle.White"/>
    </FrameLayout>


</com.hll_sc_app.base.widget.SwipeItemLayout>

