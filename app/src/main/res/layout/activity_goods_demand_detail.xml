<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/gdd_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="查看新品反馈" />

    <View
        android:id="@+id/gdd_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gdd_reply_sale"
        style="@style/BtnAfterSalesAction.PrimaryStroke"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:minWidth="100dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="回复销售"
        app:layout_constraintBottom_toBottomOf="@id/gdd_bottom_bg"
        app:layout_constraintEnd_toStartOf="@id/gdd_reply_custome"
        app:layout_constraintTop_toTopOf="@id/gdd_bottom_bg" />

    <TextView
        android:id="@+id/gdd_reply_custome"
        style="@style/BtnAfterSalesAction.PrimarySolid"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:minWidth="100dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="回复客户"
        app:layout_constraintBottom_toBottomOf="@id/gdd_bottom_bg"
        app:layout_constraintEnd_toStartOf="@id/gdd_notice"
        app:layout_constraintTop_toTopOf="@id/gdd_bottom_bg" />

    <TextView
        android:id="@+id/gdd_notice"
        style="@style/BtnAfterSalesAction.PrimarySolid"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="通知客户已上架"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/gdd_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/gdd_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/gdd_bottom_bg" />

    <android.support.constraint.Group
        android:id="@+id/gdd_bottom_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="gdd_bottom_bg,gdd_reply_sale,gdd_reply_custome" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gdd_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="5dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/gdd_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gdd_title_bar" />
</android.support.constraint.ConstraintLayout>