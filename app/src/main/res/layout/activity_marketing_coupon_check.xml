<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="优惠券详情" />

    <View
        android:id="@+id/view_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/base_white"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_8"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <View
        android:id="@+id/view_divider_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintTop_toTopOf="@id/view_back" />

    <TextView
        android:id="@+id/txt_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优惠券名称"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_1"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_back" />

    <TextView
        android:id="@+id/txt_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="right"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_back"
        tools:text="充值满额返现优惠券" />

    <View
        android:id="@+id/view_divider_2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_1" />


    <TextView
        android:id="@+id/txt_title_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单张面额"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_2"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_1" />

    <TextView
        android:id="@+id/txt_content_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="right"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_2"
        app:layout_constraintEnd_toEndOf="@id/txt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_1"
        tools:text="500" />

    <View
        android:id="@+id/view_divider_3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_2" />

    <TextView
        android:id="@+id/txt_title_time_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效期限"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_3"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_2" />

    <TextView
        android:id="@+id/txt_content_time_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="right"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_3"
        app:layout_constraintEnd_toEndOf="@id/txt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_2"
        tools:text="领券起 30 日有效" />

    <View
        android:id="@+id/view_divider_5"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_3" />

    <TextView
        android:id="@+id/txt_title_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用条件"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_5"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_3" />

    <TextView
        android:id="@+id/txt_content_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="right"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_5"
        app:layout_constraintEnd_toEndOf="@id/txt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_3"
        tools:text="满5000元可使用" />

    <View
        android:id="@+id/view_divider_6"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_5" />

    <TextView
        android:id="@+id/txt_title_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建人"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_6"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_5" />

    <TextView
        android:id="@+id/txt_content_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toEndOf="@id/txt_content_name"
        app:layout_constraintTop_toTopOf="@id/txt_title_person"
        tools:text="王铁锤" />

    <View
        android:id="@+id/view_divider_7"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintTop_toTopOf="@id/view_divider_6" />

    <TextView
        android:id="@+id/txt_title_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建时间"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_7"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_6" />

    <TextView
        android:id="@+id/txt_content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toEndOf="@id/txt_content_name"
        app:layout_constraintTop_toTopOf="@id/txt_title_time"
        tools:text="2019/02/20 12:34" />

    <View
        android:id="@+id/view_divider_8"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintTop_toTopOf="@id/view_divider_7" />

    <TextView
        android:id="@+id/txt_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用详情"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_8"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_7" />

    <TextView
        android:id="@+id/txt_content_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/ic_little_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:hint="点击查看使用详情"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toEndOf="@id/txt_content_name"
        app:layout_constraintTop_toTopOf="@id/txt_title_detail" />


</android.support.constraint.ConstraintLayout>