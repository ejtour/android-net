<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical"
   >
    <com.hll_sc_app.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:base_title="开通企业钱包" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前营业执照的公司名称："
            android:textColor="@color/text_999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:src="@drawable/ic_company"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />

        <EditText
            android:id="@+id/edt_company_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="27dp"
            android:background="@null"
            android:hint="请输入营业执照上的公司名称"
            android:textColor="@color/text_222"
            android:textColorHint="@color/text_aeaeae"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_company_name"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            tools:text="北京市二十二城电子商务有限公司" />

        <View
            android:id="@+id/view_border"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/border_eee"
            app:layout_constraintTop_toBottomOf="@id/edt_company_name" />

        <ImageView
            android:id="@+id/img_alert"
            android:layout_width="12sp"
            android:layout_height="12sp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_dialog_state_failure"
            android:tint="#F6BB42"
            app:layout_constraintTop_toBottomOf="@id/view_border" />

        <TextView
            android:id="@+id/txt_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="请确认输入营业执照名称，否则审核不通过"
            android:textColor="#F6BB42"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/img_alert"
            app:layout_constraintTop_toBottomOf="@id/view_border" />

        <TextView
            android:id="@+id/txt_next"
            style="@style/BtnAfterSalesAction.PrimarySolid"
            android:layout_width="match_parent"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp"
            android:layout_marginTop="28dp"
            android:text="确认进入下一步"
            app:layout_constraintTop_toBottomOf="@id/txt_alert" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>