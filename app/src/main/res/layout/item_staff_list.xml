<?xml version="1.0" encoding="utf-8"?>
<com.hll_sc_app.base.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/img_logoUrl"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_staff_placeholder"
            app:base_placeholder="@drawable/ic_staff_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_employeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/txt_loginPhone"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_logoUrl"
            tools:text="北京太好吃家常菜" />

        <TextView
            android:id="@+id/txt_loginPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_staff_phone"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/txt_roles"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_employeeName"
            tools:text="137 0987 6543" />

        <TextView
            android:id="@+id/txt_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_staff_roles"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/img_logoUrl"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_loginPhone"
            tools:text="拥有职务3个" />

        <TextView
            android:id="@+id/txt_departs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:drawableLeft="@drawable/ic_depart"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/view_divider"
            app:layout_constraintTop_toTopOf="@+id/txt_loginPhone"
            tools:text="归属部门3个" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/base_color_divider"
            app:layout_constraintBottom_toBottomOf="@+id/txt_roles"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_loginPhone"
            app:layout_constraintTop_toTopOf="@+id/txt_loginPhone" />


    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/base_colorPrimary">

        <TextView
            android:id="@+id/txt_del"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="删除"
            android:textAppearance="@style/TextAppearance.City22.Middle.White" />
    </FrameLayout>

</com.hll_sc_app.base.widget.SwipeItemLayout>

