<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    tools:parentTag="RelativeLayout"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="match_parent"
    tools:layout_height="@dimen/title_bar_height"
    tools:background="@drawable/base_bg_shadow_top_bar">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stb_close"
        style="@style/BtnClose"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stb_search_button"
        android:layout_width="60dp"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="搜索"
        android:textAppearance="@style/TextAppearance.City22.Middle.White" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/stb_search_edit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/stb_search_button"
        android:layout_toRightOf="@id/stb_close"
        android:background="@drawable/bg_search_edit"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:paddingLeft="35dp"
        android:paddingRight="30dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stb_search_icon"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/stb_search_edit"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_search"
        android:tint="@color/color_999999" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stb_search_clear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/stb_search_edit"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_clear_search"
        android:tint="@color/base_text999"
        android:visibility="gone"
        tools:visibility="visible" />
</merge>