<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/base_bg_shadow_bottom_bar"
    tools:gravity="right|center_vertical"
    tools:layout_height="@dimen/bottom_bar_height"
    tools:layout_width="match_parent"
    tools:paddingLeft="@dimen/dp_10"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <TextView
        android:id="@+id/oab_settle"
        style="@style/BtnOrderAction.PrimarySolid"
        android:text="立即收款"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oab_deliver"
        style="@style/BtnOrderAction.PrimarySolid"
        android:text="确认发货"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oab_settle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oab_receive"
        style="@style/BtnOrderAction.PrimarySolid"
        android:text="立即接单"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oab_deliver"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oab_modify"
        style="@style/BtnOrderAction.PrimaryStroke"
        android:text="修改发货数量"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oab_receive"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oab_inspection"
        style="@style/BtnOrderAction.PrimarySolid"
        android:text="验货"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oab_modify"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oab_reject"
        style="@style/BtnOrderAction.PrimaryStroke"
        android:text="拒收"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oab_inspection"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oab_cancel"
        style="@style/BtnOrderAction.GrayStroke"
        android:text="取消订单"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oab_reject"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oab_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oab_cancel"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="采购商仍需补差价¥0.01" />

    <TextView
        android:id="@+id/oab_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已提交验货数量，等待采购商确认"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</merge>