<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbars="none"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/txt_title_legal_person"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="受益人是否是法人"
                android:textColor="@color/text_666"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_legal_person"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/txt_title_legal_person"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|right"
                android:hint="请选择受益人是否为法人"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp"
                android:visibility="gone" />

            <View
                android:id="@+id/border"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/txt_title_legal_person"
                android:background="@color/border_eee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_title_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/border"
                android:paddingTop="@dimen/dp_10"
                android:text="身份证正面照"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_sub_title_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_title_head"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_title_head"
                android:text="请拍照或从相册中选择上传"
                android:textColor="@color/text_aeaeae"
                android:textSize="10sp" />

            <com.hll_sc_app.base.widget.ImgUploadBlock
                android:id="@+id/img_card_front"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/txt_title_head"
                android:layout_marginTop="@dimen/dp_10"
                app:base_imgIcon="@drawable/base_ic_img_add"
                app:base_subTitle=" "
                app:base_title="点击上传证件照正面" />

            <TextView
                android:id="@+id/txt_title_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_card_front"
                android:layout_marginTop="20dp"
                android:text="身份证背面照"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_sub_title_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_title_inner"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_title_inner"
                android:text="请拍照或从相册中选择上传"
                android:textColor="@color/text_aeaeae"
                android:textSize="10sp" />

            <com.hll_sc_app.base.widget.ImgUploadBlock
                android:id="@+id/img_card_back"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/txt_title_inner"
                android:layout_marginTop="@dimen/dp_10"
                app:base_imgIcon="@drawable/base_ic_img_add"
                app:base_subTitle=" "
                app:base_title="点击上传证件照反面"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/txt_title_lpName"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="法人姓名"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_lpName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/txt_title_lpName"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入法人姓名"
                android:singleLine="true"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp" />

            <View
                android:id="@+id/border1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/edt_lpName"
                android:background="@color/border_eee" />

            <View
                android:id="@+id/border2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_title_lpName"
                android:background="@color/border_eee" />

            <TextView
                android:id="@+id/txt_title_lpIDCardNo"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_lpName"
                android:gravity="center_vertical"
                android:text="身份证号"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_lpIDCardNo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_lpName"
                android:layout_toRightOf="@+id/txt_title_lpIDCardNo"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入法人身份证号"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp" />

            <View
                android:id="@+id/border3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/edt_lpIDCardNo"
                android:background="@color/border_eee" />

            <TextView
                android:id="@+id/txt_title_lp_begin_date"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_lpIDCardNo"
                android:gravity="center_vertical"
                android:text="起始日期"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_lp_begin_date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_lpIDCardNo"
                android:layout_toRightOf="@+id/txt_title_lp_begin_date"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|right"
                android:hint="请输入法人证件起始日期"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp" />

            <View
                android:id="@+id/border4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_lp_begin_date"
                android:background="@color/border_eee" />

            <TextView
                android:id="@+id/txt_title_lp_end_date"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_lp_begin_date"
                android:gravity="center_vertical"
                android:text="结束日期"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_lp_end_date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_lp_begin_date"
                android:layout_toRightOf="@+id/txt_title_lp_end_date"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|right"
                android:hint="请输入法人证件结束日期"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp" />

            <View
                android:id="@+id/border5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_lp_end_date"
                android:background="@color/border_eee" />

            <TextView
                android:id="@+id/txt_title_lpAddress"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_lp_end_date"
                android:gravity="center_vertical"
                android:text="法人证件地址"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_lpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_lp_end_date"
                android:layout_toRightOf="@+id/txt_title_lpAddress"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入法人证件地址"
                android:maxLength="50"
                android:minHeight="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>


