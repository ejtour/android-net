<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/adr_title_bar_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/base_bg_shadow_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/adr_close"
        style="@style/BtnClose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/adr_title_bar_bg"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/adr_title_bar_bg"
        app:layout_constraintTop_toTopOf="@id/adr_title_bar_bg" />

    <com.hll_sc_app.widget.SearchView
        android:id="@+id/adr_search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/adr_title_bar_bg"
        app:layout_constraintEnd_toEndOf="@id/adr_title_bar_bg"
        app:layout_constraintStart_toEndOf="@id/adr_close"
        app:layout_constraintTop_toTopOf="@id/adr_title_bar_bg" />

    <TextView
        android:id="@+id/adr_filter_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:text="按日期筛选"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adr_title_bar_bg" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/adr_arrow"
        android:layout_width="8dp"
        android:layout_height="5dp"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/adr_filter_btn"
        app:layout_constraintEnd_toEndOf="@id/adr_filter_btn"
        app:layout_constraintTop_toTopOf="@id/adr_filter_btn"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <TextView
        android:id="@+id/adr_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="5dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@id/adr_filter_btn"
        app:layout_constraintEnd_toStartOf="@id/adr_arrow"
        app:layout_constraintTop_toTopOf="@id/adr_filter_btn"
        tools:text="2018/08/09" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/adr_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adr_filter_btn">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/adr_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>