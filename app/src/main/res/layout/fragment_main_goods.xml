<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg">

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/base_colorPrimary"/>

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_below="@+id/space"
        android:background="@color/base_colorPrimary">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_productStatus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:background="@drawable/bg_goods_title"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="上架商品"
                android:textAppearance="@style/TextAppearance.City22.Large.White"
                android:textColor="@drawable/bg_goods_title_text"/>

            <RadioButton
                android:id="@+id/rb_productStatus5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:background="@drawable/bg_goods_title"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="下架商品"
                android:textAppearance="@style/TextAppearance.City22.Large.White"
                android:textColor="@drawable/bg_goods_title_text"/>
        </RadioGroup>

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_options"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/rl_toolbar"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/bg_goods_search"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_search"
                android:tint="@color/color_aeaeae"/>

            <TextView
                android:id="@+id/txt_searchContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="搜索"
                android:singleLine="true"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/color_aeaeae"
                android:textSize="@dimen/base_text_12"/>

            <ImageView
                android:id="@+id/img_searchClear"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear_search"
                android:tint="@color/color_aeaeae"
                android:visibility="gone"/>

        </LinearLayout>

    </FrameLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_search"
        android:background="@android:color/white"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_corner_radius="1dp"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="65dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="@color/color_999999"
        app:tl_textsize="@dimen/base_text_13"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
