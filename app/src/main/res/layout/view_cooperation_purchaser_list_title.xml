<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/base_white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/txt_title_group_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_cooperation_title_shop"
        android:drawablePadding="5dp"
        android:text="您已合作 "
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>

    <TextView
        android:id="@+id/txt_groupTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        tools:text="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=" 家集团，共计 "
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>

    <TextView
        android:id="@+id/txt_shopTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        tools:text="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=" 个门店"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>

</LinearLayout>