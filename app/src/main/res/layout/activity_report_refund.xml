<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_main_mine_background" />

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/arr_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@android:color/transparent"
        app:tb_title="退货客户与商品统计" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/arr_refund_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/arr_title_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/arr_refund_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/ic_report_order"
            android:drawablePadding="5dp"
            android:text="退回统计"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/arr_refund_div"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arr_refund_title" />

        <TextView
            android:id="@+id/arr_refund_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_222222"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@id/arr_refund_div"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/arr_refund_div"
            tools:text="24" />

        <TextView
            android:id="@+id/arr_refund_num_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="退货单(笔)"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintEnd_toEndOf="@id/arr_refund_num"
            app:layout_constraintStart_toStartOf="@id/arr_refund_num"
            app:layout_constraintTop_toBottomOf="@id/arr_refund_num" />

        <TextView
            android:id="@+id/arr_customer_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:singleLine="true"
            android:text="0/0"
            android:textColor="@color/color_222222"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/arr_refund_div"
            app:layout_constraintTop_toTopOf="@id/arr_refund_num"
            tools:text="12/12" />

        <TextView
            android:id="@+id/arr_customer_num_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="退货客户数"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintEnd_toEndOf="@id/arr_customer_num"
            app:layout_constraintStart_toStartOf="@id/arr_customer_num"
            app:layout_constraintTop_toBottomOf="@+id/arr_customer_num" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/arr_amount_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/arr_refund_group"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:paddingBottom="22dp">

        <TextView
            android:id="@+id/arr_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/ic_after_sales_money"
            android:drawablePadding="5dp"
            android:text="金额统计"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/arr_total_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/color_222222"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arr_amount_title"
            tools:text="40,000.00" />

        <TextView
            android:id="@+id/arr_total_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="退款金额（元）"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintEnd_toEndOf="@id/arr_total_amount"
            app:layout_constraintStart_toStartOf="@id/arr_total_amount"
            app:layout_constraintTop_toBottomOf="@id/arr_total_amount" />

        <View
            android:id="@+id/arr_amount_hor_div"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="45dp"
            android:background="@color/color_eeeeee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arr_total_amount_label" />

        <View
            android:id="@+id/arr_amount_div1"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:background="@color/color_eeeeee"
            app:layout_constraintEnd_toStartOf="@id/arr_amount_div2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arr_amount_hor_div" />

        <View
            android:id="@+id/arr_amount_div2"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@id/arr_amount_div3"
            app:layout_constraintStart_toEndOf="@id/arr_amount_div1"
            app:layout_constraintTop_toTopOf="@id/arr_amount_div1" />

        <View
            android:id="@+id/arr_amount_div3"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/arr_amount_div2"
            app:layout_constraintTop_toTopOf="@id/arr_amount_div1" />

        <TextView
            android:id="@+id/arr_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="22dp"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="0.00"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constraintEnd_toStartOf="@id/arr_amount_div1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arr_amount_hor_div"
            tools:text="10,000.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="现金(元)"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintEnd_toEndOf="@id/arr_cash"
            app:layout_constraintStart_toStartOf="@id/arr_cash"
            app:layout_constraintTop_toBottomOf="@id/arr_cash" />

        <TextView
            android:id="@+id/arr_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="0.00"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constraintEnd_toStartOf="@id/arr_amount_div2"
            app:layout_constraintStart_toEndOf="@id/arr_amount_div1"
            app:layout_constraintTop_toTopOf="@id/arr_cash"
            tools:text="10,000.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="线上支付(元)"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintEnd_toEndOf="@id/arr_online"
            app:layout_constraintStart_toStartOf="@id/arr_online"
            app:layout_constraintTop_toBottomOf="@id/arr_online" />

        <TextView
            android:id="@+id/arr_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="0.00"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constraintEnd_toStartOf="@id/arr_amount_div3"
            app:layout_constraintStart_toEndOf="@id/arr_amount_div2"
            app:layout_constraintTop_toTopOf="@id/arr_cash"
            tools:text="10,000.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="银行卡(元)"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintEnd_toEndOf="@id/arr_card"
            app:layout_constraintStart_toStartOf="@id/arr_card"
            app:layout_constraintTop_toBottomOf="@id/arr_card" />

        <TextView
            android:id="@+id/arr_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="0.00"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/arr_amount_div3"
            app:layout_constraintTop_toTopOf="@id/arr_cash"
            tools:text="10,000.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="账期支付(元)"
            android:textAppearance="@style/TextAppearance.City22.Little.Color999"
            app:layout_constraintEnd_toEndOf="@id/arr_account"
            app:layout_constraintStart_toStartOf="@id/arr_account"
            app:layout_constraintTop_toBottomOf="@id/arr_account" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/arr_first_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/arr_amount_group"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid">

        <TextView
            android:id="@+id/arr_first_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_arrow_blue"
            android:drawablePadding="5dp"
            android:text="查看退货客户统计明细"
            android:textAppearance="@style/TextAppearance.City22.Middle.Blue" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/arr_second_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/arr_first_btn"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid">

        <TextView
            android:id="@+id/arr_second_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_arrow_blue"
            android:drawablePadding="5dp"
            android:text="查看退货商品统计明细"
            android:textAppearance="@style/TextAppearance.City22.Middle.Blue" />
    </FrameLayout>
</RelativeLayout>