<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/pss_bg"
        android:layout_width="0dp"
        android:layout_height="412dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/pss_top_bar_bg"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/bg_gray_border_radius_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/pss_toggle_btn"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_purchaser_toggle"
        app:layout_constraintBottom_toBottomOf="@+id/pss_top_bar_bg"
        app:layout_constraintStart_toStartOf="@+id/pss_top_bar_bg"
        app:layout_constraintTop_toTopOf="@+id/pss_top_bar_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pss_search_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="集团"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@+id/pss_top_bar_bg"
        app:layout_constraintEnd_toStartOf="@+id/pss_triangle"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/pss_top_bar_bg"
        app:layout_constraintTop_toTopOf="@+id/pss_top_bar_bg" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/pss_triangle"
        android:layout_width="7dp"
        android:layout_height="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/pss_top_bar_bg"
        app:layout_constraintEnd_toEndOf="@+id/pss_toggle_btn"
        app:layout_constraintStart_toEndOf="@+id/pss_search_type"
        app:layout_constraintTop_toTopOf="@+id/pss_top_bar_bg"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <View
        android:id="@+id/pss_ver_div"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginRight="47dp"
        android:background="@color/color_dddddd"
        app:layout_constraintBottom_toBottomOf="@+id/pss_top_bar_bg"
        app:layout_constraintEnd_toEndOf="@+id/pss_top_bar_bg"
        app:layout_constraintTop_toTopOf="@+id/pss_top_bar_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pss_search_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="搜索"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintBottom_toBottomOf="@+id/pss_top_bar_bg"
        app:layout_constraintEnd_toEndOf="@+id/pss_top_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/pss_ver_div"
        app:layout_constraintTop_toTopOf="@+id/pss_top_bar_bg" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pss_search_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@null"
        android:hint="请输入关键字搜索"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        android:textColorHint="@color/color_aeaeae"
        app:layout_constraintBottom_toBottomOf="@+id/pss_top_bar_bg"
        app:layout_constraintEnd_toStartOf="@+id/pss_ver_div"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/pss_toggle_btn"
        app:layout_constraintTop_toTopOf="@+id/pss_top_bar_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pss_clear_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_clear_search"
        android:tint="@color/color_999999"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pss_search_edit"
        app:layout_constraintEnd_toStartOf="@+id/pss_ver_div"
        app:layout_constraintTop_toTopOf="@+id/pss_search_edit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pss_left_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:background="@color/color_fafafa"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/pss_reset"
        app:layout_constraintEnd_toStartOf="@+id/pss_right_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pss_top_bar_bg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pss_right_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@+id/pss_left_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pss_left_list"
        app:layout_constraintTop_toTopOf="@+id/pss_left_list" />

    <LinearLayout
        android:id="@+id/pss_empty_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_divider_bottom"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/pss_left_list"
        app:layout_constraintEnd_toEndOf="@id/pss_right_list"
        app:layout_constraintStart_toStartOf="@id/pss_left_list"
        app:layout_constraintTop_toTopOf="@id/pss_left_list">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_search_empty" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有搜到相关的集团或门店噢"
            android:textAppearance="@style/TextAppearance.City22.Small.Color999" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pss_reset"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_button_mid_stroke_primary"
        android:gravity="center"
        android:text="重置"
        android:textAppearance="@style/TextAppearance.City22.Middle.Blue"
        app:layout_constraintBottom_toBottomOf="@+id/pss_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pss_left_list"
        app:layout_constraintWidth_percent="0.33" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pss_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_button_mid_solid_primary"
        android:gravity="center"
        android:text="确定"
        android:textAppearance="@style/TextAppearance.City22.Middle.White"
        app:layout_constraintBottom_toBottomOf="@+id/pss_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pss_reset"
        app:layout_constraintWidth_percent="0.55" />
</androidx.constraintlayout.widget.ConstraintLayout>