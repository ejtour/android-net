<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:src="@drawable/ic_quotation_add_empty"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="点击下面按钮添加要报价的商品"
        android:textColor="@color/color_aeaeae"
        android:textSize="@dimen/base_text_13"/>

    <TextView
        android:id="@+id/txt_product"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/base_bg_selector_dialog_confirm"
        android:gravity="center"
        android:text="新增商品"
        android:textColor="@color/base_white"
        android:textSize="@dimen/base_text_13"/>

</LinearLayout>