<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="日期"
        android:textColor="@color/color_666666"
        android:textSize="9sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_group_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="1575"
        android:textAppearance="@style/TextAppearance.City22.Small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_active_group_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="1260"
        android:textAppearance="@style/TextAppearance.City22.Small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_add_group_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="445"
        android:textAppearance="@style/TextAppearance.City22.Small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_shop_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="3075"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_little_size" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_active_shop_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="2560"
        android:textAppearance="@style/TextAppearance.City22.Small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipa_add_shop_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="590"
        android:textAppearance="@style/TextAppearance.City22.Small" />
</LinearLayout>