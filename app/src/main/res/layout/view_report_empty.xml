    <TextView
        android:id="@+id/vre_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.City22.Small.ColorAE" />
</merge>