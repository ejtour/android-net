<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_white_radius_5_solid"
    tools:layout_margin="@dimen/dp_10">

    <TextView
        android:id="@+id/ia_type_label"
        style="@style/InfoLabel"
        android:text="证件类型"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ia_type"
        style="@style/InfoEdit"
        android:hint="请选择证件类型"
        app:layout_constraintBottom_toBottomOf="@id/ia_type_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ia_type_label"
        app:layout_constraintTop_toTopOf="@id/ia_type_label"
        tools:text="生产许可证" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ia_type_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ia_date_label"
        style="@style/InfoLabel"
        android:text="到期日期"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_type_label" />

    <TextView
        android:id="@+id/ia_date"
        style="@style/InfoEdit"
        android:hint="证件到期日期"
        app:layout_constraintBottom_toBottomOf="@id/ia_date_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ia_date_label"
        app:layout_constraintTop_toTopOf="@id/ia_date_label"
        tools:text="2020/12/31" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ia_date_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.hll_sc_app.base.widget.ImgUploadBlock
        android:id="@+id/ia_image"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/base_bg_border_radius_3"
        app:base_title="点击上传证件照"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_date_label" />

    <ImageView
        android:id="@+id/ia_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:padding="8dp"
        android:src="@drawable/ic_aptitude_del"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_image" />
</android.support.constraint.ConstraintLayout>
