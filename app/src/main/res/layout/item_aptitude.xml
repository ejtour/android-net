<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_white_radius_5_solid"
    tools:layout_margin="@dimen/dp_10">

    <TextView
        android:id="@+id/ia_type_label"
        style="@style/InfoLabel"
        android:text="证件类型"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ia_type"
        style="@style/InfoEdit"
        android:hint="请选择证件类型"
        app:layout_constraintBottom_toBottomOf="@id/ia_type_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ia_type_label"
        app:layout_constraintTop_toTopOf="@id/ia_type_label"
        tools:text="生产许可证" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ia_type_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ia_date_label"
        style="@style/InfoLabel"
        android:text="到期日期"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_type_label" />

    <TextView
        android:id="@+id/ia_date"
        style="@style/InfoEdit"
        android:hint="证件到期日期"
        app:layout_constraintBottom_toBottomOf="@id/ia_date_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ia_date_label"
        app:layout_constraintTop_toTopOf="@id/ia_date_label"
        tools:text="2020/12/31" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ia_date_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ia_remain_day_label"
        style="@style/InfoLabel"
        android:text="剩余天数"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_date_label" />

    <TextView
        android:id="@+id/ia_remain_day"
        style="@style/InfoEdit"
        android:hint="证件剩余天数"
        android:textColor="@color/color_f5a623"
        app:layout_constraintBottom_toBottomOf="@id/ia_remain_day_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ia_remain_day_label"
        app:layout_constraintTop_toTopOf="@id/ia_remain_day_label"
        tools:text="20天" />

    <View
        android:id="@+id/ia_div"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ia_remain_day_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/ia_remain_day_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="ia_remain_day,ia_remain_day_label,ia_div" />

    <com.hll_sc_app.widget.ImageUploadGroup
        android:id="@+id/ia_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:iug_label="上传图片"
        app:iug_margin="20dp"
        app:iug_padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_remain_day_label" />

    <ImageView
        android:id="@+id/ia_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:layout_marginRight="2dp"
        android:padding="8dp"
        android:src="@drawable/ic_aptitude_del"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_image" />
</androidx.constraintlayout.widget.ConstraintLayout>
