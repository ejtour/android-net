<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/base_bg_white_radius_5_solid"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/txt_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_text_13"
        android:textColor="@color/base_text222"
        tools:text="二十二城客服小姐姐您好，我是供应商用户，我在登录供..." />


    <View
        android:id="@+id/view_status"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/bg_radius_green_7ed321"
        app:layout_constraintBottom_toBottomOf="@id/txt_status"
        app:layout_constraintStart_toStartOf="@id/txt_title"
        app:layout_constraintTop_toTopOf="@id/txt_status" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toEndOf="@id/view_status"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        tools:text="已回复" />


</androidx.constraintlayout.widget.ConstraintLayout>