<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/base_bg_shadow_bottom_bar">

    <LinearLayout
        android:id="@+id/obb_select_all_btn"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="27dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/obb_select_all"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/bg_selector_check_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="全选"
            android:textAppearance="@style/TextAppearance.City22.Little.Color666" />
    </LinearLayout>

    <TextView
        android:id="@+id/obb_confirm"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_button_mid_solid_primary"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:text="确认发货(0)"
        android:textAppearance="@style/TextAppearance.City22.Small.White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/obb_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="right"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/obb_confirm"
        app:layout_constraintStart_toEndOf="@id/obb_select_all_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="合计：¥0.00" />
</androidx.constraintlayout.widget.ConstraintLayout>