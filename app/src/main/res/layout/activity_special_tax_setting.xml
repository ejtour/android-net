<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/sts_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="保存"
        app:tb_rightVisibility="true"
        app:tb_title="商品特殊税率设置" />

    <View
        android:id="@+id/sts_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sts_select_all"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:drawableLeft="@drawable/bg_selector_check_box"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:text="全选"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        app:layout_constraintBottom_toBottomOf="@id/sts_bottom_bg"
        app:layout_constraintStart_toStartOf="@id/sts_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/sts_bottom_bg" />

    <TextView
        android:id="@+id/sts_confirm_del"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_button_mid_stroke_primary"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="确定删除(0)"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintBottom_toBottomOf="@id/sts_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/sts_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/sts_bottom_bg" />

    <TextView
        android:id="@+id/sts_cancel"
        android:layout_width="88dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_button_mid_stroke_gray"
        android:gravity="center"
        android:text="取消"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@id/sts_bottom_bg"
        app:layout_constraintEnd_toStartOf="@id/sts_confirm_del"
        app:layout_constraintTop_toTopOf="@id/sts_bottom_bg" />

    <TextView
        android:id="@+id/sts_add"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_button_mid_solid_primary"
        android:gravity="center"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:text="新增特殊设置商品"
        android:textAppearance="@style/TextAppearance.City22.Small.White"
        app:layout_constraintBottom_toBottomOf="@id/sts_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/sts_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/sts_bottom_bg" />

    <com.hll_sc_app.widget.right.RightTextView
        app:rightCode="@string/right_taxSetting_product_delete"
        android:id="@+id/sts_del"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_button_mid_stroke_primary"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="删除已设置商品"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintBottom_toBottomOf="@id/sts_bottom_bg"
        app:layout_constraintEnd_toStartOf="@id/sts_add"
        app:layout_constraintTop_toTopOf="@id/sts_bottom_bg" />

    <android.support.constraint.Group
        android:id="@+id/sts_del_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="sts_select_all,sts_confirm_del,sts_cancel" />

    <android.support.constraint.Group
        android:id="@+id/sts_normal_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="sts_add,sts_del" />

    <com.hll_sc_app.widget.SearchView
        android:id="@+id/sts_search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sts_title_bar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sts_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/sts_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sts_search_view" />
</android.support.constraint.ConstraintLayout>