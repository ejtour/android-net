<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tb_title="收货详情" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CK201910170556" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/text_999"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/txt_no"
            app:layout_constraintTop_toBottomOf="@id/txt_no"
            tools:text="发生日期：2019/10/17" />

        <TextView
            android:id="@+id/txt_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/text_999"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/txt_date"
            app:layout_constraintRight_toLeftOf="@+id/img_status"
            app:layout_constraintTop_toTopOf="@id/txt_date"
            tools:text="审核人：杨大" />

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_report_custom_receive_pass"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_gray_solid_radius_5"
            app:layout_constraintBottom_toBottomOf="@+id/txt_mark"
            app:layout_constraintTop_toBottomOf="@id/img_status" />

        <TextView
            android:id="@+id/txt_title_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="单据类型"
            android:textColor="@color/text_999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintStart_toStartOf="@id/view_back"
            app:layout_constraintTop_toTopOf="@id/view_back" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title_type"
            app:layout_constraintTop_toTopOf="@id/txt_title_type"
            tools:text="调拨出库" />


        <TextView
            android:id="@+id/txt_title_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="仓库"
            android:textColor="@color/text_999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintStart_toStartOf="@id/txt_title_type"
            app:layout_constraintTop_toBottomOf="@id/txt_title_type" />

        <TextView
            android:id="@+id/txt_warehouse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_warehouse"
            app:layout_constraintTop_toTopOf="@id/txt_title_warehouse"
            tools:text="北京1号仓" />


        <TextView
            android:id="@+id/txt_title_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="单据备注"
            android:textColor="@color/text_999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintStart_toStartOf="@id/txt_title_type"
            app:layout_constraintTop_toBottomOf="@id/txt_warehouse" />

        <TextView
            android:id="@+id/txt_mark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:hint="无"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_mark"
            app:layout_constraintTop_toTopOf="@id/txt_title_mark" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@color/base_white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <com.hll_sc_app.widget.SyncHorizontalScrollView
            android:id="@+id/sync_scroll_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f3f3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="序号"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="质检结果"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="品相编码"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="品项名称"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="规格"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="单位"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="单价"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="金额"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="税率"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="不含税单价"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="不含税金额"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="辅助单位"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="辅助数量"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="生产日期"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="批次号"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base_activity_bg" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />
            </LinearLayout>
        </com.hll_sc_app.widget.SyncHorizontalScrollView>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hll_sc_app.widget.SyncHorizontalScrollView
                android:scrollbars="none"
                android:id="@+id/sync_scroll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <android.support.v7.widget.RecyclerView
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </com.hll_sc_app.widget.SyncHorizontalScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_10"
            tools:text="合计：品项：1，数量：2.00，金额：¥150.00，未税金额：¥80.00。" />
    </LinearLayout>
</LinearLayout>