<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:padding="@dimen/dp_10">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/inh_img"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:base_placeholder="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/inh_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/color_030303"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintStart_toEndOf="@+id/inh_img"
        app:layout_constraintTop_toTopOf="@+id/inh_img"
        tools:text="北京一键食达旗舰店" />

    <TextView
        android:id="@+id/inh_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@+id/inh_img"
        app:layout_constraintStart_toStartOf="@+id/inh_name"
        app:layout_constraintTop_toBottomOf="@+id/inh_name"
        tools:text="操作员a 2018-06-19 17:32:32" />

    <TextView
        android:id="@+id/inh_handle_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        app:layout_constraintStart_toStartOf="@+id/inh_img"
        app:layout_constraintTop_toBottomOf="@+id/inh_img"
        tools:text="银行审核成功，供应商（北京一键食达旗舰店）已完成退款" />

    <TextView
        android:id="@+id/inh_show_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingMultiplier="1.3"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@+id/inh_img"
        app:layout_constraintTop_toBottomOf="@+id/inh_handle_log"
        tools:text="相应款项将在5个工作日内退款到您的付款账号，请注意查收。如有疑问请联系二十二城平台客服！" />
</android.support.constraint.ConstraintLayout>