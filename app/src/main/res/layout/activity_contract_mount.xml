<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/base_activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        app:tb_title="合同明细"
        app:tb_rightText="导出"
        app:tb_rightVisibility="true"
        android:layout_height="45dp" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/cst_money"
                android:background="@drawable/base_bg_white_radius_5_solid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_unit"
                    app:layout_constraintEnd_toStartOf="@+id/txt_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    app:layout_constraintBottom_toBottomOf="@+id/txt_total_money"
                    android:layout_marginBottom="3dp"
                    android:textSize="@dimen/base_text_16"
                    android:textColor="@color/text_222" />

                <TextView
                    android:id="@+id/txt_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="500,000.00"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="38dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/text_222" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@+id/txt_total_money"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/txt_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_999"
                    android:text="合同总金额" />

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/line_dash_divider"
                    app:layout_constraintTop_toBottomOf="@+id/txt_money_title"
                    android:layout_marginTop="30dp" />

                <View
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:id="@+id/view_divider_1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/base_color_divider"
                    app:layout_constraintTop_toBottomOf="@+id/view_divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/txt_left_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="¥ 49,000.00"
                    android:textSize="@dimen/base_text_16"
                    app:layout_constraintTop_toTopOf="@id/view_divider_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_divider_1"
                    android:textColor="@color/text_222" />

                <TextView
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_left_money"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_divider_1"
                    android:id="@+id/txt_left_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/text_999"
                    android:text="剩余金额" />

                <TextView
                    android:id="@+id/txt_product_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2100"
                    android:layout_marginTop="25dp"
                    android:textSize="@dimen/base_text_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_divider_1"
                    app:layout_constraintTop_toBottomOf="@+id/txt_left_money_title"
                    android:textColor="@color/text_222" />

                <TextView
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_product_number"
                    app:layout_constraintBottom_toBottomOf="@+id/view_divider_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_divider_1"
                    android:id="@+id/txt_product_number_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/text_999"
                    android:text="商品数量" />

                <TextView
                    android:id="@+id/txt_shop_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="18"
                    android:textSize="@dimen/base_text_16"
                    app:layout_constraintTop_toTopOf="@+id/txt_left_money"
                    app:layout_constraintStart_toEndOf="@+id/view_divider_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/text_222" />

                <TextView
                    app:layout_constraintStart_toEndOf="@+id/view_divider_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_left_money_title"
                    android:id="@+id/txt_shop_number_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/text_999"
                    android:text="下单门店" />

                <TextView
                    android:id="@+id/txt_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="379"
                    android:textSize="@dimen/base_text_16"
                    app:layout_constraintTop_toTopOf="@+id/txt_product_number"
                    app:layout_constraintStart_toEndOf="@+id/view_divider_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/text_222" />

                <TextView
                    app:layout_constraintStart_toEndOf="@+id/view_divider_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_product_number_title"
                    android:id="@+id/txt_order_number_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/text_999"
                    android:text="订单数量" />


            </android.support.constraint.ConstraintLayout>

            <com.zs.border.view.BorderTextView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_circle_left"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:contentBackColor="@color/base_activity_bg"
                app:layout_constraintTop_toTopOf="@+id/cst_money"
                app:layout_constraintBottom_toBottomOf="@+id/cst_money"
                android:layout_marginBottom="36dp"
                app:cornerRadius="5dp" />

            <com.zs.border.view.BorderTextView
                android:layout_marginRight="5dp"
                android:id="@+id/txt_circle_right"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:contentBackColor="@color/base_activity_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cst_money"
                app:layout_constraintBottom_toBottomOf="@+id/cst_money"
                android:layout_marginBottom="36dp"
                app:cornerRadius="5dp" />

            <android.support.constraint.ConstraintLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_margin="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/cst_money"
                android:background="@drawable/bg_search_stroke_15"
                android:id="@+id/cst_search"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <View
                    android:id="@+id/view_divider_2"
                    android:layout_width="1dp"
                    android:background="@color/base_color_divider"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/img_search"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/base_search" />

                <EditText
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/edt_search"
                    android:background="@null"
                    app:layout_constraintStart_toEndOf="@+id/img_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="订单号搜索"
                    android:textSize="12sp"
                    android:textColor="@color/text_222"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/img_clear" />

                <ImageView
                    android:layout_marginRight="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/view_divider_2"
                    android:id="@+id/img_clear"
                    android:scaleType="centerInside"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/base_close" />

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view_divider_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/img_canlaner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_company" />

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/txt_canlaner"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    app:layout_constraintStart_toEndOf="@+id/img_canlaner"
                    app:layout_constraintEnd_toStartOf="@+id/img_canlaner_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/base_text_12"
                    android:textColor="@color/text_222"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/img_canlaner_arrow"
                    android:scaleType="centerInside"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/bg_select_window_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                app:layout_constraintTop_toBottomOf="@+id/cst_search"
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_view"
                    android:minHeight="500dp"
                    android:maxHeight="1000dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>

