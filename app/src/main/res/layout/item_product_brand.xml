<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white">

    <TextView
        android:id="@+id/txt_brandName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="杯"/>

    <TextView
        android:id="@+id/txt_state"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="#7ED321"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@+id/img_del"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginRight="40dp"
        tools:text="审核成功"/>

    <ImageView
        android:id="@+id/img_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/base_ic_window_close"
        app:layout_constraintBottom_toBottomOf="@+id/txt_state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_failureReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_deposit_product_content"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_brandName"
        tools:text="原因：已经注册过相同的品牌了"/>

</android.support.constraint.ConstraintLayout>

