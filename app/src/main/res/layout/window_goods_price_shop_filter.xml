<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_window_purchaser_select_title"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_search_type"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="集团"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/base_color_divider"/>

            <EditText
                android:id="@+id/edt_search_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入关键字搜索"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_aeaeae"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/base_color_divider"/>

            <TextView
                android:id="@+id/txt_search"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="搜索"
                android:textAppearance="@style/TextAppearance.City22.Small.Blue"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_purchaser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f3f3f3"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_purchaserShop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/base_white"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/base_bg_shadow_bottom_white_bar">

        <TextView
            android:id="@+id/txt_reset"
            style="@style/BtnOrderAction.PrimaryStroke"
            android:layout_width="100dp"
            android:layout_marginLeft="15dp"
            android:text="重置"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/txt_confirm"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_confirm"
            style="@style/BtnOrderAction.PrimarySolid"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="确定"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txt_reset"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>


