<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/crd_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tb_title="收货详情" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CK201910170556" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/text_999"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/txt_no"
            app:layout_constraintTop_toBottomOf="@id/txt_no"
            tools:text="发生日期：2019/10/17" />

        <TextView
            android:id="@+id/txt_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/text_999"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/txt_date"
            app:layout_constraintRight_toLeftOf="@+id/img_status"
            app:layout_constraintTop_toTopOf="@id/txt_date"
            tools:text="审核人：杨大" />

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_report_custom_receive_pass"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_gray_solid_radius_5"
            app:layout_constraintBottom_toBottomOf="@+id/txt_mark"
            app:layout_constraintTop_toBottomOf="@id/img_status" />

        <TextView
            android:id="@+id/txt_title_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="单据类型"
            android:textColor="@color/text_999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintStart_toStartOf="@id/view_back"
            app:layout_constraintTop_toTopOf="@id/view_back" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title_type"
            app:layout_constraintTop_toTopOf="@id/txt_title_type"
            tools:text="调拨出库" />


        <TextView
            android:id="@+id/txt_title_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="仓库"
            android:textColor="@color/text_999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintStart_toStartOf="@id/txt_title_type"
            app:layout_constraintTop_toBottomOf="@id/txt_title_type" />

        <TextView
            android:id="@+id/txt_warehouse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_warehouse"
            app:layout_constraintTop_toTopOf="@id/txt_title_warehouse"
            tools:text="北京1号仓" />


        <TextView
            android:id="@+id/txt_title_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="单据备注"
            android:textColor="@color/text_999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintStart_toStartOf="@id/txt_title_type"
            app:layout_constraintTop_toBottomOf="@id/txt_warehouse" />

        <TextView
            android:id="@+id/txt_mark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:hint="无"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_mark"
            app:layout_constraintTop_toTopOf="@id/txt_title_mark" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.hll_sc_app.widget.report.ExcelLayout
        android:id="@+id/crd_excel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_10"
        android:background="@android:color/white"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_footer"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textAppearance="@style/TextAppearance.City22.Little"
            tools:text="合计：品项：1，数量：2.00，金额：¥150.00，未税金额：¥80.00。" />

        <TextView
            android:id="@+id/crd_confirm"
            style="@style/BtnAfterSalesAction.PrimarySolid"
            android:text="确认"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>