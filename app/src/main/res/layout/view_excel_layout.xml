<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="RelativeLayout">

    <com.hll_sc_app.widget.SyncHorizontalScrollView
        android:id="@+id/vel_scroll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

    <com.hll_sc_app.widget.SyncHorizontalScrollView
        android:id="@+id/vel_scroll_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:scrollbars="none" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/vel_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vel_scroll_header"
        android:layout_above="@id/vel_scroll_footer"
        android:layout_marginTop="-1dp">

        <com.hll_sc_app.widget.SyncHorizontalScrollView
            android:id="@+id/vel_scroll_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/bg_excel_body">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/vel_list_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
            </FrameLayout>
        </com.hll_sc_app.widget.SyncHorizontalScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</merge>