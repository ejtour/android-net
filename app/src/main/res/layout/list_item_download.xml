<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:paddingLeft="@dimen/dp_10"
    android:id="@+id/list_item"
    tools:background="@color/base_white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_rar"
        android:id="@+id/img_type"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_rar"
        android:id="@+id/img_jpg"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <TextView
        android:textSize="@dimen/base_text_12"
        android:textColor="@color/text_222"
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="25dp"
        tools:text="北京二十二城电子商务合同.rar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_divider" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="1dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintEnd_toStartOf="@+id/img_operation"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/img_operation"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_download" />
</android.support.constraint.ConstraintLayout>