<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/base_bg_white_radius_5_solid"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/txt_contract_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_222"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="千禧年春季合同" />

    <TextView
        android:id="@+id/txt_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="@+id/txt_contract_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_contract_name"
        tools:text="集团名称：北京前餐饮管理股份有限公司" />

    <TextView
        android:id="@+id/txt_contract_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="@+id/txt_contract_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_group_name"
        tools:text="合同编号：HT10343839" />

    <TextView
        android:id="@+id/txt_time_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_group_name"
        tools:text="起止时间：2019/03/03 - 2019/06/03" />

    <TextView
        android:id="@+id/txt_contract_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="@+id/txt_contract_code"
        app:layout_constraintTop_toBottomOf="@+id/txt_contract_code"
        tools:text="签约人：千禧人" />

    <TextView
        android:id="@+id/txt_time_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="@+id/txt_time_range"
        app:layout_constraintTop_toTopOf="@+id/txt_contract_person"
        tools:text="签约时间：2019/03/03" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F5A623"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="未审核" />

    <View
        android:id="@+id/view_divider"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/txt_contract_person"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/border_eee" />

    <TextView
        android:id="@+id/txt_title_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="临期天数"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider" />

    <TextView
        android:id="@+id/txt_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_title_days"
        tools:text="200" />
</android.support.constraint.ConstraintLayout>