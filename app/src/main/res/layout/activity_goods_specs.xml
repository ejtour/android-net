<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:background="@drawable/base_bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增商品规格"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"/>

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_selector_close"
            android:gravity="center"
            android:text="保存"
            android:textAppearance="@style/TextAppearance.City22.Middle.White"/>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_specContent_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="规格内容"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                    android:textColor="@drawable/color_enable_on_666_off_3ae"/>

                <EditText
                    android:id="@+id/edt_specContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_specContent_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="例如：240ml*12瓶／箱，不超过12字"
                    android:maxLength="12"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColor="@drawable/color_enable_on_666_off_3ae"
                    android:textColorHint="@color/color_aeaeae"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_saleUnitName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_saleUnitName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="售卖单位"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                    android:textColor="@drawable/color_enable_on_666_off_3ae"/>

                <TextView
                    android:id="@+id/txt_saleUnitName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_saleUnitName_title"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:hint="请选择售卖单位"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColor="@drawable/color_enable_on_666_off_3ae"
                    android:textColorHint="@color/color_aeaeae"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_productPrice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单价"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <EditText
                    android:id="@+id/edt_productPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_productPrice_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入单价"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="押金商品"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <TextView
                    android:id="@+id/txt_depositProducts_add"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/base_bg_selector_dialog_cancel"
                    android:gravity="center"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="选择押金商品"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_depositProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_skuCode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="SKU条码"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                    android:textColor="@drawable/color_enable_on_666_off_3ae"/>

                <EditText
                    android:id="@+id/edt_skuCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_skuCode_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入SKU条码，最多20位数字"
                    android:inputType="number"
                    android:maxLength="20"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColor="@drawable/color_enable_on_666_off_3ae"
                    android:textColorHint="@color/color_aeaeae"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.hll_sc_app.base.widget.StartTextView
                    android:id="@+id/txt_ration_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="转换率"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <EditText
                    android:id="@+id/edt_ration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_ration_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入转换率，默认为1"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_buyMinNum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="最低起购量"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <EditText
                    android:id="@+id/edt_buyMinNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_buyMinNum_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="用户单笔订单至少需要购买的数量"
                    android:inputType="number"
                    android:maxLength="20"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_minOrder_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="订货倍数"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <EditText
                    android:id="@+id/edt_minOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/txt_minOrder_title"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="默认为1，支持设置n.5"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle"
                    android:textColorHint="@color/color_aeaeae"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/base_bg_item_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_isDecimalBuy_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否允许小数购买"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <Switch
                    android:id="@+id/switch_isDecimalBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="注：系统默认第一个添加的规格为标准规格，标准规格不可删除。"
                android:textAppearance="@style/TextAppearance.City22.Little.Color666"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>