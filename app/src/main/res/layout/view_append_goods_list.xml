<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/agl_arrow"
        android:layout_width="8dp"
        android:layout_height="5dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trv_color="@color/base_activity_bg" />

    <View
        android:id="@+id/agl_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_deposit_list"
        app:layout_constraintBottom_toBottomOf="@id/agl_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agl_arrow" />

    <TextView
        android:id="@+id/agl_label"
        android:layout_width="52dp"
        android:layout_height="14dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_tip_blue"
        android:gravity="center"
        android:text="含押金商品"
        android:textColor="@color/colorPrimary"
        android:textSize="8.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agl_arrow" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/agl_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:minHeight="24dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/agl_label"
        app:layout_constraintTop_toBottomOf="@id/agl_arrow" />
</merge>