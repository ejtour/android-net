<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="充值金额"
            android:textColor="@color/text_999"
            android:textSize="@dimen/base_text_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edt_recharge"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_gray_solid_radius_5"
            android:drawableLeft="@drawable/ic_money_42_60"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入充值金额"
            android:inputType="numberDecimal"
            android:paddingLeft="14dp"
            android:textColor="@color/text_222"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />

        <EditText
            android:id="@+id/edt_gift"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_gray_stroke_radius_5"
            android:drawableLeft="@drawable/ic_money_27_39"
            android:drawablePadding="@dimen/dp_10"
            android:hint="赠送金额（非必填）"
            android:inputType="numberDecimal"
            android:paddingLeft="14dp"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_recharge" />


        <TextView
            android:id="@+id/txt_pay_type"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_gray_stroke_radius_5"
            android:gravity="center_vertical"
            android:hint="请选择支付方式"
            android:paddingLeft="14dp"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_gift" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:rotation="90"
            android:src="@drawable/ic_arrow_gray"
            app:layout_constraintBottom_toBottomOf="@id/txt_pay_type"
            app:layout_constraintRight_toRightOf="@id/txt_pay_type"
            app:layout_constraintTop_toTopOf="@id/txt_pay_type" />


        <EditText
            android:id="@+id/edt_mark"
            android:layout_width="0dp"
            android:layout_height="155dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_gray_stroke_radius_5"
            android:gravity="left"
            android:hint="备注信息（非必填）"
            android:maxLength="50"
            android:paddingLeft="14dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="14dp"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/text_222"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_pay_type" />

        <TextView
            android:id="@+id/txt_left_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/color_aeaeae"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@id/edt_mark"
            app:layout_constraintEnd_toEndOf="@id/edt_mark"
            tools:text="50" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txt_recharge"
        style="@style/BtnAfterSalesAction.PrimarySolid"
        android:layout_width="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="充值" />
</LinearLayout>