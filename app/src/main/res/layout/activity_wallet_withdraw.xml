<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/aww_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="提现" />

    <View
        android:id="@+id/aww_input_area_bg"
        android:layout_width="0dp"
        android:layout_height="115dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aww_title_bar" />

    <TextView
        android:id="@+id/aww_input_all"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="全部"
        android:textAppearance="@style/TextAppearance.City22.Middle.Blue"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/aww_input_area_bg"
        app:layout_constraintTop_toTopOf="@id/aww_input_area_bg" />

    <View
        android:id="@+id/aww_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@id/aww_input_area_bg"
        app:layout_constraintStart_toStartOf="@id/aww_input_area_bg"
        app:layout_constraintTop_toBottomOf="@id/aww_input_all" />

    <TextView
        android:id="@+id/aww_money_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textAppearance="@style/TextAppearance.City22.Large"
        app:layout_constraintBottom_toBottomOf="@id/aww_input_all"
        app:layout_constraintStart_toStartOf="@id/aww_divider"
        app:layout_constraintTop_toTopOf="@id/aww_input_all" />

    <EditText
        android:id="@+id/aww_money_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@null"
        android:imeOptions="actionGo"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Large"
        android:textColorHint="@color/color_aeaeae"
        app:layout_constraintBottom_toBottomOf="@id/aww_input_all"
        app:layout_constraintEnd_toStartOf="@id/aww_input_all"
        app:layout_constraintStart_toEndOf="@id/aww_money_symbol"
        app:layout_constraintTop_toTopOf="@id/aww_input_all"
        tools:hint="可提现金额89,654.34元" />

    <TextView
        android:id="@+id/aww_freeze_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBottom_toBottomOf="@id/aww_input_area_bg"
        app:layout_constraintStart_toStartOf="@id/aww_divider"
        app:layout_constraintTop_toBottomOf="@id/aww_divider"
        tools:text="有8,987.00元不可提现" />

    <TextView
        android:id="@+id/aww_freeze_why"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="为什么？"
        android:textAppearance="@style/TextAppearance.City22.Little.Blue"
        app:layout_constraintBottom_toBottomOf="@id/aww_freeze_tip"
        app:layout_constraintStart_toEndOf="@id/aww_freeze_tip" />

    <TextView
        android:id="@+id/aww_warn_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_fafafa"
        android:lineSpacingExtra="5dp"
        android:minHeight="84dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:text="温馨提示：\n*从铁金库提现将产生提现金额的1%的手续费。\n*铁金库提现到账日期一般为1—3个工作日。"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aww_input_area_bg" />

    <TextView
        android:id="@+id/aww_confirm"
        style="@style/BtnLogin"
        android:layout_width="230dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="确认提现"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aww_warn_prompt" />

</android.support.constraint.ConstraintLayout>