<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dwf_top_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wx_follow_top" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dwf_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dwf_top_img"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_close_circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dwf_top_img"
        android:layout_alignLeft="@id/dwf_top_img"
        android:layout_alignRight="@id/dwf_top_img"
        android:background="@drawable/bg_white_radius_half_16_solid"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="22dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wx_follow_tip" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8dp"
            android:text="点击下方按钮，打开微信“扫一扫”\n识别相册中的二维码关注“二十二城”公众号"
            android:textAppearance="@style/TextAppearance.City22.Small.Color999" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dwf_qr"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dwf_save"
            android:layout_width="249dp"
            android:layout_height="42dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_primary_radius_26_solid"
            android:gravity="center"
            android:text="保存并跳转到微信"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>