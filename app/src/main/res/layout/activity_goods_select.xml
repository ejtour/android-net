<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/ags_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="选择商品" />

    <com.hll_sc_app.widget.SearchView
        android:id="@+id/ags_search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ags_title_bar" />

    <View
        android:id="@+id/ags_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ags_selected_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        tools:text="已选：0"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintBottom_toBottomOf="@id/ags_bottom_bg"
        app:layout_constraintStart_toStartOf="@id/ags_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/ags_bottom_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ags_ok"
        style="@style/BtnAfterSalesAction.PrimarySolid"
        android:text="选好了"
        app:layout_constraintBottom_toBottomOf="@id/ags_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/ags_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/ags_bottom_bg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ags_left_list"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/ags_refresh_layout"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="24"
        android:background="@color/color_fafafa"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/ags_bottom_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ags_search_view" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/ags_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="76"
        app:layout_constraintBottom_toTopOf="@id/ags_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ags_left_list"
        app:layout_constraintTop_toBottomOf="@id/ags_search_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ags_right_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>