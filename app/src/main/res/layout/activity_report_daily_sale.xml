<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/rds_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_rightVisibility="true"
        app:tb_title="日销售额汇总" />

    <RelativeLayout
        android:id="@+id/rds_select_date"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="按日期筛选"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666" />

        <com.hll_sc_app.widget.TriangleView
            android:id="@+id/rds_arrow"
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:trv_color="@color/color_dddddd"
            app:trv_direction="bottom" />

        <TextView
            android:id="@+id/rds_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/rds_arrow"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            tools:text="2018/09/09 - 2018/09/16" />

    </RelativeLayout>

    <com.hll_sc_app.widget.report.ReportTipsView
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/rds_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rds_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rds_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            tools:text="总交易额：¥6,0221.42"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_eeeeee" />

        <TextView
            android:id="@+id/rds_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            tools:text="总订单数：224"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>
    </LinearLayout>
</LinearLayout>