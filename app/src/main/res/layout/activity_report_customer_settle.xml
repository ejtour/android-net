<?xml version="1.0" encoding="utf-8"?>
<com.hll_sc_app.widget.TabTwoGroupView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/rcs_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rcs_see_detail"
        style="@style/BtnSubmit"
        android:text="查看详情"
        app:layout_constraintBottom_toBottomOf="@id/rcs_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/rcs_bottom_bg"
        app:layout_constraintStart_toStartOf="@id/rcs_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/rcs_bottom_bg" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcs_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="@dimen/dp_10"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/rcs_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trl_tab_one_btn" />
</com.hll_sc_app.widget.TabTwoGroupView>