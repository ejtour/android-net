<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/base_white"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:paddingBottom="@dimen/dp_10"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/sdf_refund_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="退款类型："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sdf_refund_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自由退款"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_refund_type_label"
        app:layout_constraintStart_toEndOf="@+id/sdf_refund_type_label" />

    <TextView
        android:id="@+id/sdf_refund_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="退款编号："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_refund_type_label" />

    <TextView
        android:id="@+id/sdf_refund_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_refund_id_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="20180623172123" />

    <TextView
        android:id="@+id/sdf_create_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="申请时间："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_refund_id_label" />

    <TextView
        android:id="@+id/sdf_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_create_time_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="2017-05-23 17:21:23" />

    <TextView
        android:id="@+id/sdf_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="售后类型："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_create_time_label" />

    <TextView
        android:id="@+id/sdf_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_type_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="收货差异退款" />

    <TextView
        android:id="@+id/sdf_refund_reason_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="退款原因："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_type_label" />

    <TextView
        android:id="@+id/sdf_refund_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_refund_reason_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="商品质量原因" />

    <TextView
        android:id="@+id/sdf_refund_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="退款总额："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_refund_reason_label" />

    <TextView
        android:id="@+id/sdf_refund_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_refund_amount_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="¥126.00" />

    <TextView
        android:id="@+id/sdf_diff_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="补差价额："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_refund_amount_label" />

    <TextView
        android:id="@+id/sdf_diff_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_diff_price_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="¥100.00" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/sdf_diff_price_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="sdf_diff_price_label,sdf_diff_price" />

    <View
        android:id="@+id/sdf_divider"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_activity_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sdf_diff_price_label" />

    <TextView
        android:id="@+id/sdf_related_bill_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="原订单号："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_divider" />

    <TextView
        android:id="@+id/sdf_related_bill_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_related_bill_number_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="3456789098765" />

    <TextView
        android:id="@+id/sdf_view_related_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_action_button_little"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:text="查看订单信息"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBottom_toBottomOf="@+id/sdf_related_bill_number_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdf_related_bill_number_label" />

    <TextView
        android:id="@+id/sdf_related_bill_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="原单金额："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_related_bill_number_label" />

    <TextView
        android:id="@+id/sdf_related_bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_related_bill_amount_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="¥2520" />

    <TextView
        android:id="@+id/sdf_pay_method_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="支付方式："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_related_bill_amount_label" />

    <TextView
        android:id="@+id/sdf_pay_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_pay_method_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="在线支付" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/sdf_pay_method_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="sdf_pay_method,sdf_pay_method_label" />

    <View
        android:id="@+id/sdf_divider2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_activity_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sdf_pay_method_label" />

    <TextView
        android:id="@+id/sdf_sale_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="销售代表："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_divider2" />

    <TextView
        android:id="@+id/sdf_sale_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="——"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        android:textColorHint="@color/color_999999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_sale_name_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="王铁锤" />

    <TextView
        android:id="@+id/sdf_sale_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="联系方式："
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type_label"
        app:layout_constraintTop_toBottomOf="@+id/sdf_sale_name_label" />

    <TextView
        android:id="@+id/sdf_sale_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="——"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        android:textColorHint="@color/color_999999"
        app:layout_constraintBaseline_toBaselineOf="@+id/sdf_sale_phone_label"
        app:layout_constraintStart_toStartOf="@+id/sdf_refund_type"
        tools:text="177 8765 4321" />
</merge>