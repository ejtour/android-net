<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/spo_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_title="采购单查询" />

    <com.hll_sc_app.widget.SearchView
        android:id="@+id/spo_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/spo_type_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/spo_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_filter"
                android:drawablePadding="5dp"
                android:text="采购日期"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666" />

            <com.hll_sc_app.widget.TriangleView
                android:id="@+id/spo_type_arrow"
                android:layout_width="6dp"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                app:trv_color="@color/color_666666"
                app:trv_direction="bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spo_date_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/spo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="5dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="2018/09/09 - 2018/09/16" />


            <com.hll_sc_app.widget.TriangleView
                android:id="@+id/spo_date_arrow"
                android:layout_width="6dp"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                app:trv_color="@color/color_dddddd"
                app:trv_direction="bottom" />
        </LinearLayout>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/spo_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spo_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    
</LinearLayout>