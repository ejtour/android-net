<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/txt_purchaser_order_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采购单查询"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:background="@color/color_ffffff"
        android:layout_height="25dp">
        <com.hll_sc_app.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/base_white">
        <ImageView
            android:id="@+id/purchaser_order_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_filler"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@+id/purchaser_order_filter"
            android:id="@+id/purchaser_order_filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采购日期"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_toRightOf="@+id/purchaser_order_filter_text"
            android:id="@+id/purchaser_filter_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_drop"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/purchaser_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/09/09 - 2018/09/16"
            android:textSize="@dimen/base_text_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_arrow_drop"
            android:drawablePadding="5dp"
            android:layout_marginRight="23dp"
            />
        <ImageView
            android:id="@+id/purchaser_order_date_icon"
            android:layout_toLeftOf="@id/purchaser_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_date"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
</LinearLayout>