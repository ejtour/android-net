<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="7dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_gray_border_radius_15">

            <TextView
                android:id="@+id/wss_search_label"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_purchaser_toggle"
                android:gravity="center"
                android:text="集团"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/wss_ver_div"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginRight="47dp"
                android:background="@color/color_dddddd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wss_search_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="搜索"
                android:textAppearance="@style/TextAppearance.City22.Small.Blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wss_ver_div"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/wss_search_edit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@null"
                android:hint="请输入关键字搜索"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_aeaeae"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/wss_ver_div"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/wss_search_label"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wss_clear_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_clear_search"
                android:tint="@color/color_999999"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/wss_search_edit"
                app:layout_constraintEnd_toStartOf="@+id/wss_ver_div"
                app:layout_constraintTop_toTopOf="@+id/wss_search_edit"
                tools:visibility="visible" />
        </android.support.constraint.ConstraintLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/wss_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="7dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/wss_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</FrameLayout>