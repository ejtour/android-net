<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:paddingBottom="5dp">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/img_good"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/base_color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_good"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/base_text222"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/view_divider"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        tools:text="蟹味菇 2KG／袋" />

    <TextView
        android:id="@+id/txt_title_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="规格数："
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/view_divider"
        app:layout_constraintTop_toBottomOf="@id/txt_good_name" />

    <TextView
        android:id="@+id/txt_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/txt_title_spec"
        app:layout_constraintTop_toTopOf="@id/txt_title_spec"
        tools:text="2种" />

    <TextView
        android:id="@+id/txt_title_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标准单位："
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="@id/txt_title_spec" />

    <TextView
        android:id="@+id/txt_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/txt_title_unit"
        app:layout_constraintTop_toTopOf="@id/txt_title_spec"
        tools:text="袋" />

    <TextView
        android:id="@+id/txt_title_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货主："
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/txt_title_spec" />

    <TextView
        android:id="@+id/txt_owner"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_title_owner"
        app:layout_constraintTop_toTopOf="@id/txt_title_spec"
        tools:text="xxxxxxxxxxxxxxxxxxxxxxxx" />


    <TextView
        android:id="@+id/txt_title_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="总库存："
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/txt_title_spec"
        app:layout_constraintTop_toBottomOf="@id/txt_title_spec" />

    <TextView
        android:id="@+id/txt_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/txt_title_stock"
        app:layout_constraintTop_toTopOf="@id/txt_title_stock"
        tools:text="100" />

    <TextView
        android:id="@+id/txt_title_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="占用："
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="@id/txt_title_stock" />

    <TextView
        android:id="@+id/txt_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/txt_title_used"
        app:layout_constraintTop_toTopOf="@id/txt_title_stock"
        tools:text="50" />

    <TextView
        android:id="@+id/txt_title_useble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可用："
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/txt_title_stock" />

    <TextView
        android:id="@+id/txt_useble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/txt_title_useble"
        app:layout_constraintTop_toTopOf="@id/txt_title_stock"
        tools:text="50" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />


</android.support.constraint.ConstraintLayout>