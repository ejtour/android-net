<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_below="@+id/rl_title"
    android:background="@drawable/base_bg_shadow_top_white_bar"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/img_imgPath"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        tools:src="@drawable/ic_pay_type_9"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_payMethodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_imgPath"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        tools:text="刷卡"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/bg_pay_selector_check_box"/>

</RelativeLayout>


