<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送及时率统计"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/refreshScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/base_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="263dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="近7天及时配送率"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/base_text_12"
                            android:textColor="@color/base_text_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nearly_seven_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/nearly_seven_pie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/base_white"
                            android:minHeight="200dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="263dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="近30天及时配送率"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/base_text_12"
                            android:textColor="@color/base_text_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nearly_thirty_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/nearly_thirty_pie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/base_white"
                            android:minHeight="200dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="263dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="近90天及时配送率"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/base_text_12"
                            android:textColor="@color/base_text_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nearly_ninety_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/nearly_ninety_pie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/base_white"
                            android:minHeight="200dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/delivery_time_detail_btn"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textColor="@color/base_white"
                android:textSize="15dp"
                android:text="查看配送及时详情"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/bg_color_primary_radius_ground_30_solid"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>