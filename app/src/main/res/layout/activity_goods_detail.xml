<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:background="@drawable/base_bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"/>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                app:banner_default_image="@drawable/base_ic_banner_placeholder"
                app:image_scale_type="center_crop"
                tools:visibility="gone"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_white"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.City22.Large"
                    android:textColor="@color/color_030303"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="新西兰手切牛肉片"/>

                <TextView
                    android:id="@+id/txt_nextDayDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tag_primary_stroke"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="隔日送"
                    android:textAppearance="@style/TextAppearance.City22.Little.Primary"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_productName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_productName"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/txt_depositProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_tag_primary_stroke"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="押金商品"
                    android:textAppearance="@style/TextAppearance.City22.Little.Primary"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_productName"
                    app:layout_constraintRight_toLeftOf="@+id/txt_nextDayDelivery"
                    app:layout_constraintTop_toTopOf="@+id/txt_productName"
                    tools:visibility="visible"/>

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/flowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_productName"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_productName"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txt_bundlingGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="商品明细"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_bundlingGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_white"
                android:padding="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_productCode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品编码"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <TextView
                    android:id="@+id/txt_productCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_productCode_title"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color222"
                    tools:text="s31378723423"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_categoryName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商城分类"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <TextView
                    android:id="@+id/txt_categoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_categoryName_title"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color222"
                    tools:text="肉禽蛋类-其他肉类-牛肉"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_shopProductCategoryName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="自定义分类"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

                <TextView
                    android:id="@+id/txt_shopProductCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_shopProductCategoryName_title"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.City22.Middle.Color222"
                    tools:text="肉禽蛋类-其他肉类-牛肉"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_productAttr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/base_white"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="商品详情"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

            <TextView
                android:id="@+id/txt_productBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_white"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color222"
                tools:text="商品简介：来自新西兰大草原的天然喂养肥牛，不添加任何防腐剂，米其林三星厨师亲自手切，薄而不断，特别好吃。"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>