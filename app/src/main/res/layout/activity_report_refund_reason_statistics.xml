<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_title="退货原因统计" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/rrs_type_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rrs_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_filter"
                android:drawablePadding="5dp"
                android:text="全部"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666" />

            <com.hll_sc_app.widget.TriangleView
                android:id="@+id/rrs_type_arrow"
                android:layout_width="6dp"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                app:trv_color="@color/color_666666"
                app:trv_direction="bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rrs_date_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rrs_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="5dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="2018/09/09 - 2018/09/16" />


            <com.hll_sc_app.widget.TriangleView
                android:id="@+id/rrs_date_arrow"
                android:layout_width="6dp"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                app:trv_color="@color/color_dddddd"
                app:trv_direction="bottom" />
        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/rrs_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white" />

    <com.hll_sc_app.widget.report.ReportEmptyView
        android:id="@+id/rrs_empty"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white"
        android:visibility="gone"
        app:rev_tip="当前日期下没有统计数据噢" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@color/base_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <com.hll_sc_app.widget.report.ReportTipsView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/white"
            app:rtv_tips="按退货申请日期统计自营业务，每小时更新一次" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/base_activity_bg"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="36"
                android:gravity="center"
                android:text="序号"
                android:textColor="@color/base_text999"
                android:textSize="10dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="159"
                android:gravity="center"
                android:text="退货原因"
                android:textColor="@color/base_text999"
                android:textSize="10dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:text="退货金额(元)"
                android:textColor="@color/base_text999"
                android:textSize="10dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:gravity="center"
                android:text="退货占比"
                android:textColor="@color/base_text999"
                android:textSize="10dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd" />
        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/rrs_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableLoadMore="false">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rrs_list_view"
                android:layout_width="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/dp_10"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</LinearLayout>