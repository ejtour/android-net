<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:inputType="number"
            android:maxLength="11"
            android:id="@+id/identify_new_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_login_phone"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请输入新手机号"
            android:textColor="@color/base_text222"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/identify_code_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_register_yzm"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:textColor="@color/base_text222"
                android:textColorHint="@color/color_aeaeae"
                android:textSize="13sp" />

            <com.hll_sc_app.base.widget.IdentifyCodeTextView
                android:id="@+id/identify_code_btn"
                style="@style/BtnOrderAction.PrimarySolid"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:enabled="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>