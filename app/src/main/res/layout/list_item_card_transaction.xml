<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/img_url"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:scaleType="center"
        android:src="@drawable/ic_refund_radius_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/text_222"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/img_url"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="九叶椒北京市福泽路店" />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/text_666"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        app:layout_constraintTop_toBottomOf="@id/txt_shop_name"
        tools:text="消费" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        app:layout_constraintTop_toBottomOf="@id/txt_type"
        tools:text="2019/07/01  11:00" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_222"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_shop_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="-500.00" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/border_eee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_time" />
</android.support.constraint.ConstraintLayout>