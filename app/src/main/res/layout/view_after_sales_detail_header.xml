<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/sdh_top_bar_bg"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_order_detail_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sdh_status_info_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_white_radius_8_solid"
        app:layout_constraintBottom_toBottomOf="@id/sdh_status_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sdh_status_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="13dp"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sdh_status_info_bg"
        tools:text="退货退款申请被拒绝！" />

    <TextView
        android:id="@+id/sdh_status_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="13dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sdh_status_info"
        app:layout_constraintTop_toBottomOf="@id/sdh_status_info"
        tools:text="2018-06-19 17:21:23\n拒绝原因：请上传相关凭证。" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sdh_refund_extra_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_white_radius_8_solid"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="15dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sdh_status_info_bg">

        <TextView
            android:id="@+id/sdh_refund_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款说明和凭证"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/sdh_refund_extra_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_refund_extra"
            app:layout_constraintBottom_toBottomOf="@id/sdh_refund_extra_bottom_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sdh_refund_extra" />

        <TextView
            android:id="@+id/sdh_refund_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            app:layout_constraintEnd_toEndOf="@id/sdh_refund_extra_bg"
            app:layout_constraintStart_toStartOf="@id/sdh_refund_extra_bg"
            app:layout_constraintTop_toTopOf="@id/sdh_refund_extra_bg"
            tools:text="马上就要过期了！怎么卖！" />

        <com.hll_sc_app.widget.ThumbnailView
            android:id="@+id/sdh_voucher_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            app:ctv_margin="20dp"
            app:ctv_padding="10dp"
            app:layout_constraintEnd_toEndOf="@id/sdh_refund_extra_bg"
            app:layout_constraintStart_toStartOf="@id/sdh_refund_extra_bg"
            app:layout_constraintTop_toBottomOf="@id/sdh_refund_remark" />

        <Space
            android:id="@+id/sdh_refund_extra_bottom_padding"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sdh_voucher_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/sdh_refund_info_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_white_radius_8_solid"
        app:layout_constraintBottom_toBottomOf="@id/sdh_negotiation_history"
        app:layout_constraintTop_toBottomOf="@id/sdh_refund_extra_group" />

    <TextView
        android:id="@+id/sdh_refund_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:text="退款总额"
        android:textAppearance="@style/TextAppearance.City22.Middle.Red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sdh_refund_info_bg" />

    <TextView
        android:id="@+id/sdh_refund_total_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/color_ed5655"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/sdh_refund_total_amount"
        app:layout_constraintEnd_toEndOf="@id/sdh_refund_info_bg"
        tools:text="¥126.00" />

    <View
        android:id="@+id/sdf_refund_info_div"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@id/sdh_refund_info_bg"
        app:layout_constraintStart_toStartOf="@id/sdh_refund_info_bg"
        app:layout_constraintTop_toBottomOf="@id/sdh_refund_total_amount" />

    <TextView
        android:id="@+id/sdh_negotiation_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="15dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="15dp"
        android:text="协商历史"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color333"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sdf_refund_info_div" />

    <TextView
        android:id="@+id/sdh_operation_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_white_radius_top_half_8_solid"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color333"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sdh_refund_info_bg"
        tools:text="退款信息" />
</merge>