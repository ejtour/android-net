<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/csd_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightVisibility="true"
        app:tb_title="标题" />

    <com.hll_sc_app.widget.SearchView
        android:id="@+id/csd_search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csd_title_bar" />

    <View
        android:id="@+id/csd_settle_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@id/csd_reconciliation_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csd_search_view" />

    <View
        android:id="@+id/csd_reconciliation_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@id/csd_date_button"
        app:layout_constraintStart_toEndOf="@id/csd_settle_button"
        app:layout_constraintTop_toTopOf="@id/csd_settle_button" />

    <View
        android:id="@+id/csd_date_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/csd_reconciliation_button"
        app:layout_constraintTop_toTopOf="@id/csd_settle_button" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/csd_settle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="结算状态"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/csd_settle_button"
        app:layout_constraintEnd_toStartOf="@id/csd_settle_arrow"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/csd_settle_button"
        app:layout_constraintTop_toTopOf="@id/csd_settle_button" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/csd_settle_arrow"
        android:layout_width="8dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@id/csd_settle_button"
        app:layout_constraintEnd_toEndOf="@id/csd_settle_button"
        app:layout_constraintStart_toEndOf="@id/csd_settle"
        app:layout_constraintTop_toTopOf="@id/csd_settle_button"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/csd_reconciliation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="对账状态"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/csd_reconciliation_button"
        app:layout_constraintEnd_toStartOf="@id/csd_reconciliation_arrow"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/csd_reconciliation_button"
        app:layout_constraintTop_toTopOf="@id/csd_reconciliation_button" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/csd_reconciliation_arrow"
        android:layout_width="8dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@id/csd_reconciliation_button"
        app:layout_constraintEnd_toEndOf="@id/csd_reconciliation_button"
        app:layout_constraintStart_toEndOf="@id/csd_reconciliation"
        app:layout_constraintTop_toTopOf="@id/csd_reconciliation_button"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/csd_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2020/03/03 …"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/csd_date_button"
        app:layout_constraintEnd_toStartOf="@id/csd_date_arrow"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/csd_date_button"
        app:layout_constraintTop_toTopOf="@id/csd_date_button" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/csd_date_arrow"
        android:layout_width="8dp"
        android:layout_height="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/csd_date_button"
        app:layout_constraintEnd_toEndOf="@id/csd_date_button"
        app:layout_constraintStart_toEndOf="@id/csd_date"
        app:layout_constraintTop_toTopOf="@id/csd_date_button"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/csd_amount"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toStartOf="@id/csd_paid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csd_settle_button"
        tools:text="¥ 902,800.00\n进货金额" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/csd_paid"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toStartOf="@id/csd_no_pay"
        app:layout_constraintStart_toEndOf="@id/csd_amount"
        app:layout_constraintTop_toBottomOf="@id/csd_settle_button"
        tools:text="¥ 702,500.00\n已付款" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/csd_no_pay"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/csd_paid"
        app:layout_constraintTop_toBottomOf="@id/csd_settle_button"
        tools:text="¥ 200,300.00\n未付款" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/csd_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csd_amount" />
</androidx.constraintlayout.widget.ConstraintLayout>