<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/bg_white_radius_8_solid"
    android:gravity="center_vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dth_listView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingLeft="8dp" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="14dp"
        android:layout_marginLeft="8dp"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/dth_look_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_little_right_arrow"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:paddingRight="12dp"
        android:text="待发货商品总量"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666" />
</LinearLayout>