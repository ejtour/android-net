<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/bg_divider_bottom"
    android:gravity="center_vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dth_listView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/dp_10"/>

    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/dth_look_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_little_right_arrow"
        android:drawablePadding="8dp"
        android:padding="15dp"
        android:text="待发货商品总量"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666" />
</LinearLayout>