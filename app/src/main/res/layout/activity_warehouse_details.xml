<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细资料"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@color/base_white"
        android:gravity="center_vertical"
        android:padding="10dp">

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/img_logoUrl"
            android:layout_width="48dp"
            android:layout_height="0dp"
            app:base_placeholder="@drawable/ic_group_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_group_placeholder"/>

        <TextView
            android:id="@+id/txt_groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            app:layout_constraintBottom_toBottomOf="@+id/img_logoUrl"
            app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
            app:layout_constraintTop_toTopOf="@+id/img_logoUrl"
            tools:text="北京太好吃家常菜" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="经营模式"
            android:textAppearance="@style/TextAppearance.City22.Small"/>

        <TextView
            android:id="@+id/txt_businessModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:hint="暂未提供"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            android:textColorHint="@color/color_666666"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="所在地区"
            android:textAppearance="@style/TextAppearance.City22.Small"/>

        <TextView
            android:id="@+id/txt_groupArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:hint="暂未提供"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            android:textColorHint="@color/color_666666"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="联&#160;&#160;系&#160;&#160;人"
            android:textAppearance="@style/TextAppearance.City22.Small"/>

        <TextView
            android:id="@+id/txt_linkman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:hint="暂未提供"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            android:textColorHint="@color/color_666666"
            tools:text="北京市二十二城采购集团"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="联系方式"
            android:textAppearance="@style/TextAppearance.City22.Small"/>

        <TextView
            android:id="@+id/txt_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:hint="暂未提供"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            android:textColorHint="@color/color_666666"
            tools:text="北京市二十二城采购集团"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_return_audit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退货审核"
            android:textAppearance="@style/TextAppearance.City22.Small"/>

        <TextView
            android:id="@+id/txt_return_audit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            tools:text="货主审核"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_shopsNum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="代仓门店"
            android:textAppearance="@style/TextAppearance.City22.Small"/>

        <TextView
            android:id="@+id/txt_shopsNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_switch_pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="代仓支付"
            android:textAppearance="@style/TextAppearance.City22.Small" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_pay"
            android:layout_width="46dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            app:kswBackDrawable="@drawable/switch_track"
            app:kswThumbDrawable="@drawable/base_thumb" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_receiver"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/base_bg_shadow_top_white_bar"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收&#160;&#160;款&#160;&#160;方"
            android:textAppearance="@style/TextAppearance.City22.Small" />

        <TextView
            android:id="@+id/txt_receiver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请选择收款方"
            android:textAppearance="@style/TextAppearance.City22.Small" />

        <ImageView
            android:id="@+id/img_receiver_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_gray" />
    </LinearLayout>

    <com.hll_sc_app.app.warehouse.detail.details.WarehouseButtonView
        android:id="@+id/buttonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>