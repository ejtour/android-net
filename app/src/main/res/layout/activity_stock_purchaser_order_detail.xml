<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/txt_purchaser_order_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采购单详情"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"
            />
        <ImageView
            android:id="@+id/shared_purchaser_order_detail_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_shareded"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/purchaser_order_comp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            tools:text="哗啦啦"
            android:textColor="#222222"
            android:textSize="@dimen/base_text_13" />
        <TextView
            android:id="@+id/purchaser_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            tools:text="未审核"
            android:textColor="#7ED321"
            android:textSize="@dimen/base_text_12" />
        <TextView
            android:layout_below="@+id/purchaser_order_comp_name"
            android:id="@+id/purchaser_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            tools:text="采购单号 : CG123456789"
            android:textColor="#999999"
            android:textSize="@dimen/base_text_10"/>
        <TextView
            android:id="@+id/purchaser_order_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/purchaser_order_status"
            tools:text="采购日期 : 2019/08/08"
            android:textColor="#999999"
            android:textSize="@dimen/base_text_10"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_below="@+id/purchaser_order_no"
            android:id="@+id/purchaser_order_orig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            tools:text="采购组织 : 北京一键食达"
            android:textColor="#999999"
            android:textSize="@dimen/base_text_10" />
        <TextView
            android:id="@+id/purchaser_order_arrival_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/purchaser_order_create_time"
            tools:text="到货日期 : 2019/08/08"
            android:textColor="#999999"
            android:textSize="@dimen/base_text_10"/>
        <TextView
            android:id="@+id/purchaser_order_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/purchaser_order_orig"
            tools:text="备注信息 : 无"
            android:textColor="#999999"
            android:textSize="@dimen/base_text_10"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:layout_height="63dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/purchaser_order_category_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="100"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="@dimen/base_text_13"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/purchaser_order_category_num"
                android:layout_marginTop="5dp"
                android:text="采购品项"
                android:gravity="center"
                android:textSize="@dimen/base_text_13"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/purchaser_order_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="100"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="@dimen/base_text_13"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/purchaser_order_num"
                android:layout_marginTop="5dp"
                android:text="采购数量"
                android:gravity="center"
                android:textSize="@dimen/base_text_13"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/purchaser_order_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="100"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="@dimen/base_text_13"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/purchaser_order_amount"
                android:layout_marginTop="5dp"
                android:text="合计金额"
                android:gravity="center"
                android:textSize="@dimen/base_text_13"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="商品明细"
            android:textSize="@dimen/base_text_10"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="#F3F3F3"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
    </RelativeLayout>
</LinearLayout>