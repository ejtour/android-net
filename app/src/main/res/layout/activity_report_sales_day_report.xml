<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose"/>

        <RelativeLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_back"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/edt_search"
                android:layout_width="287dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_search_text"
                android:drawableLeft="@drawable/ic_search_aeaeae"
                android:drawablePadding="10dp"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColor="@color/base_white"
                android:textColorHint="#FFFFFF"/>

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_clear_search"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/txt_options"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_options"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/day_report_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/txt_date_pre_week"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="上周"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_date"
                android:layout_toRightOf="@+id/txt_date_pre_week"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="01/01-01/07"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_date_next_week"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txt_date"
            android:gravity="center"
            android:hint="下周"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
            android:textColorHint="@color/color_aeaeae"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/day_report_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/txt_date_sunday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="周日"
            android:textSize="@dimen/base_text_12"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_date_monday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="周一"
            android:textSize="@dimen/base_text_12"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_date_next_tuesday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txt_date_monday"
            android:gravity="center"
            android:hint="周二"
            android:textSize="@dimen/base_text_12"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
            android:textColorHint="@color/color_aeaeae"/>
        <TextView
            android:id="@+id/txt_date_wednesday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="周三"
            android:textSize="@dimen/base_text_12"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_date_thursday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="周四"
            android:textSize="@dimen/base_text_12"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_date_next_friday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="周五"
            android:textSize="@dimen/base_text_12"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
            android:textColorHint="@color/color_aeaeae"/>
        <TextView
            android:id="@+id/txt_date_next_satday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="周六"
            android:textSize="@dimen/base_text_12"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
            android:textColorHint="@color/color_aeaeae"/>

    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/base_white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3"
            android:clipToPadding="false"
            android:padding="10dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>