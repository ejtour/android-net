<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <TextView
        android:id="@+id/txt_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="西直门旗舰店" />

    <TextView
        android:id="@+id/txt_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        app:layout_constraintTop_toBottomOf="@id/txt_shop_name"
        tools:text="清风餐饮管理有限公司" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        app:layout_constraintTop_toBottomOf="@id/txt_company_name"
        tools:text="2019/02/20 15:45" />

    <TextView
        android:id="@+id/txt_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="充值满10000元获得" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_color_divider"
        app:layout_constraintEnd_toEndOf="@id/txt_condition"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        app:layout_constraintTop_toBottomOf="@id/txt_time" />
</android.support.constraint.ConstraintLayout>