<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/pma_title_bar"
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="match_parent"
        app:tb_title="账期支付设置" />

    <LinearLayout
        android:id="@+id/ll_pay_type"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/pma_title_bar"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/base_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_pay_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账期支付"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_13" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_pay_type"
            android:layout_width="35dp"
            android:layout_height="21dp"
            app:kswBackDrawable="@drawable/switch_track"
            app:kswThumbDrawable="@drawable/base_thumb" />
    </LinearLayout>

    <com.hll_sc_app.widget.AccountPayView
        android:id="@+id/pma_account_pay"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_pay_type"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="15dp" />

    <LinearLayout
        android:id="@+id/ll_button_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_bg_shadow_bottom_white_bar"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_72"
        android:paddingRight="@dimen/dp_72">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_save"
            style="@style/BtnAfterSalesAction.PrimarySolid"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="保存设置"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_13" />
    </LinearLayout>
</RelativeLayout>