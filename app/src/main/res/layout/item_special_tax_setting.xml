<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="7dp">

    <ImageView
        android:id="@+id/sts_check"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/bg_selector_check_box"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/sts_image"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@id/sts_check"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="7dp"
        tools:src="@drawable/ic_placeholder" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="7dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sts_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sts_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="8dp"
        android:text="%"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBottom_toBottomOf="@id/sts_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/sts_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="numberDecimal"
        android:gravity="right"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:hint="— —"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintBaseline_toBaselineOf="@id/sts_percent"
        app:layout_constraintEnd_toStartOf="@id/sts_percent" />

    <TextView
        android:id="@+id/sts_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintBottom_toBottomOf="@id/sts_image"
        app:layout_constraintStart_toEndOf="@id/sts_image"
        tools:text="规格：2种" />

    <TextView
        android:id="@+id/sts_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toStartOf="@id/sts_number"
        app:layout_constraintStart_toEndOf="@id/sts_image"
        app:layout_constraintTop_toTopOf="@id/sts_image"
        tools:text="示例商品名称一般长度" />
</androidx.constraintlayout.widget.ConstraintLayout>