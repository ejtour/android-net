<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/opc_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/base_bg_shadow_top_bar"
        android:gravity="center"
        android:text="提交成功"
        android:textColor="@android:color/white"
        android:textSize="@dimen/base_text_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/opc_status_bg"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opc_title_bar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:src="@drawable/bg_order_commit_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/opc_status_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/opc_success_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="订单提交成功"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/opc_status_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="供应商会尽快给您配送"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opc_success_tip" />

    <View
        android:id="@+id/opc_btn_bg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/color_fafafa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opc_status_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/opc_return_list"
        style="@style/BtnOrderAction.PrimaryStroke"
        android:layout_marginLeft="60dp"
        android:text="返回列表"
        app:layout_constraintBottom_toBottomOf="@id/opc_btn_bg"
        app:layout_constraintEnd_toStartOf="@id/opc_view_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/opc_btn_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/opc_view_order"
        style="@style/BtnOrderAction.PrimaryStroke"
        android:layout_marginRight="60dp"
        android:text="查看订单"
        app:layout_constraintBottom_toBottomOf="@id/opc_btn_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/opc_return_list"
        app:layout_constraintTop_toTopOf="@id/opc_btn_bg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/opc_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opc_btn_bg"
        tools:itemCount="3" />
</androidx.constraintlayout.widget.ConstraintLayout>