<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10">

    <View
        android:id="@+id/oth_status_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        app:layout_constraintBottom_toBottomOf="@id/oth_status_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/oth_status_logo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        app:base_circle="true"
        app:base_placeholder="@drawable/ic_empty_shop_view"
        app:layout_constraintStart_toStartOf="@id/oth_status_bg"
        app:layout_constraintTop_toTopOf="@id/oth_status_bg"
        tools:src="@drawable/ic_empty_shop_view" />

    <TextView
        android:id="@+id/oth_status_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="1dp"
        android:layout_marginRight="@dimen/dp_10"
        android:text="供应商自有物流配送"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/oth_status_logo"
        app:layout_constraintTop_toTopOf="@id/oth_status_logo" />

    <TextView
        android:id="@+id/oth_copy"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_action_button_little"
        android:gravity="center"
        android:text="复制"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/oth_status_desc"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.hll_sc_app.widget.LeakFixedTextView
        android:id="@+id/oth_status_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingBottom="15dp"
        android:text="您的货物正在快马加鞭而来，请耐心等待～"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toStartOf="@id/oth_copy"
        app:layout_constraintStart_toStartOf="@id/oth_status_title"
        app:layout_constraintTop_toBottomOf="@id/oth_status_title" />
</androidx.constraintlayout.widget.ConstraintLayout>