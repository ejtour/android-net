<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/base_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_no"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="序号" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="质检结果" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_code"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="品项编码" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="品项名称" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_spec"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="规格" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_unit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="单位" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="数量" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_unit_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="单价" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="金额" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_tax_rate"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="税率" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_unit_price_no_tax"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="不含税单价" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_price_no_taxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="不含税金额" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/unit_assist"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="辅助单位" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/number_assist"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="辅助数量" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/date_create"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="生产日期" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/batch_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="批次号" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_activity_bg" />

    <TextView
        android:id="@+id/txt_remark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_10"
        tools:text="备注" />
</LinearLayout>