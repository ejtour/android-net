<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="查看报价单"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_title_center_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_isWarehouse"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_bg_item_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txt_isWarehouse_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="报价类别"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_isWarehouse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txt_isWarehouse_title"
            android:background="@null"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:hint="请选择报价类别"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            android:textColorHint="@color/color_aeaeae"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_select_purchaser"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_isWarehouse"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_bg_item_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txt_select_purchaser_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="报价对象"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_select_purchaser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txt_select_purchaser_title"
            android:background="@null"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:hint="请选择报价的采购商"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            android:textColorHint="@color/color_aeaeae"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_priceDate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_select_purchaser"
        android:layout_marginTop="1dp"
        android:background="@drawable/base_bg_item_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txt_priceDate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="生效期限"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_priceDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txt_priceDate_title"
            android:background="@null"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:hint="请选择报价的生效期限"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            android:textColorHint="@color/color_aeaeae"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_templateID"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_priceDate"
        android:layout_marginTop="1dp"
        android:background="@drawable/base_bg_item_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txt_templateID_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="比例模板"
            android:textAppearance="@style/TextAppearance.City22.Middle.Color666"/>

        <TextView
            android:id="@+id/txt_templateID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txt_templateID_title"
            android:background="@null"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:hint="请选择比例模板"
            android:textAppearance="@style/TextAppearance.City22.Middle"
            android:textColorHint="@color/color_aeaeae"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rl_templateID"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_disable"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_button_quotation_detail_disable"
            android:gravity="center"
            android:text="停用"
            android:textColor="@color/color_ed5655"
            android:textSize="@dimen/base_text_13"/>

        <TextView
            android:id="@+id/txt_add_product"
            style="@style/BtnOrderAction.PrimarySolid"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text="新增商品"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>