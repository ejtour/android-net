<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="14dp"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="14dp">

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="注销退款" />

    <TextView
        android:id="@+id/txt_operater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_type"
        tools:text="操作人：郭阳" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_operater"
        tools:text="2019/05/20  05:00:34" />

    <TextView
        android:id="@+id/txt_title_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_operater"
        tools:text="备注：" />

    <TextView
        android:id="@+id/txt_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/text_999"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_title_remark"
        app:layout_constraintTop_toTopOf="@id/txt_title_remark"
        tools:text="现金卡值退款2000元" />
</androidx.constraintlayout.widget.ConstraintLayout>