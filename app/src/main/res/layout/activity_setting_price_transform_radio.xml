<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/asr_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="价格根据转换率变价设置" />

    <View
        android:id="@+id/asr_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/view_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/asr_title_bar" />

    <TextView
        android:id="@+id/ars_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:text="价格根据转换率变价设置"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintStart_toStartOf="@id/asr_bg"
        app:layout_constraintTop_toTopOf="@id/asr_bg" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/ars_switch"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginRight="@dimen/dp_10"
        app:kswBackDrawable="@drawable/switch_track"
        app:kswThumbDrawable="@drawable/base_thumb"
        app:layout_constraintBottom_toBottomOf="@id/ars_label"
        app:layout_constraintEnd_toEndOf="@id/asr_bg"
        app:layout_constraintTop_toTopOf="@id/ars_label" />

    <TextView
        android:id="@+id/ars_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dp_10"
        android:lineSpacingExtra="4dp"
        android:text="*开启多规格商品，修改其中一个规格的单价，则其他规格可以根据转化率改变自动变更单价。"
        android:textColor="@color/color_aeaeae"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintEnd_toEndOf="@id/asr_bg"
        app:layout_constraintStart_toStartOf="@id/asr_bg"
        app:layout_constraintTop_toBottomOf="@id/ars_switch" />

    <View
        android:id="@+id/view_border"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ars_tip" />
</android.support.constraint.ConstraintLayout>