<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_title="我的账号" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dp_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10">
            <!--公司信息 start-->
            <View
                android:id="@+id/wma_info_bg"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.hll_sc_app.base.utils.glide.GlideImageView
                android:id="@+id/wma_logo"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_10"
                app:base_RoundingRadius="5"
                app:base_placeholder="@drawable/ic_group_placeholder"
                app:layout_constraintBottom_toBottomOf="@id/wma_info_bg"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="@id/wma_info_bg"
                app:layout_constraintTop_toTopOf="@id/wma_info_bg"
                tools:src="@drawable/ic_group_placeholder" />

            <TextView
                android:id="@+id/wma_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                app:layout_constraintStart_toEndOf="@id/wma_logo"
                app:layout_constraintTop_toTopOf="@id/wma_logo"
                tools:text="账号：89249326962938648" />

            <TextView
                android:id="@+id/wma_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textAppearance="@style/TextAppearance.City22.Little.Color666"
                app:layout_constraintStart_toStartOf="@id/wma_account"
                app:layout_constraintTop_toBottomOf="@id/wma_account"
                tools:text="公司名称：北京市二十二城电子商务有限公司" />

            <!--公司信息 end-->

            <!--公司详情 start-->
            <View
                android:id="@+id/wma_detail_bg"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wma_info_bg" />

            <View
                android:id="@+id/wma_div1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@color/color_eeeeee"
                app:layout_constraintBottom_toTopOf="@id/wma_div2"
                app:layout_constraintEnd_toEndOf="@id/wma_detail_bg"
                app:layout_constraintStart_toStartOf="@id/wma_detail_bg"
                app:layout_constraintTop_toTopOf="@id/wma_detail_bg" />

            <View
                android:id="@+id/wma_div2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@color/color_eeeeee"
                app:layout_constraintBottom_toTopOf="@id/wma_div3"
                app:layout_constraintEnd_toEndOf="@id/wma_detail_bg"
                app:layout_constraintStart_toStartOf="@id/wma_detail_bg"
                app:layout_constraintTop_toBottomOf="@id/wma_div1" />

            <View
                android:id="@+id/wma_div3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@color/color_eeeeee"
                app:layout_constraintBottom_toBottomOf="@id/wma_detail_bg"
                app:layout_constraintEnd_toEndOf="@id/wma_detail_bg"
                app:layout_constraintStart_toStartOf="@id/wma_detail_bg"
                app:layout_constraintTop_toBottomOf="@id/wma_div2" />

            <TextView
                android:id="@+id/wma_company_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司类型"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                app:layout_constraintBottom_toTopOf="@id/wma_div1"
                app:layout_constraintStart_toStartOf="@id/wma_div1"
                app:layout_constraintTop_toTopOf="@id/wma_detail_bg" />

            <TextView
                android:id="@+id/wma_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                app:layout_constraintBaseline_toBaselineOf="@id/wma_company_type_label"
                app:layout_constraintEnd_toEndOf="@id/wma_div1"
                tools:text="个体户" />

            <TextView
                android:id="@+id/wma_region_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                app:layout_constraintBottom_toTopOf="@id/wma_div2"
                app:layout_constraintStart_toStartOf="@id/wma_div1"
                app:layout_constraintTop_toBottomOf="@id/wma_div1" />

            <TextView
                android:id="@+id/wma_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                app:layout_constraintBaseline_toBaselineOf="@id/wma_region_label"
                app:layout_constraintEnd_toEndOf="@id/wma_div1"
                tools:text="北京市西城区" />

            <TextView
                android:id="@+id/wma_register_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册地址"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                app:layout_constraintBottom_toTopOf="@id/wma_div3"
                app:layout_constraintStart_toStartOf="@id/wma_div1"
                app:layout_constraintTop_toBottomOf="@id/wma_div2" />

            <TextView
                android:id="@+id/wma_register_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                app:layout_constraintBaseline_toBaselineOf="@id/wma_register_address_label"
                app:layout_constraintEnd_toEndOf="@id/wma_div1"
                tools:text="西直门凯德大厦" />

            <TextView
                android:id="@+id/wma_industry_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属行业"
                android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
                app:layout_constraintBottom_toBottomOf="@id/wma_detail_bg"
                app:layout_constraintStart_toStartOf="@id/wma_div1"
                app:layout_constraintTop_toBottomOf="@id/wma_div3" />

            <TextView
                android:id="@+id/wma_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                app:layout_constraintBaseline_toBaselineOf="@id/wma_industry_label"
                app:layout_constraintEnd_toEndOf="@id/wma_div1"
                tools:text="餐饮行业" />
            <!--公司详情 end-->

            <!--公司营业执照 end-->
            <View
                android:id="@+id/wma_license_bg"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wma_detail_bg" />

            <com.hll_sc_app.base.utils.glide.GlideImageView
                android:id="@+id/wma_license_image"
                android:layout_width="0dp"
                android:layout_height="106dp"
                android:layout_margin="@dimen/dp_10"
                app:base_RoundingRadius="2"
                app:layout_constraintBottom_toBottomOf="@id/wma_license_bg"
                app:layout_constraintEnd_toEndOf="@id/wma_license_bg"
                app:layout_constraintStart_toStartOf="@id/wma_license_bg"
                tools:background="@drawable/ic_placeholder" />

            <TextView
                android:id="@+id/wma_license_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司营业执照"
                android:textAppearance="@style/TextAppearance.City22.Little.Color666"
                app:layout_constraintBottom_toTopOf="@id/wma_license_image"
                app:layout_constraintStart_toStartOf="@id/wma_license_image"
                app:layout_constraintTop_toTopOf="@id/wma_license_bg" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/wma_license_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="wma_license_bg,wma_license_image,wma_license_label" />
            <!--公司营业执照 end-->

            <!--店铺门头 start-->
            <View
                android:id="@+id/wma_doorway_bg"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wma_license_bg" />

            <com.hll_sc_app.base.utils.glide.GlideImageView
                android:id="@+id/wma_doorway_image"
                android:layout_width="0dp"
                android:layout_height="106dp"
                android:layout_margin="@dimen/dp_10"
                app:base_RoundingRadius="2"
                app:layout_constraintBottom_toBottomOf="@id/wma_doorway_bg"
                app:layout_constraintEnd_toEndOf="@id/wma_doorway_bg"
                app:layout_constraintStart_toStartOf="@id/wma_doorway_bg"
                tools:background="@drawable/ic_placeholder" />

            <TextView
                android:id="@+id/wma_doorway_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺门头"
                android:textAppearance="@style/TextAppearance.City22.Little.Color666"
                app:layout_constraintBottom_toTopOf="@id/wma_doorway_image"
                app:layout_constraintStart_toStartOf="@id/wma_doorway_image"
                app:layout_constraintTop_toTopOf="@id/wma_doorway_bg" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/wma_doorway_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="wma_doorway_bg,wma_doorway_image,wma_doorway_label" />
            <!--店铺门头 end-->

            <!--店内环境 start-->
            <View
                android:id="@+id/wma_indoor_bg"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wma_doorway_bg" />

            <com.hll_sc_app.base.utils.glide.GlideImageView
                android:id="@+id/wma_indoor_image"
                android:layout_width="0dp"
                android:layout_height="106dp"
                android:layout_margin="@dimen/dp_10"
                app:base_RoundingRadius="2"
                app:layout_constraintBottom_toBottomOf="@id/wma_indoor_bg"
                app:layout_constraintEnd_toEndOf="@id/wma_indoor_bg"
                app:layout_constraintStart_toStartOf="@id/wma_indoor_bg"
                tools:background="@drawable/ic_placeholder" />

            <TextView
                android:id="@+id/wma_indoor_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店内环境"
                android:textAppearance="@style/TextAppearance.City22.Little.Color666"
                app:layout_constraintBottom_toTopOf="@id/wma_indoor_image"
                app:layout_constraintStart_toStartOf="@id/wma_indoor_image"
                app:layout_constraintTop_toTopOf="@id/wma_indoor_bg" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/wma_indoor_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="wma_indoor_bg,wma_indoor_image,wma_indoor_label" />
            <!--店内环境 end-->

            <!--店内收银台 start-->
            <View
                android:id="@+id/wma_cashier_bg"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wma_indoor_bg" />

            <com.hll_sc_app.base.utils.glide.GlideImageView
                android:id="@+id/wma_cashier_image"
                android:layout_width="0dp"
                android:layout_height="106dp"
                android:layout_margin="@dimen/dp_10"
                app:base_RoundingRadius="2"
                app:layout_constraintBottom_toBottomOf="@id/wma_cashier_bg"
                app:layout_constraintEnd_toEndOf="@id/wma_cashier_bg"
                app:layout_constraintStart_toStartOf="@id/wma_cashier_bg"
                tools:background="@drawable/ic_placeholder" />

            <TextView
                android:id="@+id/wma_cashier_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店内收银台"
                android:textAppearance="@style/TextAppearance.City22.Little.Color666"
                app:layout_constraintBottom_toTopOf="@id/wma_cashier_image"
                app:layout_constraintStart_toStartOf="@id/wma_cashier_image"
                app:layout_constraintTop_toTopOf="@id/wma_cashier_bg" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/wma_cashier_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="wma_cashier_bg,wma_cashier_image,wma_cashier_label" />
            <!--店内收银台 end-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>