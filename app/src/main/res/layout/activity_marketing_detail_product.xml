<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tb_title="活动详情" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/base_white"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_text222"
                    android:textSize="@dimen/base_text_16"
                    tools:text="新店开业大酬宾" />

                <TextView
                    android:id="@+id/txt_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_title"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/base_text_12"
                    tools:text="活动时间：2019/01/01  00:00 - 2019/01/05  23:59" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/txt_activity_time"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_marketing_status"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_4"
                    android:textSize="@dimen/base_text_12"
                    tools:text="已过期"
                    tools:textColor="@color/color_999999" />

                <TextView
                    android:id="@+id/txt_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_status"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/base_text_12"
                    tools:text="创建时间：王铁锤 /2019/01/01 09:00 " />

                <TextView
                    android:id="@+id/txt_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_create_time"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/base_text_12"
                    tools:text="促销规则：赠券" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/base_white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/txt_title_product"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:text="活动商品"
                    android:textColor="@color/base_text666"
                    android:textSize="@dimen/base_text_13" />

                <TextView
                    android:id="@+id/txt_check_product"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="查看全部"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/base_text_13" />

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/txt_title_product"
                    android:background="@color/base_color_divider" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcl_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_divider" />

            </RelativeLayout>

            <com.hll_sc_app.app.marketingsetting.view.CouponRuleSelectView
                android:id="@+id/view_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:modal="check" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@color/base_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动区域"
                    android:textColor="@color/base_text666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_little_right_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/base_text666"
                    android:textSize="13sp"
                    tools:text="全国" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>