<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_white_radius_5_solid">

    <View
        android:id="@+id/icd_div"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/icd_date_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.City22.Little"
        app:layout_constraintBottom_toTopOf="@id/icd_div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2019/01\n星期二" />

    <TextView
        android:id="@+id/icd_date_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/color_222222"
        android:visibility="gone"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/icd_div"
        app:layout_constraintStart_toEndOf="@id/icd_date_first"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="29" />

    <TextView
        android:id="@+id/icd_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Little"
        app:layout_constraintBottom_toTopOf="@id/icd_div"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20:06" />

    <TextView
        android:id="@+id/icd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintBottom_toTopOf="@id/icd_div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/icd_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:maxLines="3"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icd_div" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/border_eee"
        app:layout_constraintBottom_toBottomOf="@id/icd_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/icd_read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_daily_read"
        android:drawablePadding="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="未读"
        android:textColor="@drawable/color_state_on_pri_off_999"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintStart_toStartOf="@id/icd_content"
        app:layout_constraintTop_toBottomOf="@id/icd_content" />

    <TextView
        android:id="@+id/icd_review_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_daily_review"
        android:drawablePadding="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="暂无点评"
        android:textColor="@drawable/color_state_on_pri_off_999"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintStart_toEndOf="@id/icd_read_status"
        app:layout_constraintTop_toBottomOf="@id/icd_content" />
</androidx.constraintlayout.widget.ConstraintLayout>