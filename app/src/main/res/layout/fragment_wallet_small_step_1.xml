<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbars="none"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_group_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="账务主体名称"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:gravity="center|right"
                android:id="@+id/edt_group_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/txt_group_name"
                android:background="@null"
                android:hint="请填写账务主体名称"
                android:textColor="@color/text_222"
                android:textSize="13sp"
                android:textColorHint="@color/text_aeaeae" />

            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_group_name"
                android:background="@color/base_color_divider" />

            <TextView
                android:id="@+id/txt_company_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_below="@id/divider_1"
                android:text="商户名称"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:gravity="center|right"
                android:id="@+id/edt_company_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/txt_company_name"
                android:layout_below="@id/divider_1"
                android:background="@null"
                android:hint="请填写商户全称"
                android:textSize="13sp"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae" />

            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/edt_company_name"
                android:background="@color/base_color_divider" />

            <TextView
                android:layout_below="@id/divider_2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="商户简称"
                android:gravity="center"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:layout_below="@id/divider_2"
                android:id="@+id/edt_short_company_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:gravity="right|center"
                android:hint="在支付完成页向消费者展示"
                android:textColor="@color/text_222"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@+id/txt_title_real_address"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="经营所在地"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_real_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/txt_title_real_address"
                android:drawableRight="@drawable/ic_little_right_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical|right"
                android:hint="请选择实际经营所在地"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp"
                android:textColor="@color/text_222"
                tools:text="" />

            <View
                android:id="@+id/view_border_3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_title_real_address"
                android:background="@color/border_eee" />

            <TextView
                android:id="@+id/txt_title_business_address"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_real_address"
                android:gravity="center_vertical"
                android:text="详细地址"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_business_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_title_real_address"
                android:layout_toRightOf="@+id/txt_title_business_address"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入详细地址"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp" />

            <View
                android:id="@+id/view_border_4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_title_business_address"
                android:background="@color/border_eee" />

            <TextView
                android:id="@+id/txt_title_link"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/view_border_4"
                android:text="联系方式"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:layout_below="@+id/view_border_4"
                android:id="@+id/edt_link"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/txt_title_license_address"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入业务联系方式"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp"
                tools:text="" />

            <View
                android:id="@+id/view_border_5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/edt_link"
                android:background="@color/border_eee" />

            <TextView
                android:id="@+id/txt_mail"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/view_border_5"
                android:gravity="center_vertical"
                android:text="电子邮箱"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_below="@+id/view_border_5"
                android:layout_toRightOf="@+id/txt_mail"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入业务联系电子邮箱"
                android:textColorHint="@color/text_aeaeae"
                android:textSize="13sp"
                tools:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/txt_title_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户门头图"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_sub_title_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_title_head"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_title_head"
                android:text="请拍照或从相册中选择上传"
                android:textColor="@color/text_aeaeae"
                android:textSize="10sp" />

            <com.hll_sc_app.base.widget.ImgUploadBlock
                android:id="@+id/upload_img_head"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/txt_title_head"
                android:layout_marginTop="@dimen/dp_10"
                app:base_imgIcon="@drawable/base_ic_img_add"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:base_subTitle=" "
                app:base_title="点击上传商户门头图" />

            <TextView
                android:id="@+id/txt_title_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_img_head"
                android:layout_marginTop="20dp"
                android:text="店内照"
                android:textColor="@color/text_666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_sub_title_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_title_inner"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_title_inner"
                android:text="请拍照或从相册中选择上传"
                android:textColor="@color/text_aeaeae"
                android:textSize="10sp" />

            <com.hll_sc_app.base.widget.ImgUploadBlock
                android:id="@+id/upload_img_inner"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/txt_title_inner"
                android:layout_marginTop="@dimen/dp_10"
                app:base_imgIcon="@drawable/base_ic_img_add"
                app:base_subTitle=" "
                app:base_title="点击上传店内照"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>


