<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/cdd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        tools:text="大区经理" />

    <TextView
        android:id="@+id/cdd_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cdd_name"
        android:layout_alignBottom="@id/cdd_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        tools:text="2019/01/30 11:12" />

    <TextView
        android:id="@+id/cdd_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cdd_name"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:text="干的不错，再接再厉，力求新高，加油！"
        android:textAppearance="@style/TextAppearance.City22.Small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/cdd_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee" />
</RelativeLayout>