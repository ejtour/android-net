<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginLeft="53dp"
    android:layout_marginRight="53dp"
    android:background="@drawable/base_bg_white_radius_5_solid"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="xxxxxx" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/base_color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_gray_solid_radius_5"
        android:hint="xxxxxxxxxxxx"
        android:lines="1"
        android:padding="@dimen/dp_10"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_divider_2"
        android:layout_width="0.5dp"
        android:layout_height="12dp"
        android:background="@color/base_color_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_divider" />

    <TextView
        android:id="@+id/txt_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/base_text999"
        android:textSize="@dimen/base_text_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_divider_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_divider"
        tools:text="容我再想想" />

    <TextView
        android:id="@+id/txt_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/base_text_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_divider_2"
        app:layout_constraintTop_toTopOf="@id/view_divider"
        tools:text="确认新建" />
</android.support.constraint.ConstraintLayout>