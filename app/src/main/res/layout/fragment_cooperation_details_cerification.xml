<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_certification013"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:background="@color/base_white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="254dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_dialog_failure"/>

            <TextView
                android:id="@+id/txt_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="该采购商尚未进行认证！"
                android:textColor="@color/base_colorPrimary"
                android:textSize="@dimen/base_text_16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="该采购商尚未在二十二城平台进行官方认证\n请慎重进行合作交易噢～"
                android:textColor="@color/color_aeaeae"
                android:textSize="@dimen/base_text_12"/>

        </LinearLayout>


        <com.hll_sc_app.app.cooperation.detail.details.CooperationButtonView
            android:id="@+id/buttonView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>



