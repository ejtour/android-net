<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_certification013"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:background="@color/base_white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="254dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_dialog_failure"/>

            <TextView
                android:id="@+id/txt_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="该客户尚未进行认证！"
                android:textColor="@color/base_colorPrimary"
                android:textSize="@dimen/base_text_16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/no_auth_warn"
                android:textColor="@color/color_aeaeae"
                android:textSize="@dimen/base_text_12"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_certification2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_certify">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_certify_pass"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txt_certification2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="该客户已完成企业身份认证"
                    android:textAppearance="@style/TextAppearance.City22.Little.Color666"
                    app:layout_constraintBottom_toTopOf="@+id/txt_certification2_tips"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/txt_certification2_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:text="官方认证，交易更有保障"
                    android:textAppearance="@style/TextAppearance.City22.Little.Color999"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_certification2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/base_bg_shadow_top_white_bar"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="法人姓名"
                    android:textAppearance="@style/TextAppearance.City22.Small"/>

                <TextView
                    android:id="@+id/txt_businessEntity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                    tools:text="二十二城"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_imagePath"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/base_bg_shadow_top_white_bar"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="门&#160;&#160;头&#160;&#160;照"
                    android:textAppearance="@style/TextAppearance.City22.Small"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:hint="点击查看"
                    android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                    android:textColorHint="@color/color_999999"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_licencePhotoUrl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/base_bg_shadow_top_white_bar"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="营业执照"
                    android:textAppearance="@style/TextAppearance.City22.Small"/>

                <TextView
                    android:id="@+id/txt_maintainLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:hint="点击查看"
                    android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                    android:textColorHint="@color/color_999999"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_otherLicenses"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/base_bg_shadow_top_white_bar"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="其他证照"
                    android:textAppearance="@style/TextAppearance.City22.Small"/>

                <TextView
                    android:id="@+id/txt_defaultDeliveryWay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:hint="点击查看"
                    android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                    android:textColorHint="@color/color_999999"/>

            </LinearLayout>

        </LinearLayout>

        <com.hll_sc_app.app.cooperation.detail.details.CooperationButtonView
            android:id="@+id/buttonView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>



