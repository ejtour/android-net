<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/base_white"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_product_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="蔬菜水果"
        android:textColor="@color/color_222222"/>

    <TextView
        android:id="@+id/txt_refund_time_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/img_arrow"
        android:layout_toRightOf="@+id/txt_product_category_name"
        android:gravity="center_vertical|right"
        android:hint="不可退货"
        android:paddingLeft="5dp"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        android:textColor="@color/color_999999"/>

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_arrow_gray"/>
</RelativeLayout>
