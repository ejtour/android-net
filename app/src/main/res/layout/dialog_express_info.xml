<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:background="@drawable/base_bg_white_radius_5_solid">

    <TextView
        android:id="@+id/dei_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="填写物流信息"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dei_top_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dei_title"/>

    <TextView
        android:id="@+id/dei_select_company"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_express_info_text"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:gravity="center_vertical"
        android:hint="请选择物流公司"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintEnd_toEndOf="@+id/dei_top_line"
        app:layout_constraintStart_toStartOf="@+id/dei_top_line"
        app:layout_constraintTop_toBottomOf="@+id/dei_top_line"/>

    <EditText
        android:id="@+id/dei_no"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_express_info_text"
        android:hint="请填写物流单号"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:inputType="number"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintEnd_toEndOf="@+id/dei_top_line"
        app:layout_constraintStart_toStartOf="@+id/dei_top_line"
        app:layout_constraintTop_toBottomOf="@+id/dei_select_company"/>

    <View
        android:id="@+id/dei_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@+id/dei_top_line"
        app:layout_constraintStart_toStartOf="@+id/dei_top_line"
        app:layout_constraintTop_toBottomOf="@+id/dei_no"/>

    <TextView
        android:id="@+id/dei_cancel"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="容我再想想"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toStartOf="@+id/dei_ver_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dei_bottom_line"/>

    <View
        android:id="@+id/dei_ver_line"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:background="@color/color_d8d8d8"
        app:layout_constraintBottom_toBottomOf="@+id/dei_cancel"
        app:layout_constraintEnd_toStartOf="@+id/dei_ok"
        app:layout_constraintStart_toEndOf="@+id/dei_cancel"
        app:layout_constraintTop_toTopOf="@+id/dei_cancel"/>

    <TextView
        android:id="@+id/dei_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="确认发货"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintBottom_toBottomOf="@+id/dei_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dei_ver_line"
        app:layout_constraintTop_toTopOf="@+id/dei_cancel"/>
</android.support.constraint.ConstraintLayout>