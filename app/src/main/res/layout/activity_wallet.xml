<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tb_title="我的钱包"
        app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                tools:visibility="visible"
                android:id="@+id/ll_container"
                android:visibility="gone"
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableLeft="@drawable/ic_wallet_title"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="我的企业钱包"
                    android:textColor="@color/text_666"
                    android:textSize="@dimen/sp_12" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cst_status_unusable"
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/ic_wallet_card_bk">

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="@dimen/dp_40"
                        android:textColor="#1C1817"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="您的企业钱包在审核中" />

                    <TextView
                        android:id="@+id/txt_sub_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/text_666"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toStartOf="@+id/txt_status"
                        app:layout_constraintTop_toBottomOf="@id/txt_status"
                        tools:text="点击立刻激活前往开通" />

                    <TextView
                        android:id="@+id/txt_option"
                        style="@style/BtnAfterSalesAction.PrimarySolid"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintBottom_toBottomOf="@id/txt_sub_status"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txt_status"
                        tools:text="立即激活" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text=" 智惠支付 · 智能便捷 · 惠泽天下"
                        android:textColor="@color/text_aeaeae"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@+id/txt_status"
                        app:layout_constraintTop_toBottomOf="@id/txt_sub_status" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cst_status_usable"
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/ic_wallet_card_nomal_bk">

                    <TextView
                        android:id="@+id/txt_title_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="我的余额"
                        android:textColor="@color/text_999"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/text_222"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/txt_title_balance"
                        app:layout_constraintTop_toBottomOf="@id/txt_title_balance"
                        tools:text="82,900.00" />

                    <View
                        android:id="@+id/view_divider"
                        android:layout_width="0.5dp"
                        android:layout_height="60dp"
                        android:background="@color/border_eee"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_title_balance" />


                    <TextView
                        android:id="@+id/txt_title_useble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="可提现"
                        android:textColor="@color/text_999"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@id/view_divider"
                        app:layout_constraintTop_toTopOf="@id/view_divider" />

                    <TextView
                        android:id="@+id/txt_usable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_999"
                        android:textSize="13sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/txt_title_useble"
                        app:layout_constraintStart_toEndOf="@id/txt_title_useble"
                        app:layout_constraintTop_toTopOf="@id/txt_title_useble"
                        tools:text="¥ 82,000.00" />

                    <TextView
                        android:id="@+id/txt_title_unuseble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="暂冻结"
                        android:textColor="@color/text_999"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@id/txt_title_useble"
                        app:layout_constraintTop_toBottomOf="@id/txt_title_useble" />

                    <TextView
                        android:id="@+id/txt_unusable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_999"
                        android:textSize="13sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/txt_title_unuseble"
                        app:layout_constraintStart_toEndOf="@id/txt_title_unuseble"
                        app:layout_constraintTop_toTopOf="@id/txt_title_unuseble"
                        tools:text="¥ 900.00" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="106dp" />

                    <TextView
                        android:id="@+id/txt_my_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_wallet_account"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="账号"
                        android:textColor="@color/text_222"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/divider_1"
                        app:layout_constraintTop_toBottomOf="@id/guideline" />

                    <View
                        android:id="@+id/divider_1"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp_10"
                        android:background="#dddddd"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/txt_my_account"
                        app:layout_constraintRight_toLeftOf="@id/txt_recharge"
                        app:layout_constraintTop_toTopOf="@id/guideline" />

                    <TextView
                        android:id="@+id/txt_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_wallet_recharge"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="充值"
                        android:visibility="gone"
                        android:textColor="@color/text_222"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/divider_1"
                        app:layout_constraintRight_toLeftOf="@id/divider_2"
                        app:layout_constraintTop_toBottomOf="@id/guideline" />

                    <View
                        android:id="@+id/divider_2"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp_10"
                        android:background="#dddddd"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/txt_recharge"
                        app:layout_constraintRight_toLeftOf="@id/txt_cash"
                        app:layout_constraintTop_toTopOf="@id/guideline" />

                    <TextView
                        android:id="@+id/txt_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_wallet_cash"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="提现"
                        android:textColor="@color/text_222"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/divider_2"
                        app:layout_constraintRight_toLeftOf="@id/divider_3"
                        app:layout_constraintTop_toBottomOf="@id/guideline" />

                    <View
                        android:id="@+id/divider_3"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp_10"
                        android:background="#dddddd"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/txt_cash"
                        app:layout_constraintRight_toLeftOf="@id/txt_detail"
                        app:layout_constraintTop_toTopOf="@id/guideline" />

                    <TextView
                        android:id="@+id/txt_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_wallet_detail"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="明细"
                        android:textColor="@color/text_222"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/divider_3"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/guideline" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>