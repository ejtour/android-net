<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:paddingLeft="10dp"
    android:paddingBottom="@dimen/dp_10">

    <View
        android:id="@+id/view_divider_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_color_divider"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/glide_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp_10"
        app:base_RoundingRadius="3"
        app:base_placeholder="@drawable/ic_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divider_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:textColor="@color/base_text222"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/glide_img"
        app:layout_constraintTop_toTopOf="@id/glide_img"
        tools:text="二十二城西直门旗舰店" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:textColor="@color/base_text999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        app:layout_constraintTop_toBottomOf="@id/txt_shop_name"
        tools:text="北京二十二城电子商务有限公司" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:textColor="@color/base_text666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/glide_img"
        app:layout_constraintStart_toStartOf="@id/txt_shop_name"
        tools:text="发货仓库：华北一号仓" />
</androidx.constraintlayout.widget.ConstraintLayout>