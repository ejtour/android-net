<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fmo_top_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/base_bg_shadow_top_bar"
        app:layout_constraintBottom_toBottomOf="@id/fmo_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fmo_options"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_options"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/fmo_status_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/fmo_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fmo_search"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/bg_search_text"
        android:gravity="center_vertical"
        android:hint="搜索"
        android:paddingLeft="38dp"
        android:paddingRight="30dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small.White"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/fmo_options"
        app:layout_constraintEnd_toStartOf="@id/fmo_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fmo_options" />

    <ImageView
        android:id="@+id/fmo_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/fmo_search"
        app:layout_constraintStart_toStartOf="@id/fmo_search"
        app:layout_constraintTop_toTopOf="@id/fmo_search" />

    <ImageView
        android:id="@+id/fmo_clear_search"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_clear_search"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fmo_search"
        app:layout_constraintEnd_toEndOf="@id/fmo_search"
        app:layout_constraintTop_toTopOf="@id/fmo_search" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/fmo_tab_layout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_divider_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fmo_options"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_corner_radius="1dp"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="65dp"
        app:tl_tab_space_equal="false"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="@color/color_999999" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fmo_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fmo_tab_layout" />
</android.support.constraint.ConstraintLayout>
