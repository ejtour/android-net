<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/base_bg_shadow_top_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose" />

        <com.hll_sc_app.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
        <ImageView
            android:id="@+id/txt_add"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:src="@drawable/base_ic_img_add"
            android:tint="@color/base_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/base_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_stock_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="仓库"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:background="@color/base_color_divider" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="操作日期"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:background="@color/base_color_divider" />
        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="交易类型"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:drawablePadding="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <View
            android:id="@+id/slq_div"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:background="@color/base_color_divider" />

        <LinearLayout
            android:id="@+id/ll_owner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:maxLines="1"
                android:id="@+id/txt_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="货主"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:paddingTop="@dimen/dp_40"
            android:id="@+id/ll_empty"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.hll_sc_app.widget.SyncHorizontalScrollView
            android:id="@+id/sync_scroll_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="商品名称"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="商品编号"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="仓库ID"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="交易类型"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="交易数量"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="交易时间"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="交易单号"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="来源"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:gravity="center"
                    android:text="货主"
                    android:textColor="@color/base_text999"
                    android:textSize="@dimen/base_text_10" />
            </LinearLayout>
        </com.hll_sc_app.widget.SyncHorizontalScrollView>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hll_sc_app.widget.SyncHorizontalScrollView
                android:id="@+id/sync_scroll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </com.hll_sc_app.widget.SyncHorizontalScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</LinearLayout>