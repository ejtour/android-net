<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/oas_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_title="提交成功" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/base_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_status"
            android:layout_width="187dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_dialog_good" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="您已成功提交企业钱包激活申请"
            android:textColor="@color/text_222"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/text_999"
            android:textSize="12sp"
            tools:text="审核时间一般为1-3个工作日 \n 请耐心等待，我们将尽快审核您的相关信息！" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_ok"
            style="@style/BtnAfterSalesAction.PrimarySolid"
            android:layout_width="match_parent"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="63dp"
            android:text="好的，我知道了" />
    </LinearLayout>

</LinearLayout>