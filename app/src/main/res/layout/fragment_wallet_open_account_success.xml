<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="187dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_dialog_good" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="您的账号申请已提交至铁金库！"
            android:textColor="@color/text_222"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            tools:text="审核时间一般为1-3个工作日 \n 请耐心等待，我们将尽快审核您的相关信息！"
            android:textColor="@color/text_999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_ok"
            style="@style/BtnAfterSalesAction.PrimarySolid"
            android:layout_width="match_parent"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="63dp"
            android:text="好的，我知道了" />
    </LinearLayout>

</LinearLayout>