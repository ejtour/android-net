<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/vpd_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightImage="@drawable/ic_edit"
        app:tb_title="拜访计划详情" />

    <View
        android:id="@+id/vpd_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/vpd_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpd_title_bar" />

    <TextView
        android:id="@+id/vpd_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_customer_type"
        android:gravity="center"
        android:maxLength="2"
        android:paddingLeft="7dp"
        android:paddingTop="2dp"
        android:paddingRight="7dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Blue"
        app:layout_constraintBottom_toBottomOf="@id/vpd_name"
        app:layout_constraintEnd_toEndOf="@id/vpd_bg"
        app:layout_constraintTop_toTopOf="@id/vpd_name"
        tools:text="意向" />

    <TextView
        android:id="@+id/vpd_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintEnd_toStartOf="@id/vpd_type"
        app:layout_constraintStart_toStartOf="@id/vpd_bg"
        app:layout_constraintTop_toTopOf="@id/vpd_bg"
        tools:text="风尚佳美商贸有限公司北京一部" />

    <TextView
        android:id="@+id/vpd_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:lineSpacingExtra="3dp"
        android:paddingBottom="20dp"
        android:textColor="@color/color_999999"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/vpd_type"
        app:layout_constraintStart_toStartOf="@id/vpd_name"
        app:layout_constraintTop_toBottomOf="@id/vpd_name"
        tools:text="北京-北京市-海淀区 上地三街嘉华大厦D座" />

    <TextView
        android:id="@+id/vpd_time_label"
        style="@style/InfoLabel"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:paddingLeft="14dp"
        android:text="预计拜访时间"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpd_bg" />

    <TextView
        android:id="@+id/vpd_time"
        style="@style/InfoEdit"
        android:background="@android:color/white"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/vpd_time_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vpd_time_label"
        app:layout_constraintTop_toTopOf="@id/vpd_time_label"
        tools:text="2018.07.23" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="14dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/vpd_time_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vpd_way_label"
        style="@style/InfoLabel"
        android:background="@android:color/white"
        android:paddingLeft="14dp"
        android:text="拜访方式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpd_time_label" />

    <TextView
        android:id="@+id/vpd_way"
        style="@style/InfoEdit"
        android:background="@android:color/white"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/vpd_way_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vpd_way_label"
        app:layout_constraintTop_toTopOf="@id/vpd_way_label"
        tools:text="约访" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="14dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/vpd_way_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vpd_goal_label"
        style="@style/InfoLabel"
        android:background="@android:color/white"
        android:paddingLeft="14dp"
        android:text="拜访目的"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpd_way_label" />

    <TextView
        android:id="@+id/vpd_goal"
        style="@style/InfoEdit"
        android:background="@android:color/white"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/vpd_goal_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vpd_goal_label"
        app:layout_constraintTop_toTopOf="@id/vpd_goal_label"
        tools:text="开发新客户" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="14dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/vpd_goal_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vpd_attention_label"
        style="@style/InfoLabel"
        android:layout_width="0dp"
        android:background="@android:color/white"
        android:paddingLeft="14dp"
        android:text="注意事项"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpd_goal_label" />

    <TextView
        android:id="@+id/vpd_attention"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="无"
        android:lineSpacingExtra="8dp"
        android:paddingLeft="14dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="14dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpd_attention_label" />

    <TextView
        android:id="@+id/vpd_person_label"
        style="@style/InfoLabel"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:paddingLeft="14dp"
        android:text="拜访人员"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpd_attention" />

    <TextView
        android:id="@+id/vpd_person"
        style="@style/InfoEdit"
        android:background="@android:color/white"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/vpd_person_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vpd_person_label"
        app:layout_constraintTop_toTopOf="@id/vpd_person_label"
        tools:text="张经理" />
</androidx.constraintlayout.widget.ConstraintLayout>