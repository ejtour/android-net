<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mup_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="修改单价"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/mup_top_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mup_title" />

    <TextView
        android:id="@+id/mup_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mup_top_divider"
        tools:text="商品名称商品名称商品名称商品名称" />

    <TextView
        android:id="@+id/mup_product_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="规格："
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@+id/mup_product_name"
        app:layout_constraintTop_toBottomOf="@+id/mup_product_name" />

    <EditText
        android:id="@+id/mup_edit_new_price"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_order_reject_edit"
        android:gravity="center_vertical"
        android:hint="0.00"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Red"
        app:layout_constraintEnd_toEndOf="@+id/mup_product_name"
        app:layout_constraintStart_toStartOf="@+id/mup_product_name"
        app:layout_constraintTop_toBottomOf="@+id/mup_product_spec" />

    <TextView
        android:id="@+id/mup_edit_money_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="¥"
        android:textAppearance="@style/TextAppearance.City22.Middle.Red"
        app:layout_constraintBottom_toBottomOf="@+id/mup_edit_new_price"
        app:layout_constraintStart_toStartOf="@+id/mup_edit_new_price"
        app:layout_constraintTop_toTopOf="@+id/mup_edit_new_price" />

    <TextView
        android:id="@+id/mup_raw_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintStart_toStartOf="@+id/mup_product_name"
        app:layout_constraintTop_toBottomOf="@+id/mup_edit_new_price"
        tools:text="原价：¥126.00" />

    <View
        android:id="@+id/mup_bottom_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mup_raw_price" />

    <View
        android:id="@+id/mup_line"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:background="@color/color_d8d8d8"
        app:layout_constraintBottom_toBottomOf="@+id/mup_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mup_cancel" />

    <TextView
        android:id="@+id/mup_cancel"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="容我再想想"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toStartOf="@+id/mup_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mup_bottom_divider" />

    <TextView
        android:id="@+id/mup_ok"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="确认修改"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mup_line"
        app:layout_constraintTop_toBottomOf="@+id/mup_bottom_divider" />
</android.support.constraint.ConstraintLayout>