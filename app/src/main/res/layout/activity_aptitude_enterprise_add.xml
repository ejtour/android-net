<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/aea_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="保存"
        app:tb_rightVisibility="true"
        app:tb_title="其他资质" />

    <View
        android:id="@+id/aea_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        app:layout_constraintBottom_toBottomOf="@id/aea_bottom_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aea_title_bar" />

    <TextView
        android:id="@+id/aea_type_label"
        style="@style/InfoLabel"
        android:text="证件类型"
        app:layout_constraintStart_toStartOf="@id/aea_bg"
        app:layout_constraintTop_toTopOf="@id/aea_bg" />

    <TextView
        android:id="@+id/aea_type"
        style="@style/InfoEdit"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:hint="请选择证件类型"
        app:layout_constraintBottom_toBottomOf="@id/aea_type_label"
        app:layout_constraintEnd_toEndOf="@id/aea_bg"
        app:layout_constraintStart_toEndOf="@id/aea_type_label"
        app:layout_constraintTop_toTopOf="@id/aea_type_label" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/aea_type_label"
        app:layout_constraintEnd_toEndOf="@id/aea_bg"
        app:layout_constraintStart_toStartOf="@id/aea_bg" />

    <TextView
        android:id="@+id/aea_time_label"
        style="@style/InfoLabel"
        android:text="到期时间"
        app:layout_constraintStart_toStartOf="@id/aea_bg"
        app:layout_constraintTop_toBottomOf="@id/aea_type_label" />

    <TextView
        android:id="@+id/aea_time"
        style="@style/InfoEdit"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:hint="请选择到期时间"
        app:layout_constraintBottom_toBottomOf="@id/aea_time_label"
        app:layout_constraintEnd_toEndOf="@id/aea_bg"
        app:layout_constraintStart_toEndOf="@id/aea_time_label"
        app:layout_constraintTop_toTopOf="@id/aea_time_label" />

    <com.hll_sc_app.base.widget.ImgUploadBlock
        android:id="@+id/aea_image"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:base_title="点击上传证件照"
        app:layout_constraintEnd_toEndOf="@id/aea_bg"
        app:layout_constraintStart_toStartOf="@id/aea_bg"
        app:layout_constraintTop_toBottomOf="@id/aea_time_label" />

    <Space
        android:id="@+id/aea_bottom_padding"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@id/aea_bg"
        app:layout_constraintStart_toStartOf="@id/aea_bg"
        app:layout_constraintTop_toBottomOf="@id/aea_image" />
</android.support.constraint.ConstraintLayout>