<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/osi_arrow"
        android:layout_width="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:trv_color="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/osi_bg"
        android:layout_marginRight="@dimen/dp_10"
        app:trv_direction="top"
        android:layout_height="6dp" />

    <View
        android:id="@+id/osi_bg"
        app:layout_constraintTop_toBottomOf="@id/osi_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:layout_width="300dp"
        android:layout_height="167dp" />

    <TextView
        android:id="@+id/osi_shop_name"
        app:layout_constraintStart_toStartOf="@id/osi_bg"
        app:layout_constraintTop_toTopOf="@id/osi_bg"
        android:textColor="@color/color_222222"
        app:layout_constraintBottom_toTopOf="@id/osi_contact_people"
        android:textSize="15sp"
        tools:text="风尚佳美餐饮城凯德店"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="@id/osi_bg"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/osi_contact_people"
        tools:text="张经理"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/osi_shop_name"
        app:layout_constraintTop_toBottomOf="@id/osi_shop_name"
        app:layout_constraintEnd_toEndOf="@id/osi_shop_name"
        android:drawableLeft="@drawable/ic_crm_order_contact"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintBottom_toTopOf="@id/osi_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/osi_phone"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_crm_order_phone"
        android:drawableRight="@drawable/ic_arrow_gray"
        tools:text="15501158888"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/osi_address"
        android:textAppearance="@style/TextAppearance.City22.Middle.Blue"
        app:layout_constraintStart_toStartOf="@id/osi_shop_name"
        app:layout_constraintTop_toBottomOf="@id/osi_contact_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/osi_address"
        android:drawableLeft="@drawable/ic_crm_order_address"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/osi_phone"
        tools:text="西直门凯德mall T1-22层"
        app:layout_constraintBottom_toBottomOf="@id/osi_bg"
        android:gravity="center_vertical"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@id/osi_shop_name"
        app:layout_constraintStart_toStartOf="@id/osi_shop_name"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>