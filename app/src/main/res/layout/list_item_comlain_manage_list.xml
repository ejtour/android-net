<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_selector_check_box"
        android:button="@drawable/bg_selector_check_box"
        android:checked="false"
        android:gravity="center_vertical" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:padding="@dimen/dp_10">

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/glide_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="40dp"
            app:base_RoundingRadius="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_tip_blue_solid"
            android:paddingLeft="3dp"
            android:paddingTop="2dp"
            android:paddingRight="3dp"
            android:paddingBottom="2dp"
            android:text="退货"
            android:textColor="@color/base_white"
            android:textSize="9sp"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_shop_name"
            app:layout_constraintStart_toEndOf="@id/glide_img"
            app:layout_constraintTop_toTopOf="@id/txt_shop_name" />

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="2dp"
            android:textColor="@color/base_text222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toEndOf="@id/txt_tip"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="二十二城西直门旗舰店" />

        <TextView
            android:id="@+id/txt_platform_inject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_tip_red_solid"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="平台介入"
            android:textColor="@color/base_white"
            android:textSize="9sp"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_status"
            app:layout_constraintEnd_toStartOf="@id/txt_status"
            app:layout_constraintTop_toTopOf="@id/txt_shop_name" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_text999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_shop_name"
            tools:text="已处理" />

        <TextView
            android:id="@+id/txt_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/base_text999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintStart_toStartOf="@id/txt_shop_name"
            app:layout_constraintTop_toBottomOf="@id/txt_shop_name"
            tools:text="北京二十二城电子商务有限公司" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_text999"
            android:textSize="@dimen/base_text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_group_name"
            tools:text="2019/01/09 09:41" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/glide_img"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fafafa"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="15dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/txt_complain_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12"
                    tools:text="投诉类型：物流问题" />

                <TextView
                    android:id="@+id/txt_complain_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12"
                    tools:text="投诉原因：未按约定时间发货" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>