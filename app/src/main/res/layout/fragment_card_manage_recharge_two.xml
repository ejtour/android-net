<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:paddingLeft="12dp"
        android:paddingTop="12sp"
        android:paddingRight="12sp"
        android:paddingBottom="50dp">

        <com.zs.border.view.BorderTextView
            android:id="@+id/txt_alert"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_dengpao_yellow"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="请再次确认集团信息以及充值金额和赠送金额～"
            android:textColor="#F5A623"
            android:textSize="13sp"
            app:contentBackColor="#FFF7E6"
            app:cornerRadius="5dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:text="充值集团 "
            android:textColor="@color/text_666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/txt_alert"
            app:layout_constraintTop_toBottomOf="@id/txt_alert" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:minHeight="45dp"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title_name"
            app:layout_constraintTop_toTopOf="@id/txt_title_name"
            tools:text="北京二十二城电子商务有限公司" />

        <View
            android:id="@+id/view_divider_0"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@id/txt_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title_card_no"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="充值卡号 "
            android:textColor="@color/text_666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/txt_alert"
            app:layout_constraintTop_toBottomOf="@id/txt_title_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:minHeight="45dp"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title_name"
            app:layout_constraintTop_toTopOf="@id/txt_title_card_no"
            tools:text="100291009220190909001" />

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@id/txt_card_no" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title_recharge"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="充值金额 "
            android:textColor="@color/text_666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/txt_alert"
            app:layout_constraintTop_toBottomOf="@id/txt_title_card_no" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_recharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:minHeight="45dp"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title_name"
            app:layout_constraintTop_toTopOf="@id/txt_title_recharge"
            tools:text="¥ 5000.00" />

        <View
            android:id="@+id/view_divider_2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@id/txt_recharge" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title_gift"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="赠送金额 "
            android:textColor="@color/text_666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/txt_alert"
            app:layout_constraintTop_toBottomOf="@id/txt_title_recharge" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_gift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:minHeight="45dp"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title_name"
            app:layout_constraintTop_toTopOf="@id/txt_title_gift"
            tools:text="¥ 500.00" />

        <View
            android:id="@+id/view_divider_3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@id/txt_gift" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title_total"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="充值后余额"
            android:textColor="@color/text_666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/txt_alert"
            app:layout_constraintTop_toBottomOf="@id/txt_title_gift" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:minHeight="45dp"
            android:textColor="@color/text_222"
            android:textSize="@dimen/base_text_13"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title_name"
            app:layout_constraintTop_toTopOf="@id/txt_title_total"
            tools:text="¥ 5500.00" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_btn_recharge"
        style="@style/BtnAfterSalesAction.PrimarySolid"
        android:layout_width="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="确认充值" />
</LinearLayout>