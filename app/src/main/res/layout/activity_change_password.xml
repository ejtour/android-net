<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            style="@style/BtnClose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_radius_3_solid"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_loginPWD"
            style="@style/EdtRegister"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_register_password"
            android:drawablePadding="15dp"
            android:hint="请输入旧密码"
            android:maxLength="20"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_radius_3_solid"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_newLoginPWD"
            style="@style/EdtRegister"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_register_password"
            android:drawablePadding="15dp"
            android:hint="请设置6-20位新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/base_color_divider"/>

        <EditText
            android:id="@+id/edt_checkLoginPWD"
            style="@style/EdtRegister"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_register_password"
            android:drawablePadding="15dp"
            android:hint="请再次确认密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_confirm"
        style="@style/BtnLogin"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:enabled="false"
        android:text="确认修改"
        android:textSize="@dimen/base_text_13"/>

</LinearLayout>