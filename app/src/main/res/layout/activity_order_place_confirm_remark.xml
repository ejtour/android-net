<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/pcr_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="保存"
        app:tb_rightVisibility="true"
        app:tb_title="供应商公司名" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/pcr_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pcr_title_bar" />

    <EditText
        android:id="@+id/pcr_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_edit_stroke_gray"
        android:gravity="top"
        android:hint="请输入备注信息"
        android:maxLength="100"
        android:minHeight="150dp"
        android:padding="5dp"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_aeaeae"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pcr_title_bar" />

    <TextView
        android:id="@+id/pcr_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:text="剩余100字"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color999"
        app:layout_constraintEnd_toEndOf="@id/pcr_edit_text"
        app:layout_constraintTop_toBottomOf="@id/pcr_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>