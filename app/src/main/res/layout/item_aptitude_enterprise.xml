<?xml version="1.0" encoding="utf-8"?>
<com.hll_sc_app.base.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_margin="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/iae_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/iae_type_label"
            style="@style/InfoLabel"
            android:text="证件类型"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/iae_type"
            style="@style/InfoEdit"
            app:layout_constraintBottom_toBottomOf="@id/iae_type_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iae_type_label"
            app:layout_constraintTop_toTopOf="@id/iae_type_label"
            tools:text="生产许可证" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/color_eeeeee"
            app:layout_constraintBottom_toBottomOf="@id/iae_type_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/iae_date_label"
            style="@style/InfoLabel"
            android:text="到期日期"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iae_type_label" />

        <TextView
            android:id="@+id/iae_date"
            style="@style/InfoEdit"
            app:layout_constraintBottom_toBottomOf="@id/iae_date_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iae_date_label"
            app:layout_constraintTop_toTopOf="@id/iae_date_label"
            tools:text="2020/12/31" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/color_eeeeee"
            app:layout_constraintBottom_toBottomOf="@id/iae_date_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.hll_sc_app.base.utils.glide.GlideImageView
            android:id="@+id/iae_image"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/base_bg_border_radius_3"
            app:base_preview="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iae_date_label" />

    </android.support.constraint.ConstraintLayout>

    <com.hll_sc_app.widget.right.RightTextView
        android:id="@+id/iae_del"
        android:layout_width="66dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ed5655_radius_5"
        android:gravity="center"
        android:text="删除"
        android:textAppearance="@style/TextAppearance.City22.Middle.White"
        app:rightCode="@string/right_aptitude_update" />
</com.hll_sc_app.base.widget.SwipeItemLayout>
