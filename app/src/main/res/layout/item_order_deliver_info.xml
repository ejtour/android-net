<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_8_solid"
    android:padding="12dp">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/odi_image"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:base_RoundingRadius="3"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/odi_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:background="@drawable/bg_tag_primary_solid"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingTop="1dp"
        android:paddingRight="3dp"
        android:paddingBottom="1dp"
        android:text="代仓"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/odi_name"
        app:layout_constraintStart_toEndOf="@id/odi_image"
        app:layout_constraintTop_toTopOf="@id/odi_name" />

    <TextView
        android:id="@+id/odi_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAppearance="@style/TextAppearance.City22.Large"
        app:layout_constraintEnd_toEndOf="parent"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/odi_tag"
        app:layout_goneMarginLeft="14dp"
        app:layout_constraintTop_toTopOf="@+id/odi_image"
        tools:text="新鲜柠檬特别酸" />

    <TextView
        android:id="@+id/odi_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="3dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@+id/odi_image"
        app:layout_constraintStart_toEndOf="@id/odi_image"
        tools:text="规格：42斤／箱" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/odi_arrow"
        android:layout_width="6dp"
        android:layout_height="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/odi_spec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/odi_spec"
        app:trv_color="@color/colorPrimary"
        app:trv_direction="bottom" />

    <TextView
        android:id="@+id/odi_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBaseline_toBaselineOf="@+id/odi_spec"
        app:layout_constraintEnd_toStartOf="@+id/odi_arrow"
        tools:text="x 50 箱" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/odi_list_view"
        android:layout_width="0dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odi_image" />
</androidx.constraintlayout.widget.ConstraintLayout>