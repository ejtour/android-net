<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_main_mine_background" />
    <RelativeLayout
        android:id="@+id/txt_main_title_block"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货客户与商品统计"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txt_sub_title_block"
        android:layout_below="@+id/txt_main_title_block"
        android:layout_width="match_parent"
        android:background="@drawable/bg_white_radius_top_half_5_solid"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_main_order_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="20dp"
            android:text="退回统计"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/txt_refund_basic_block"
        android:layout_below="@+id/txt_sub_title_block"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_radius_bottom_half_5_solid">
        <RelativeLayout
            android:layout_width="177dp"
            android:layout_height="110dp">
            <TextView
                android:id="@+id/refunded_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                tools:text="24"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refunded_num"
                android:textSize="10sp"
                android:text="退货单(笔)"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="178dp"
            android:layout_height="110dp"
            android:layout_marginLeft="187dp">
            <TextView
                android:id="@+id/refunded_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                tools:text="12/12"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refunded_customer"
                android:textSize="10sp"
                android:text="退客户数"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/refund_amount_label"
        android:layout_below="@+id/txt_refund_basic_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_radius_top_half_5_solid" >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_refund_amount"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="金额统计"
            android:layout_marginLeft="15dp"
            android:paddingLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/refunded_amount_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/refund_amount_label"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/base_white">
        <TextView
            android:id="@+id/wait_refund_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            tools:text="400000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/refunded_amount_label_block"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/base_white"
        android:layout_below="@+id/refunded_amount_block">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="退款金额(元)"
            android:gravity="bottom"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/txt_amount_block"
        android:layout_below="@+id/refunded_amount_label_block"
        android:layout_width="match_parent"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="89dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_cash_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000000"
                android:textSize="13sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/txt_cash_amount_label"
                android:layout_below="@+id/txt_cash_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="现金(元)"
                android:textSize="10sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="89dp"
            android:layout_marginLeft="89dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_online_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000000"
                android:textSize="13sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/txt_online_amount_label"
                android:layout_below="@+id/txt_online_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="线上支付(元)"
                android:textSize="10sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="89dp"
            android:layout_marginLeft="178dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_bank_card_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000000"
                android:textSize="13sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/txt_bank_card_amount_label"
                android:layout_below="@+id/txt_bank_card_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="银行卡(元)"
                android:textSize="10sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="88dp"
            android:layout_marginLeft="266dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_account_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000000"
                android:textSize="13sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/txt_account_amount_label"
                android:layout_below="@+id/txt_account_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="账期支付(元)"
                android:textSize="10sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_amount_block"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/txt_refunded_customer_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="18dp"
                android:textSize="13sp"
                android:textColor="#5695D2"
                android:text="查看退货客户统计明细" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/txt_refunded_product_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/base_bg_white_radius_5_solid"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="13sp"
                android:paddingTop="18dp"
                android:textColor="#5695D2"
                android:text="查看退货商品统计明细"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>