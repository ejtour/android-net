<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            style="@style/BtnClose"/>

        <TextView
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="152dp"
            android:text="报表中心"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/report_product_sale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_product_sale_item"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:text="商品销售统计汇总"
                android:textSize="@dimen/base_text_13"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="215dp"
                android:src="@drawable/ic_report_right_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/report_daily_aggregation"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_report_daily_aggregation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:text="日销售额汇总"
                android:textSize="@dimen/base_text_13"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="240dp"
                android:src="@drawable/ic_report_right_arrow"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>