                android:textColor="@color/base_text666"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@id/txt_title_group"
                app:layout_constraintTop_toBottomOf="@id/txt_explain" />

            <HorizontalScrollView
