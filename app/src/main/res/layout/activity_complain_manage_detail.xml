                app:layout_constraintBottom_toBottomOf="@+id/txt_plat_reply"
                app:layout_constraintTop_toBottomOf="@id/view_back_0" />

            <TextView
                android:id="@+id/txt_title_plat_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="平台回复："
                android:textColor="@color/base_text666"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@id/view_back_1"
                app:layout_constraintTop_toTopOf="@id/view_back_1" />

            <TextView
                android:id="@+id/txt_plat_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/base_text666"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_title_plat_reply"
                app:layout_constraintTop_toTopOf="@id/txt_title_plat_reply"
                tools:text="亲爱的采购商用户，非常抱歉在交易中给您带来的不便，经过我们平台客服与供应商的交涉，供应商愿意赔付您本订单中所有商品作为补偿，您收到商品签收后可发起仅退款售后服务，本订单金额将于3个工作日内返回您的支付账户中。" />

            <android.support.constraint.Group
                android:id="@+id/group_plat_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
