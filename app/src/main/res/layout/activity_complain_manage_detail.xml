            <TextView
                android:id="@+id/txt_title_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="投诉说明："
                android:textColor="@color/base_text666"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@id/txt_title_group"
                app:layout_constraintTop_toBottomOf="@id/txt_title_reason" />

            <TextView
