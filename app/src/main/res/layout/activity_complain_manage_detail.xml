                android:layout_width="0dp"
                android:minHeight="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/view_back_3"
                app:layout_constraintStart_toStartOf="@+id/txt_group"
                app:layout_constraintTop_toTopOf="@id/txt_title_photo">

                <LinearLayout
                    android:id="@+id/ll_croll_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
