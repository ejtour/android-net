                app:layout_constraintTop_toTopOf="@id/txt_title_my_reply"
                tools:text="亲，很抱歉耽误了您订购的商品，这边会给您重新安排配送，预计今晚六点前到达您的收货地址，给您带来的不便非常抱歉，祝您生意兴隆，财源广进！" />

            <android.support.constraint.Group
                android:id="@+id/group_my_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="view_back_2,txt_title_my_reply,txt_my_reply" />


            <View
                android:id="@+id/view_back_3"
                android:layout_width="match_parent"
