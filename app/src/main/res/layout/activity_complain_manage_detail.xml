                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:background="@color/base_white"
                app:layout_constraintBottom_toBottomOf="@+id/txt_my_reply_platform"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_title_my_reply_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="我的回复："
                android:textColor="@color/base_text666"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@id/view_back_0"
                app:layout_constraintTop_toTopOf="@id/view_back_0" />

            <TextView
                android:id="@+id/txt_my_reply_platform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/base_text666"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_title_my_reply_platform"
                app:layout_constraintTop_toTopOf="@id/txt_title_my_reply_platform"
