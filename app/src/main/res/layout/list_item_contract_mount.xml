<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/base_bg_white_radius_5_solid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="16dp"
    android:paddingBottom="@dimen/dp_10"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_shop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_222"
        android:textSize="@dimen/base_text_13"
        android:textStyle="bold"
        tools:text="大象面馆桥头第三门店" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_money"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="¥1000.00"
        android:textSize="@dimen/base_text_13"
        android:textColor="@color/color_ed5655" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="已接单"
        android:textSize="@dimen/base_text_10"
        android:textColor="@color/text_999" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_order_no"
        app:layout_constraintStart_toStartOf="@+id/txt_money"
        app:layout_constraintTop_toBottomOf="@+id/txt_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        tools:text="订单号：202003031920001"
        android:textSize="@dimen/base_text_10"
        android:textColor="@color/text_999" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_pay_type"
        app:layout_constraintStart_toStartOf="@+id/txt_money"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="在线支付（支付宝）-已结算"
        android:textSize="@dimen/base_text_10"
        android:textColor="@color/text_999" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_order_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="下单时间：202003031920001"
        android:textSize="@dimen/base_text_10"
        android:textColor="@color/text_999" />


</androidx.constraintlayout.widget.ConstraintLayout>