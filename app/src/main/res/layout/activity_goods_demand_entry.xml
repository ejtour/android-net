<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/gde_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="新增商品需求" />

    <View
        android:id="@+id/gde_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gde_add"
        style="@style/BtnSubmit"
        android:text="我要新增一个商品需求"
        app:layout_constraintBottom_toBottomOf="@id/gde_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/gde_bottom_bg"
        app:layout_constraintStart_toStartOf="@id/gde_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/gde_bottom_bg" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/gde_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/gde_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gde_title_bar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gde_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dp_10"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>