<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.hll_sc_app.widget.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:tb_rightText="保存"
            app:tb_rightVisibility="true"
            app:tb_title="新增投诉记录" />

        <View
            android:id="@+id/view_back_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/base_white"
            app:layout_constraintBottom_toBottomOf="@+id/txt_title_shop"
            app:layout_constraintTop_toBottomOf="@+id/title_bar" />

        <TextView
            android:id="@+id/txt_title_group"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="投诉集团"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toTopOf="@id/view_back_0" />

        <TextView
            android:id="@+id/txt_group"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:hint="请选择采购商集团"
            android:maxLines="1"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_title_group" />

        <View
            android:id="@+id/view_divider_0"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@+id/txt_group"
            app:layout_constraintStart_toStartOf="@id/txt_title_group"
            app:layout_constraintTop_toBottomOf="@id/txt_title_group" />

        <TextView
            android:id="@+id/txt_title_shop"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="投诉门店"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toBottomOf="@id/view_divider_0" />

        <TextView
            android:id="@+id/txt_shop"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:hint="请选择采购商门店"
            android:maxLines="1"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_title_shop" />


        <View
            android:id="@+id/view_back_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/base_white"
            app:layout_constraintBottom_toBottomOf="@+id/txt_title_phone"
            app:layout_constraintTop_toBottomOf="@+id/view_back_0" />

        <TextView
            android:id="@+id/txt_title_order"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="选择订单"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toTopOf="@id/view_back_1" />

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:hint="请选择要投诉的订单"
            android:maxLines="1"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_title_order" />

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@+id/txt_group"
            app:layout_constraintStart_toStartOf="@id/txt_title_group"
            app:layout_constraintTop_toBottomOf="@id/txt_title_order" />

        <TextView
            android:id="@+id/txt_title_phone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="联系方式"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toBottomOf="@id/view_divider_1" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请填写投诉人联系方式"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_title_phone" />

        <View
            android:id="@+id/view_back_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/base_white"
            app:layout_constraintBottom_toBottomOf="@+id/view_padding_end"
            app:layout_constraintTop_toBottomOf="@+id/view_back_1" />

        <TextView
            android:id="@+id/txt_title_type"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="投诉类型"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toTopOf="@id/view_back_2" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:hint="请选择投诉类型"
            android:maxLines="1"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_title_type" />

        <View
            android:id="@+id/view_divider_2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@+id/txt_group"
            app:layout_constraintStart_toStartOf="@id/txt_title_group"
            app:layout_constraintTop_toBottomOf="@id/txt_title_type" />

        <TextView
            android:id="@+id/txt_title_reason"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="投诉原因"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toBottomOf="@id/view_divider_2" />

        <TextView
            android:id="@+id/txt_reason"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:hint="请选择投诉原因"
            android:maxLines="1"
            android:textColor="@color/base_text666"
            android:textSize="@dimen/base_text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_title_reason" />

        <View
            android:id="@+id/view_divider_3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@+id/txt_group"
            app:layout_constraintStart_toStartOf="@id/txt_title_group"
            app:layout_constraintTop_toBottomOf="@id/txt_title_reason" />

        <TextView
            android:id="@+id/txt_title_explain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="投诉说明"
            android:textColor="@color/base_text999"
            android:textSize="@dimen/base_text_12"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toBottomOf="@id/view_divider_3" />

        <EditText
            android:id="@+id/edt_explain"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_gray_solid_radius_5"
            android:gravity="left|top"
            android:hint="请输入投诉说明"
            android:lineSpacingExtra="5dp"
            android:padding="@dimen/dp_10"
            android:textColor="@color/text_aeaeae"
            android:textSize="@dimen/base_text_12"
            app:layout_constraintEnd_toEndOf="@id/view_divider_0"
            app:layout_constraintStart_toStartOf="@id/view_divider_0"
            app:layout_constraintTop_toBottomOf="@id/txt_title_explain" />

        <TextView
            android:id="@+id/txt_left_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/text_aeaeae"
            android:textSize="@dimen/base_text_12"
            app:layout_constraintBottom_toBottomOf="@id/edt_explain"
            app:layout_constraintEnd_toEndOf="@id/edt_explain"
            tools:text="200" />

        <HorizontalScrollView
            android:id="@+id/scroll_photo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="@id/view_divider_0"
            app:layout_constraintStart_toStartOf="@id/view_divider_0"
            app:layout_constraintTop_toBottomOf="@id/edt_explain">

            <LinearLayout
                android:id="@+id/ll_scroll_photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.hll_sc_app.base.widget.ImgUploadBlock
                    android:id="@+id/upload_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:base_imgIcon="@drawable/ic_camera"
                    app:base_subTitle="0/4"
                    app:base_title="上传凭证" />
            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/view_divider_4"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/base_color_divider"
            app:layout_constraintEnd_toEndOf="@id/view_divider_0"
            app:layout_constraintStart_toStartOf="@id/view_divider_0"
            app:layout_constraintTop_toBottomOf="@+id/scroll_photo" />

        <TextView
            android:id="@+id/txt_title_product"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="投诉商品"
            android:textColor="@color/base_text999"
            android:textSize="@dimen/base_text_12"
            app:layout_constraintStart_toStartOf="@id/view_back_0"
            app:layout_constraintTop_toBottomOf="@id/view_divider_4" />

        <LinearLayout
            android:id="@+id/ll_add_product"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_gray_solid_radius_5"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/view_divider_0"
            app:layout_constraintStart_toStartOf="@id/view_divider_0"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_product">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/base_ic_img_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="点击添加要投诉的商品"
                android:textColor="@color/text_aeaeae"
                android:textSize="@dimen/base_text_10" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/view_divider_0"
            app:layout_constraintStart_toStartOf="@id/view_divider_0"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_product" />

        <View
            android:id="@+id/view_padding_end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/ll_add_product" />

        <android.support.constraint.Group
            android:id="@+id/group_product_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="view_divider_4,txt_title_product,ll_add_product" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>