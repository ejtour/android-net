<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/bg_white_stroke_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ia_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/dp_10"
        tools:src="@drawable/ic_rar" />

    <TextView
        android:id="@+id/ia_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/dp_10"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small"
        tools:text="北京二十二城电子商务合同.doc" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="40dp"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/ia_done"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="已下载"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ia_action"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:scaleType="centerInside"
        android:src="@drawable/ic_download" />
</LinearLayout>