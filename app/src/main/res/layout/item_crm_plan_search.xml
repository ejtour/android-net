<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/cps_check"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_ok_circul_blue"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cps_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@drawable/color_state_on_blue_off_222"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/cps_date"
        app:layout_constraintEnd_toStartOf="@id/cps_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="风尚佳美商贸有限公司北京一部" />

    <TextView
        android:id="@+id/cps_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/color_purchase_select_text"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/cps_name"
        app:layout_constraintTop_toBottomOf="@id/cps_name"
        tools:text="计划日期：2018.07.23" />

</android.support.constraint.ConstraintLayout>