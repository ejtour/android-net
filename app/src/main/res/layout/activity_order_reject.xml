<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/aor_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="拒收" />

    <View
        android:id="@+id/aor_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/base_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--提交按钮-->
    <TextView
        android:id="@+id/aor_submit"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_button_mid_solid_primary"
        android:enabled="false"
        android:gravity="center"
        android:text="提交"
        android:textAppearance="@style/TextAppearance.City22.Small.White"
        app:layout_constraintBottom_toBottomOf="@+id/aor_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aor_bottom_bg" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/aor_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="5dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/aor_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aor_title_bar" />

</android.support.constraint.ConstraintLayout>