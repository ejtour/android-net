<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_white_radius_5_solid"
    tools:layout_margin="@dimen/dp_10">

    <ImageView
        android:id="@+id/csd_check_box"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:visibility="gone"
        android:scaleType="fitStart"
        android:src="@drawable/bg_selector_check_box_circular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/csd_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@id/csd_check_box"
        app:layout_goneMarginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RK201912311209" />

    <TextView
        android:id="@+id/csd_warehouse_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintStart_toStartOf="@id/csd_no"
        app:layout_constraintTop_toBottomOf="@id/csd_no" />

    <TextView
        android:id="@+id/csd_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintBaseline_toBaselineOf="@id/csd_no"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="未结算 / 未对账" />

    <View
        android:id="@+id/csd_div"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="@id/csd_status"
        app:layout_constraintStart_toStartOf="@id/csd_no"
        app:layout_constraintTop_toBottomOf="@id/csd_warehouse_name" />

    <TextView
        android:id="@+id/csd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAppearance="@style/TextAppearance.City22.Large"
        app:layout_constraintStart_toStartOf="@id/csd_no"
        app:layout_constraintTop_toBottomOf="@id/csd_div"
        tools:text="验货入库" />

    <TextView
        android:id="@+id/csd_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintBottom_toBottomOf="@id/csd_label"
        app:layout_constraintEnd_toEndOf="@id/csd_status"
        app:layout_constraintStart_toStartOf="@id/csd_no"
        app:layout_constraintTop_toTopOf="@id/csd_label"
        tools:text="2019/12/31" />

    <TextView
        android:id="@+id/csd_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Large"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@id/csd_label"
        app:layout_constraintEnd_toEndOf="@id/csd_status"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/csd_date"
        tools:text="¥2,900.00" />
</androidx.constraintlayout.widget.ConstraintLayout>