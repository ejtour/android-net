<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="保存"
        app:tb_rightVisibility="true"
        app:tb_title="新增优惠券" />

    <View
        android:id="@+id/view_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/base_white"
        app:layout_constraintBottom_toBottomOf="@id/txt_alert"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <View
        android:id="@+id/view_divider_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintTop_toTopOf="@id/view_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优惠券名称"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_1"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_back" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="right"
        android:hint="请输入优惠券名称，最多10位"
        android:maxLength="10"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_back" />

    <View
        android:id="@+id/view_divider_2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_1" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单张面额"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_2"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_content_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="right"
        android:hint="请输入优惠券单张面额"
        android:inputType="numberDecimal"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_2"
        app:layout_constraintEnd_toEndOf="@id/edt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_1" />

    <View
        android:id="@+id/view_divider_3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_2" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_time_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效期"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_3"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_content_time_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableRight="@drawable/ic_little_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="right"
        android:hint="请选择有效期限定方式"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_3"
        app:layout_constraintEnd_toEndOf="@id/edt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_2" />

    <View
        android:id="@+id/view_divider_4"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_time_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效期限"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_4"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_content_time_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableRight="@drawable/ic_little_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="right"
        android:hint="请先选择有效期限定方式"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_3"
        app:layout_constraintEnd_toEndOf="@id/edt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="领券起"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toStartOf="@id/edt_content_time_from"
        app:layout_constraintTop_toTopOf="@id/txt_title_time_to" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_content_time_from"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="right"
        android:inputType="number"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toStartOf="@id/txt_title_time_to"
        app:layout_constraintTop_toTopOf="@id/txt_title_time_to" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日有效"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_4"
        app:layout_constraintEnd_toEndOf="@id/edt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_3" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="txt_title_time_from,txt_title_time_to,edt_content_time_from" />

    <View
        android:id="@+id/view_divider_5"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用条件"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_5"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_content_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableRight="@drawable/ic_little_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="right"
        android:hint="请选择使用条件"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_5"
        app:layout_constraintEnd_toEndOf="@id/edt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_4" />

    <View
        android:id="@+id/view_divider_6"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:background="@color/base_color_divider"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_full_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="满额限制"
        android:textColor="@color/base_text666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_6"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="满"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toStartOf="@id/edt_content_full"
        app:layout_constraintTop_toTopOf="@id/txt_title_full_last" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_content_full"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@null"
        android:gravity="right"
        android:inputType="numberDecimal"
        android:textColor="@color/base_text222"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toStartOf="@id/txt_title_full_last"
        app:layout_constraintTop_toTopOf="@id/txt_title_full_last" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_full_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元可使用"
        android:textColor="@color/base_text222"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintBottom_toBottomOf="@id/view_divider_6"
        app:layout_constraintEnd_toEndOf="@id/edt_content_name"
        app:layout_constraintTop_toTopOf="@id/view_divider_5" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_full_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="view_divider_6,txt_title_full_condition,txt_title_full_last,edt_content_full,txt_title_full" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_alert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="注：优惠券可以与其他促销互动一起使用，单张订单只能使用一张优惠券"
        android:textColor="@color/base_text999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/view_divider_1"
        app:layout_constraintTop_toTopOf="@id/view_divider_6" />
</androidx.constraintlayout.widget.ConstraintLayout>