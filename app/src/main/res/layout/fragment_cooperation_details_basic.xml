<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:padding="10dp">

            <com.hll_sc_app.base.utils.glide.GlideImageView
                android:id="@+id/img_logoUrl"
                android:layout_width="48dp"
                android:layout_height="0dp"
                app:base_placeholder="@drawable/ic_shop_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_shop_placeholder"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                app:layout_constraintBottom_toTopOf="@+id/txt_resourceType"
                app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
                app:layout_constraintTop_toTopOf="@+id/img_logoUrl"
                tools:text="北京太好吃家常菜"/>

            <TextView
                android:id="@+id/txt_resourceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color999"
                app:layout_constraintBottom_toBottomOf="@+id/img_logoUrl"
                app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
                app:layout_constraintTop_toBottomOf="@+id/txt_name"
                tools:text="二十二城"/>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="所在地区"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_groupCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="北京市-西城区"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="地&#160;&#160;&#160;&#160;址&#160;&#160;&#160;&#160;"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_groupAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="小市口胡同3号院2号楼底商"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联&#160;&#160;系&#160;&#160;人"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_linkman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="北京市二十二城采购集团"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联系方式"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="13488889883"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="传&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;真"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="010-44441256"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="邮&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;箱"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_groupMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="wangwei1@hualala.co"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_defaultSettlementWay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="结算方式"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_defaultSettlementWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:hint="请选择结算方式"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_maintainLevel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="客户维护"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_maintainLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999"
                tools:text="门店级维护"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_defaultDeliveryWay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="配送方式"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_defaultDeliveryWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:hint="请选择配送方式"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_customerLevel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="客户登记"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_customerLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="普通客户"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="合作时间"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_agreeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="2019/7/19"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deliveryPeriod"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="到货时间"
                android:textAppearance="@style/TextAppearance.City22.Small"/>

            <TextView
                android:id="@+id/txt_deliveryPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:hint="请选择到货时间"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_del"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_button_large_solid_primary"
            android:gravity="center"
            android:text="解除合作"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_13"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_status0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/txt_agree"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_button_large_solid_primary"
                android:gravity="center"
                android:text="同意合作"
                android:textColor="@color/base_white"
                android:textSize="@dimen/base_text_13"/>

            <TextView
                android:id="@+id/txt_reject"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_white_solid"
                android:gravity="center"
                android:text="拒绝合作"
                android:textColor="@color/base_text222"
                android:textSize="@dimen/base_text_13"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>



