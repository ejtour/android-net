<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/base_white"
            android:gravity="center_vertical"
            android:padding="10dp">

            <com.hll_sc_app.base.utils.glide.GlideImageView
                android:id="@+id/img_logoUrl"
                android:layout_width="48dp"
                android:layout_height="0dp"
                app:base_placeholder="@drawable/ic_group_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_group_placeholder" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Middle"
                app:layout_constraintBottom_toTopOf="@+id/txt_resourceType"
                app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
                app:layout_constraintTop_toTopOf="@+id/img_logoUrl"
                tools:text="北京太好吃家常菜" />

            <TextView
                android:id="@+id/txt_resourceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color999"
                app:layout_constraintBottom_toBottomOf="@+id/img_logoUrl"
                app:layout_constraintLeft_toRightOf="@+id/img_logoUrl"
                app:layout_constraintTop_toBottomOf="@+id/txt_name"
                tools:text="二十二城" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="所在地区"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_groupCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="北京市-西城区" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="详细地址"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_groupAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="小市口胡同3号院2号楼底商" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联&#160;&#160;系&#160;&#160;人"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_linkman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="北京市二十二城采购集团" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联系方式"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="13488889883" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="传&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;真"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="010-44441256" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="邮&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;箱"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_groupMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="wangwei1@hualala.co" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_check_modal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="验货模式"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_check_modal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:hint="请选择验货模式"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_defaultSettlementWay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="结算方式"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_defaultSettlementWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:hint="请选择结算方式"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_maintainLevel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="客户维护"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_maintainLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999"
                tools:text="门店级维护" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_defaultDeliveryWay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="配送方式"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_defaultDeliveryWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:hint="请选择配送方式"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_customerLevel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="客户等级"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_customerLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="普通客户" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_agreeTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="合作时间"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_agreeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                tools:text="2019/7/19" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deliveryPeriod_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_deliveryPeriod"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="到货时间"
                    android:textAppearance="@style/TextAppearance.City22.Small" />

                <TextView
                    android:id="@+id/txt_deliveryPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/ic_arrow_gray"
                    android:hint="请选择到货时间"
                    android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                    android:textColorHint="@color/color_999999" />

            </LinearLayout>

            <com.hll_sc_app.widget.cooperation.DeliveryAgingTipsView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingRight="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shopsNum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="合作门店"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_shopsNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_arrow_gray"
                android:hint="暂无"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/txt_verification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="验证信息"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:hint="暂无"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_shadow_top_white_bar"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="回复信息"
                android:textAppearance="@style/TextAppearance.City22.Small" />

            <TextView
                android:id="@+id/txt_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:hint="暂无"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"
                android:textColorHint="@color/color_999999" />

        </LinearLayout>

        <com.hll_sc_app.app.cooperation.detail.details.CooperationButtonView
            android:id="@+id/buttonView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>



