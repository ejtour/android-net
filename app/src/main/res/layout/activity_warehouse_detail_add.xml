<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/wda_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="新增代仓门店" />

    <View
        android:id="@+id/wda_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wda_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bg_selector_check_box"
        android:drawablePadding="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="全选"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        app:layout_constraintBottom_toBottomOf="@id/wda_bottom_bg"
        app:layout_constraintStart_toStartOf="@id/wda_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/wda_bottom_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wda_confirm"
        style="@style/BtnOrderAction.PrimarySolid"
        android:enabled="false"
        android:text="确认 (0)"
        app:layout_constraintBottom_toBottomOf="@id/wda_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/wda_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/wda_bottom_bg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wda_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/wda_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wda_title_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>