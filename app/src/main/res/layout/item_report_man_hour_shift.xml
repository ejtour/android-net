<?xml version="1.0" encoding="utf-8"?>
<com.hll_sc_app.base.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/InfoLabel"
            android:text="班次" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mhs_shift"
            style="@style/InfoEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="请填写班次名称，如：早班" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mhs_del"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="@color/color_ed5655"
        android:gravity="center"
        android:text="删除"
        android:textAppearance="@style/TextAppearance.City22.Small.White" />
</com.hll_sc_app.base.widget.SwipeItemLayout>