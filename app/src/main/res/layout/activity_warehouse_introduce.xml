<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            style="@style/BtnClose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我是货主"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_title_center_size"/>

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_options"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/rl_title"
        android:background="@color/base_white"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_warehouse_manager_banner1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_warehouse_manager_rent"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="仓储租赁"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:drawableTop="@drawable/ic_warehouse_manager_sort"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="分拣服务"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_warehouse_manager_car"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="城市配送"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="二十二城平台为企业提供全流程冷链物流配送服务。平台通过全国重点城市布局物流网络，打通物流运输系统，仓配一体、共仓共配、订单执行，帮助餐饮企业解决食材从产地到餐桌的物流配送难题；同时还提供到仓分拣，迅捷及时的实现餐厅配送。"
                android:textAppearance="@style/TextAppearance.City22.Small.Color666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_tag_solid_gray"
                    android:gravity="center"
                    android:text="平台优势"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_tag_solid_gray"
                    android:gravity="center"
                    android:text="订单全流程可追溯"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_tag_solid_gray"
                    android:gravity="center"
                    android:text="全程冷链温控管理"
                    android:textAppearance="@style/TextAppearance.City22.Small.Blue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_tag_solid_gray"
                    android:gravity="center"
                    android:text="门店定时配送服务"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_tag_solid_gray"
                    android:gravity="center"
                    android:text="全国物流网络覆盖"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_tag_solid_gray"
                    android:gravity="center"
                    android:text="工厂定制生产加工"
                    android:textAppearance="@style/TextAppearance.City22.Little.Blue"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_warehouse_manager_banner2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="使用流程"
                android:textAppearance="@style/TextAppearance.City22.Middle.Blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_warehouse_manager_dredge"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="1.开通代仓功能"
                        android:textAppearance="@style/TextAppearance.City22.Little"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="联系官方业务经理"
                        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
                        android:textSize="9sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_warehouse_manager_arrow"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_warehouse_manager_purchase"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="2.采购入库"
                        android:textAppearance="@style/TextAppearance.City22.Little"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="并通知仓库收货"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_warehouse_manager_arrow"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_warehouse_manager_order"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="3.门店下单"
                        android:textAppearance="@style/TextAppearance.City22.Little"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="在商城app进行下单"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:rotation="90"
                    android:src="@drawable/ic_warehouse_manager_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_warehouse_manager_sign"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="6.门店签收"
                        android:textAppearance="@style/TextAppearance.City22.Little"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="并且进行费用结算"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:rotation="180"
                    android:src="@drawable/ic_warehouse_manager_arrow"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_warehouse_manager_send"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="5.物流配送"
                        android:textAppearance="@style/TextAppearance.City22.Little"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="物流团队进行配送"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:rotation="180"
                    android:src="@drawable/ic_warehouse_manager_arrow"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_warehouse_manager_delivery"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="4.分拣发货"
                        android:textAppearance="@style/TextAppearance.City22.Little"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="仓库进行分拣发货"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_bg_shadow_bottom_white_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_contact"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/base_bg_selector_dialog_cancel"
            android:gravity="center"
            android:text="立即联系"
            android:textColor="@color/base_colorPrimary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_recommend"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/base_bg_selector_dialog_confirm"
            android:gravity="center"
            android:text="查看推荐"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_12"/>

    </LinearLayout>

</RelativeLayout>