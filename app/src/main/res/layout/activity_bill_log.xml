<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/abl_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_title="账单日志" />

    <View
        android:id="@+id/abl_top_bg"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abl_title_bar" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/abl_image"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        app:base_RoundingRadius="3"
        app:layout_constraintBottom_toBottomOf="@id/abl_top_bg"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/abl_top_bg"
        app:layout_constraintTop_toTopOf="@id/abl_top_bg"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/abl_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintEnd_toEndOf="@id/abl_top_bg"
        app:layout_constraintStart_toEndOf="@id/abl_image"
        app:layout_constraintTop_toTopOf="@id/abl_image"
        tools:text="采购商门店名称" />

    <TextView
        android:id="@+id/abl_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@id/abl_image"
        app:layout_constraintStart_toStartOf="@id/abl_shop_name"
        tools:text="账单周期：2019/01/01 - 2019/01/30" />

    <TextView
        android:id="@+id/abl_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toTopOf="@id/abl_period"
        app:layout_constraintEnd_toEndOf="@id/abl_shop_name"
        app:layout_constraintStart_toStartOf="@id/abl_shop_name"
        app:layout_constraintTop_toBottomOf="@id/abl_shop_name"
        tools:text="采购商集团名称" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/abl_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abl_top_bg"
        app:layout_constraintVertical_bias="0" />
</android.support.constraint.ConstraintLayout>