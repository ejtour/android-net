<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="5dp"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="5dp">

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/iod_image"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:base_RoundingRadius="3"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/iod_product_spec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@+id/iod_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iod_product_name"
        tools:text="240ml*12瓶／箱" />

    <TextView
        android:id="@+id/iod_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toTopOf="@+id/iod_order_num"
        app:layout_constraintEnd_toStartOf="@+id/iod_product_spec"
        app:layout_constraintStart_toEndOf="@+id/iod_ware_house"
        app:layout_constraintTop_toTopOf="@+id/iod_image"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="商品名称商品名称商品名称" />

    <TextView
        android:id="@+id/iod_ware_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_tag_primary_solid"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingTop="1dp"
        android:paddingRight="3dp"
        android:paddingBottom="1dp"
        android:text="代仓"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        app:layout_constraintBottom_toBottomOf="@+id/iod_product_name"
        app:layout_constraintEnd_toStartOf="@+id/iod_product_name"
        app:layout_constraintStart_toStartOf="@+id/iod_order_num"
        app:layout_constraintTop_toTopOf="@+id/iod_product_name" />

    <TextView
        android:id="@+id/iod_order_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="3dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toTopOf="@+id/iod_sale_unit_spec"
        app:layout_constraintEnd_toStartOf="@+id/iod_delivery_num"
        app:layout_constraintStart_toEndOf="@+id/iod_image"
        app:layout_constraintTop_toBottomOf="@+id/iod_product_name"
        tools:text="订货：20箱" />

    <TextView
        android:id="@+id/iod_delivery_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/iod_order_num"
        app:layout_constraintEnd_toStartOf="@+id/iod_confirm_num"
        app:layout_constraintStart_toEndOf="@+id/iod_order_num"
        tools:text="发货：20箱" />

    <TextView
        android:id="@+id/iod_confirm_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBaseline_toBaselineOf="@+id/iod_order_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iod_delivery_num"
        tools:text="签收：0箱" />

    <TextView
        android:id="@+id/iod_sale_unit_spec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Red"
        app:layout_constraintBottom_toBottomOf="@+id/iod_image"
        app:layout_constraintStart_toStartOf="@+id/iod_order_num"
        app:layout_constraintTop_toBottomOf="@+id/iod_order_num"
        tools:text="单价：¥23.50/袋" />

    <TextView
        android:id="@+id/iod_sale_unit_spec_old"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        android:textSize="@dimen/base_text_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iod_sale_unit_spec"
        app:layout_constraintEnd_toStartOf="@+id/iod_amount"
        app:layout_constraintStart_toEndOf="@+id/iod_sale_unit_spec"
        app:layout_constraintTop_toTopOf="@+id/iod_sale_unit_spec"
        tools:text="¥30.50/袋"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/iod_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.Red"
        app:layout_constraintBottom_toBottomOf="@+id/iod_sale_unit_spec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iod_sale_unit_spec"
        tools:text="小计：¥2520.00" />

    <TextView
        android:id="@+id/iod_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingMultiplier="1.2"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iod_order_num"
        app:layout_constraintTop_toBottomOf="@id/iod_image"
        tools:text="备注：要保证新鲜程度啊，千万小心别磕碰了。" />

    <com.hll_sc_app.widget.order.AppendGoodsList
        android:id="@+id/iod_bundle_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iod_image"
        android:layout_marginTop="3dp"
        app:listLabel="组合商品" />

    <com.hll_sc_app.widget.order.AppendGoodsList
        android:id="@+id/iod_deposit_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iod_bundle_list" />
</android.support.constraint.ConstraintLayout>