<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/agd_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_rightText="编辑"
        app:tb_rightVisibility="true"
        app:tb_title="查看商品资质" />

    <FrameLayout
        android:id="@+id/agd_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_bg_shadow_bottom_bar"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/agd_add_goods"
            style="@style/BtnSubmit"
            android:layout_gravity="center"
            android:text="添加商品" />
    </FrameLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/agd_bottom_bar"
        android:layout_below="@id/agd_title_bar">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/agd_top_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/agd_title_bar"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@android:color/white"
                app:layout_scrollFlags="scroll">

                <TextView
                    android:id="@+id/agd_type_name_label"
                    style="@style/InfoLabel"
                    android:text="证件类型"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/agd_type_name"
                    style="@style/InfoEdit"
                    android:hint="请选择证件类型"
                    app:layout_constraintBottom_toBottomOf="@id/agd_type_name_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/agd_type_name_label"
                    app:layout_constraintTop_toTopOf="@id/agd_type_name_label" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/color_eeeeee"
                    app:layout_constraintBottom_toBottomOf="@id/agd_type_name_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.hll_sc_app.widget.ImageUploadGroup
                    android:id="@+id/agd_image_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    app:iug_label="上传图片"
                    app:iug_margin="@dimen/dp_10"
                    app:iug_padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/agd_type_name_label" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/color_eeeeee"
                    app:layout_constraintBottom_toBottomOf="@id/agd_image_upload"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/agd_end_time_label"
                    style="@style/InfoLabel"
                    android:text="到期日期"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/agd_image_upload" />

                <TextView
                    android:id="@+id/agd_end_time"
                    style="@style/InfoEdit"
                    android:hint="请选择到期日期"
                    app:layout_constraintBottom_toBottomOf="@id/agd_end_time_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/agd_end_time_label"
                    app:layout_constraintTop_toTopOf="@id/agd_end_time_label" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/color_eeeeee"
                    app:layout_constraintBottom_toBottomOf="@id/agd_end_time_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/agd_check_time_label"
                    style="@style/InfoLabel"
                    android:text="检测时间"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/agd_end_time_label" />

                <TextView
                    android:id="@+id/agd_check_time"
                    style="@style/InfoEdit"
                    android:hint="请选择检测时间"
                    app:layout_constraintBottom_toBottomOf="@id/agd_check_time_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/agd_check_time_label"
                    app:layout_constraintTop_toTopOf="@id/agd_check_time_label" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/agd_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/agd_top_body"
                android:paddingBottom="0.5dp">

                <TextView
                    android:id="@+id/agd_empty_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="适用商品"
                    android:textColor="@color/color_aeaeae"
                    android:textSize="@dimen/text_middle_size"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/agd_header_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@android:color/white"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6267"
                        android:gravity="center"
                        android:text="商品信息"
                        android:textAppearance="@style/TextAppearance.City22.Little.Color666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2453"
                        android:gravity="center"
                        android:text="商品批次"
                        android:textAppearance="@style/TextAppearance.City22.Little.Color666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.128"
                        android:gravity="center"
                        android:text="移除"
                        android:textAppearance="@style/TextAppearance.City22.Little.Color666" />
                </LinearLayout>

                <com.hll_sc_app.widget.SearchView
                    android:id="@+id/agd_search_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10" />
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/agd_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>