<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/base_white"
    tools:padding="@dimen/dp_10"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/txt_min_num"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="订购数满"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginLeft="45dp" />

    <EditText
        android:id="@+id/edt_min_num"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="填写数量"
        android:inputType="number"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toStartOf="@id/txt_min_unit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_min_unit"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="个"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/base_color_divider"
        app:layout_constraintEnd_toEndOf="@id/txt_min_unit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_min_num" />

    <TextView
        android:id="@+id/txt_give"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="赠送"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintTop_toTopOf="@id/view_divider"
        tools:layout_constraintEnd_toEndOf="@id/txt_min_num" />

    <TextView
        android:id="@+id/txt_coupon_select"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical|right"
        android:hint="选择要赠送的优惠券"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_divider" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="5dp"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/ic_little_right_arrow"
        app:layout_constraintStart_toEndOf="@id/txt_coupon_select"
        app:layout_constraintTop_toTopOf="@id/view_divider" />

    <EditText
        android:id="@+id/edt_coupon_num"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="填写数量"
        android:inputType="number"
        android:textColorHint="@color/base_text_hint"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toStartOf="@id/txt_coupon_unit"
        app:layout_constraintTop_toTopOf="@id/view_divider" />

    <TextView
        android:id="@+id/txt_coupon_unit"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="张"
        android:textColor="@color/base_text666"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_divider" />
</merge>