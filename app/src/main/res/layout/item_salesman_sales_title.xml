<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@drawable/bg_customer_title">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/txt_sales_code"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little"
        android:text="编码"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/txt_salesman_name"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little"
        android:text="姓名"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/txt_valid_order_num"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little"
        android:text="有效订单数"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/txt_valid_amount"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little"
        android:text="销售金额(元)"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/txt_settle_order_num"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little"
        android:text="结算订单数"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/txt_settle_amount"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little"
        android:text="结算金额(元)"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/txt_refund_amount"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little"
        android:text="退货金额(元)"/>
</LinearLayout>
