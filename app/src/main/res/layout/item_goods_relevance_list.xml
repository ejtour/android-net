<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/base_bg_item_white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/base_color_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_goodsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_tag"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="新鲜大荔枝" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_tag_primary_solid"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingTop="1dp"
        android:paddingRight="3dp"
        android:paddingBottom="1dp"
        android:text="代仓"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        app:layout_constraintBottom_toBottomOf="@id/txt_goodsName"
        app:layout_constraintRight_toLeftOf="@id/txt_productName"
        app:layout_constraintLeft_toRightOf="@id/txt_goodsName"
        app:layout_constraintTop_toTopOf="@id/txt_goodsName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/txt_tag"
        app:layout_constraintRight_toLeftOf="@+id/txt_productSpec"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="红尘一骑妃子笑"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_productSpec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/txt_productName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="散／斤"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_relevance_again"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_button_large_stroke_primary"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_goneMarginRight="0dp"
        android:text="重新关联"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_relevance_remove"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_relevance_remove"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/bg_button_large_stroke_primary"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="解除关联"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"/>

    <com.zs.border.view.BorderTextView
        android:id="@+id/txt_status_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:text="上架商品"
        android:textColor="#13C2C2"
        android:textSize="@dimen/sp_12"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_status_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        app:strokeColor="#13C2C2"
        app:strokeWidth="1dp" />

    <com.zs.border.view.BorderTextView
        android:id="@+id/txt_status_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:text="下架商品"
        android:textColor="#FFA940"
        android:textSize="@dimen/sp_12"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_actionTime"
        app:layout_constraintStart_toEndOf="@id/txt_status_4"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        app:strokeColor="#FFA940"
        app:strokeWidth="1dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_actionTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_relevance_again"
        app:layout_constraintStart_toEndOf="@+id/txt_status_5"
        app:layout_constraintTop_toTopOf="@+id/view_divider"
        tools:text="2019/01/19" />
</androidx.constraintlayout.widget.ConstraintLayout>

