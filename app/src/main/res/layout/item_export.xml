<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_8_solid"
    android:padding="16dp"
    tools:layout_margin="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ie_image"
        android:layout_width="48dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_22_city_circle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ie_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.City22.Large"
        app:layout_constraintBottom_toTopOf="@id/ie_desc"
        app:layout_constraintStart_toEndOf="@id/ie_image"
        app:layout_constraintTop_toTopOf="@id/ie_image"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="导出待发货商品总量" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ie_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Small.ColorAE"
        app:layout_constraintBottom_toBottomOf="@id/ie_image"
        app:layout_constraintStart_toStartOf="@id/ie_label"
        app:layout_constraintTop_toBottomOf="@id/ie_label"
        tools:text="点击可导出当前待发货订单的商品数量汇总" />
</androidx.constraintlayout.widget.ConstraintLayout>