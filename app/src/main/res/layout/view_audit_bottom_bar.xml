<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:background="@drawable/base_bg_shadow_bottom_bar">

    <ImageView
        android:id="@+id/abb_select_all"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/bg_selector_check_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/abb_select_all_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全选"
        android:textAppearance="@style/TextAppearance.City22.Little.Color666"
        app:layout_constraintBottom_toBottomOf="@+id/abb_select_all"
        app:layout_constraintStart_toEndOf="@+id/abb_select_all"
        app:layout_constraintTop_toTopOf="@+id/abb_select_all" />

    <TextView
        android:id="@+id/abb_confirm"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_button_mid_solid_primary"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="批量同意(0)"
        android:textAppearance="@style/TextAppearance.City22.Small.White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>