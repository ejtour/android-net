<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otf_hint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:visibility="gone">

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/otf_arrow"
        android:layout_width="3dp"
        android:layout_height="6dp"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/otf_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/otf_label"
        app:trv_color="@color/colorPrimary"
        app:trv_direction="right" />

    <TextView
        android:id="@+id/otf_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toEndOf="@+id/otf_arrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="当前按下单时间筛选" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_order_time_filter"
        app:layout_constraintBottom_toBottomOf="@+id/otf_cancel"
        app:layout_constraintEnd_toEndOf="@+id/otf_cancel"
        app:layout_constraintStart_toStartOf="@+id/otf_interval"
        app:layout_constraintTop_toTopOf="@+id/otf_interval" />

    <TextView
        android:id="@+id/otf_interval"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        app:layout_constraintBottom_toBottomOf="@+id/otf_label"
        app:layout_constraintStart_toEndOf="@+id/otf_label"
        app:layout_constraintTop_toTopOf="@+id/otf_label"
        tools:text="2018-08-10 ~ 2018-09-01" />

    <ImageView
        android:id="@+id/otf_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="6dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/otf_interval"
        app:layout_constraintDimensionRatio="1.5"
        app:layout_constraintStart_toEndOf="@+id/otf_interval"
        app:layout_constraintTop_toTopOf="@+id/otf_interval" />

</android.support.constraint.ConstraintLayout>