<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/base_bg_white_radius_5_solid"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="15dp"
    android:paddingRight="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/base_text_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2019新年元旦活动，我是促销主题最多20个字" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_market_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_text_10"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_title"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="生效中"
        tools:textColor="#95DE64" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#999999"
        android:textSize="@dimen/base_text_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        tools:text="促销时间：2019/03/03 10:00 - 2019/03/19 15:00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#999999"
        android:textSize="@dimen/base_text_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_time"
        tools:text="活动区域：全国" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_rule_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_marketing_rule"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="活动规则"
        android:textColor="#5695D2"
        android:textSize="@dimen/base_text_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_area" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textColor="#999999"
        android:textSize="@dimen/base_text_12"
        app:layout_constraintStart_toEndOf="@id/txt_rule_label"
        app:layout_constraintTop_toBottomOf="@id/txt_area"
        tools:text="赠券" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_aeaeae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_rule_label"
        app:layout_constraintTop_toBottomOf="@id/txt_rule_label" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_check_detail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableRight="@drawable/ic_little_right_arrow"
        android:gravity="center_vertical"
        android:text="查看详情"
        android:textColor="@color/base_text999"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/view_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>