<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_colorPrimary">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:background="@drawable/base_bg_selector_close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增商品品牌"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_18"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/edt_brandName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_toolbar"
        android:background="@drawable/base_bg_edittext"
        android:hint="请输入品牌名称，20字以内"
        android:maxLength="20"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        android:textColorHint="@color/color_aeaeae"/>

    <TextView
        android:id="@+id/text_input_tips"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/edt_brandName"
        android:background="@color/base_white"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:text="新增品牌需通过官方认证审核才能使用，请耐心等待"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_bottom"
        android:layout_below="@+id/text_input_tips"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <FrameLayout
        android:id="@+id/fl_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/base_white">

        <TextView
            android:id="@+id/text_commit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="73dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/base_bg_selector_dialog_confirm"
            android:enabled="false"
            android:gravity="center"
            android:text="提交审核"
            android:textAppearance="@style/TextAppearance.City22.Middle.White"/>

    </FrameLayout>

</RelativeLayout>