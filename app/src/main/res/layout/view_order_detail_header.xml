<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/white"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <ImageView
        android:id="@+id/odh_status_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_order_detail_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/odh_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="13dp"
        android:textAppearance="@style/TextAppearance.City22.Middle.White"
        app:layout_constraintStart_toStartOf="@+id/odh_status_bg"
        app:layout_constraintTop_toTopOf="@+id/odh_status_bg"
        tools:text="待接单" />

    <TextView
        android:id="@+id/odh_status_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        app:layout_constraintStart_toStartOf="@+id/odh_status_label"
        app:layout_constraintTop_toBottomOf="@+id/odh_status_label"
        tools:text="您有新的订单，请注意查收" />

    <ImageView
        android:id="@+id/odh_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_filter_option"
        app:layout_constraintBottom_toBottomOf="@+id/odh_status_label"
        app:layout_constraintEnd_toStartOf="@+id/odh_status_label"
        app:layout_constraintStart_toStartOf="@+id/odh_status_bg"
        app:layout_constraintTop_toTopOf="@+id/odh_status_label" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/odh_shop_logo"
        android:layout_width="33dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odh_status_bg"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/odh_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintStart_toEndOf="@+id/odh_shop_logo"
        app:layout_constraintTop_toTopOf="@+id/odh_shop_logo"
        tools:text="二十二城西直门店铺" />

    <TextView
        android:id="@+id/odh_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@+id/odh_shop_logo"
        app:layout_constraintStart_toStartOf="@+id/odh_shop_name"
        tools:text="北京市多来点信息技术有限公司" />

    <TextView
        android:id="@+id/odh_self_lift_tag"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_self_lift_tag"
        android:gravity="center"
        android:text="自提订单"
        android:textAppearance="@style/TextAppearance.City22.Middle.White"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/odh_shop_logo" />

    <View
        android:id="@+id/odh_ver_line"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@+id/odh_orderer_dial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/odh_orderer" />

    <TextView
        android:id="@+id/odh_orderer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@+id/odh_shop_logo"
        app:layout_constraintTop_toBottomOf="@+id/odh_shop_logo"
        tools:text="订货人：店老大" />

    <View
        android:id="@+id/odh_orderer_dial"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_order_detail_phone"
        app:layout_constraintEnd_toStartOf="@+id/odh_ver_line"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/odh_orderer"
        app:layout_constraintTop_toBottomOf="@+id/odh_orderer" />

    <TextView
        android:id="@+id/odh_orderer_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="5dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@+id/odh_orderer_dial"
        app:layout_constraintEnd_toEndOf="@+id/odh_orderer_dial"
        app:layout_constraintStart_toStartOf="@+id/odh_orderer_dial"
        app:layout_constraintTop_toTopOf="@+id/odh_orderer_dial"
        tools:text="010-3234567" />


    <TextView
        android:id="@+id/odh_consignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@+id/odh_consignee_dial"
        app:layout_constraintTop_toBottomOf="@+id/odh_shop_logo"
        tools:text="收货人：店小二" />

    <View
        android:id="@+id/odh_consignee_dial"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_order_detail_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odh_consignee" />


    <TextView
        android:id="@+id/odh_consignee_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="5dp"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@+id/odh_consignee_dial"
        app:layout_constraintEnd_toEndOf="@+id/odh_consignee_dial"
        app:layout_constraintStart_toStartOf="@+id/odh_consignee_dial"
        app:layout_constraintTop_toTopOf="@+id/odh_consignee_dial"
        tools:text="010-3234567" />

    <TextView
        android:id="@+id/odh_time_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/color_fafafa"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odh_orderer_dial"
        tools:text="请于 2017-07-08 送达 北京市西城区西直门西环广场T1-1" />

    <View
        android:id="@+id/odh_divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_10"
        android:background="@color/base_activity_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odh_time_address" />

    <TextView
        android:id="@+id/odh_label"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odh_divider"
        tools:text="商品清单" />
</merge>