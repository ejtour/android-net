<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <View
        android:id="@+id/odh_top_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_order_detail_top"
        app:layout_constraintBottom_toBottomOf="@id/odh_status_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/odh_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_order_process"
        android:drawablePadding="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="待接单" />

    <TextView
        android:id="@+id/odh_status_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="20dp"
        android:textAppearance="@style/TextAppearance.City22.Little.White"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/odh_status_label"
        tools:text="您有新的订单，请注意查收" />

    <Space
        android:id="@+id/odh_status_padding"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/odh_status_desc" />

    <TextView
        android:id="@+id/odh_trace_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_white_radius_8_solid"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/odh_trace_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/odh_status_desc" />

    <TextView
        android:id="@+id/odh_trace_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/odh_trace_btn"
        tools:text="已发货" />

    <TextView
        android:id="@+id/odh_trace_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/odh_trace_label"
        app:layout_constraintTop_toBottomOf="@id/odh_trace_label"
        tools:text="您的订单已出库 2019-03-18 23:32:34 " />

    <ImageView
        android:id="@+id/odh_trace_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_order_trace"
        app:layout_constraintBottom_toBottomOf="@id/odh_trace_label"
        app:layout_constraintEnd_toStartOf="@id/odh_trace_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/odh_trace_label" />

    <android.support.constraint.Group
        android:id="@+id/odh_trace_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="odh_trace_btn,odh_trace_label,odh_trace_desc,odh_trace_icon" />

    <View
        android:id="@+id/odh_shop_info_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_white_radius_8_solid"
        app:layout_constraintBottom_toTopOf="@id/odh_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/odh_trace_btn" />

    <com.hll_sc_app.base.utils.glide.GlideImageView
        android:id="@+id/odh_shop_logo"
        android:layout_width="33dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        app:base_placeholder="@drawable/ic_group_placeholder"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/odh_shop_info_bg"
        tools:src="@drawable/ic_group_placeholder" />

    <TextView
        android:id="@+id/odh_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintStart_toEndOf="@+id/odh_shop_logo"
        app:layout_constraintTop_toTopOf="@+id/odh_shop_logo"
        tools:text="二十二城西直门店铺" />

    <TextView
        android:id="@+id/odh_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintBottom_toBottomOf="@+id/odh_shop_logo"
        app:layout_constraintStart_toStartOf="@+id/odh_shop_name"
        tools:text="北京市多来点信息技术有限公司" />

    <TextView
        android:id="@+id/odh_self_lift_tag"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_self_lift_tag"
        android:gravity="center"
        android:text="自提订单"
        android:textAppearance="@style/TextAppearance.City22.Middle.White"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/odh_shop_logo" />

    <View
        android:id="@+id/odh_ver_line"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@+id/odh_orderer_dial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/odh_orderer" />

    <TextView
        android:id="@+id/odh_orderer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@+id/odh_shop_logo"
        app:layout_constraintTop_toBottomOf="@+id/odh_shop_logo"
        tools:text="订货人：店老大" />

    <TextView
        android:id="@+id/odh_orderer_dial"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_order_detail_phone"
        android:drawableLeft="@drawable/ic_phone_wrapper"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintEnd_toStartOf="@+id/odh_ver_line"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/odh_orderer"
        app:layout_constraintTop_toBottomOf="@+id/odh_orderer"
        tools:text="010-3234567" />

    <TextView
        android:id="@+id/odh_consignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        app:layout_constraintStart_toStartOf="@+id/odh_consignee_dial"
        app:layout_constraintTop_toBottomOf="@+id/odh_shop_logo"
        tools:text="收货人：店小二" />

    <TextView
        android:id="@+id/odh_consignee_dial"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_order_detail_phone"
        android:drawableLeft="@drawable/ic_phone_wrapper"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.City22.Small.Blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odh_consignee"
        tools:text="010-3234567" />

    <TextView
        android:id="@+id/odh_time_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_order_detail_phone"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small.Color999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odh_orderer_dial"
        tools:text="请于 2017-07-08 送达 北京市西城区西直门西环广场T1-1" />

    <TextView
        android:id="@+id/odh_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_radius_top_half_8_solid"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color333"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/odh_time_address"
        tools:text="商品清单" />
</merge>