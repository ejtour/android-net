<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hll_sc_app.widget.TitleBar
        android:id="@+id/cdl_title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_rightText="统计"
        app:tb_rightVisibility="false"
        app:tb_title="我发送的(0)">

        <com.hll_sc_app.widget.SearchView
            android:id="@+id/cdl_search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/vtb_left_image"
            app:layout_constraintEnd_toStartOf="@id/vtb_right_text"
            app:layout_constraintStart_toEndOf="@id/vtb_left_image"
            app:layout_constraintTop_toTopOf="@id/vtb_left_image" />
    </com.hll_sc_app.widget.TitleBar>

    <View
        android:id="@+id/cdl_filter_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cdl_title_bar" />

    <TextView
        android:id="@+id/cdl_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:minWidth="85dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="全部日报"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintBottom_toBottomOf="@id/cdl_filter_btn"
        app:layout_constraintStart_toStartOf="@id/cdl_filter_btn"
        app:layout_constraintTop_toTopOf="@id/cdl_filter_btn" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/cdl_type_arrow"
        android:layout_width="8dp"
        android:layout_height="6dp"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="@id/cdl_type"
        app:layout_constraintEnd_toEndOf="@id/cdl_type"
        app:layout_constraintTop_toTopOf="@id/cdl_type"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <com.hll_sc_app.widget.TriangleView
        android:id="@+id/cdl_date_arrow"
        android:layout_width="8dp"
        android:layout_height="6dp"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/cdl_filter_btn"
        app:layout_constraintEnd_toEndOf="@id/cdl_filter_btn"
        app:layout_constraintTop_toTopOf="@id/cdl_filter_btn"
        app:trv_color="@color/color_dddddd"
        app:trv_direction="bottom" />

    <TextView
        android:id="@+id/cdl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="5dp"
        android:textAppearance="@style/TextAppearance.City22.Small"
        app:layout_constraintBottom_toBottomOf="@id/cdl_filter_btn"
        app:layout_constraintEnd_toStartOf="@id/cdl_date_arrow"
        app:layout_constraintTop_toTopOf="@id/cdl_filter_btn"
        tools:text="2018/08/09 - 2018/09/09" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/cdl_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cdl_filter_btn">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cdl_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</android.support.constraint.ConstraintLayout>