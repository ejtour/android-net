<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.support.constraint.ConstraintLayout"
    tools:background="@android:color/white">

    <View
        android:id="@+id/sah_hor_div1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="45dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sah_reason_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="原因"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        app:layout_constraintBottom_toTopOf="@+id/sah_hor_div1"
        app:layout_constraintStart_toStartOf="@+id/sah_hor_div1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sah_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/ic_arrow_gray"
        app:layout_constraintBottom_toBottomOf="@+id/sah_reason_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sah_reason_label" />

    <TextView
        android:id="@+id/sah_option"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_goneMarginRight="@dimen/dp_10"
        android:gravity="right|center_vertical"
        tools:text="请选择原因"
        android:textAppearance="@style/TextAppearance.City22.Middle.Color666"
        app:layout_constraintBottom_toTopOf="@+id/sah_hor_div1"
        app:layout_constraintEnd_toStartOf="@+id/sah_arrow"
        app:layout_constraintStart_toEndOf="@+id/sah_reason_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sah_desc_label"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        tools:text="说明"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/sah_hor_div1"
        app:layout_constraintTop_toBottomOf="@+id/sah_hor_div1" />

    <EditText
        android:id="@+id/sah_desc_edit"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_order_reject_edit"
        android:gravity="top"
        tools:hint="说明"
        android:maxLength="100"
        android:padding="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Small"
        android:textColorHint="@color/color_666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sah_hor_div1"
        app:layout_constraintTop_toBottomOf="@+id/sah_desc_label" />

    <TextView
        android:id="@+id/sah_remain_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="100"
        android:textColor="@color/color_aeaeae"
        android:textSize="@dimen/text_little_size"
        app:layout_constraintBottom_toBottomOf="@+id/sah_desc_edit"
        app:layout_constraintEnd_toEndOf="@+id/sah_desc_edit"/>

    <com.hll_sc_app.widget.ImageUploadGroup
        android:id="@+id/sah_upload_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:iug_margin="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@+id/sah_desc_edit"
        app:layout_constraintStart_toStartOf="@+id/sah_desc_edit"
        app:layout_constraintTop_toBottomOf="@+id/sah_desc_edit" />

    <View
        android:id="@+id/sah_hor_div2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/base_activity_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sah_upload_group" />

    <TextView
        android:id="@+id/sah_details_label"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        tools:text="明细"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintStart_toStartOf="@+id/sah_hor_div1"
        app:layout_constraintTop_toBottomOf="@+id/sah_hor_div2" />

    <TextView
        android:id="@+id/sah_details_edit"
        android:gravity="center"
        android:background="@drawable/bg_button_mid_stroke_primary"
        android:layout_width="50dp"
        android:text="编辑"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.City22.Little.Blue"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/sah_details_label"
        app:layout_constraintBottom_toBottomOf="@id/sah_details_label"
        app:layout_constraintEnd_toEndOf="@id/sah_desc_edit" />

    <TextView
        android:id="@+id/sah_add_item"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_order_reject_edit"
        android:drawableTop="@drawable/base_ic_img_add"
        android:gravity="center"
        android:padding="15dp"
        tools:text="点击添加退货明细"
        android:textColor="@color/color_aeaeae"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sah_desc_edit"
        app:layout_constraintStart_toStartOf="@+id/sah_desc_edit"
        app:layout_constraintTop_toBottomOf="@+id/sah_details_label" />
</merge>