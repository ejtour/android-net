<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/im_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_report_sales_statistics"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Middle"
        tools:text="商品销量统计汇总" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/im_extra"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@id/im_name"
        android:layout_alignBottom="@id/im_name"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/im_name"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:drawablePadding="5dp"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textAppearance="@style/TextAppearance.City22.Little.Color999"
        tools:text="附加文本" />

    <View
        android:id="@+id/im_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/im_name"
        android:layout_marginLeft="36dp"
        android:background="@color/color_eeeeee"
        tools:layout_height="@dimen/dp_10"
        tools:layout_marginLeft="0dp" />
</RelativeLayout>