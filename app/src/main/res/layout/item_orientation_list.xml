<?xml version="1.0" encoding="utf-8"?>
<com.hll_sc_app.base.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="75dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_orientation_list"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/base_bg_white_radius_5_solid"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cooperation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small"
            tools:text="合作采购商集团名称" />

        <TextView
            android:id="@+id/txt_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cooperation_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.City22.Small.Color666"
            tools:text="包含：18 种商品" />

        <ImageView
            android:id="@+id/img_gray"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow_gray" />

    </RelativeLayout>


    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_ed5655">

        <com.hll_sc_app.widget.right.RightTextView
            app:rightCode="@string/right_targetedSale_del"
            android:id="@+id/txt_del"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="删除"
            android:textAppearance="@style/TextAppearance.City22.Middle.White" />
    </FrameLayout>
</com.hll_sc_app.base.widget.SwipeItemLayout>






