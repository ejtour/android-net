<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/white"
    tools:layout_marginLeft="@dimen/dp_10"
    tools:layout_marginRight="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipg_number"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="1"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintEnd_toStartOf="@id/ipg_name"
        app:layout_constraintHorizontal_weight="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipg_number"
        app:layout_constraintStart_toStartOf="@id/ipg_number"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipg_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="商品名称"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintEnd_toStartOf="@id/ipg_last_avg"
        app:layout_constraintHorizontal_weight="27"
        app:layout_constraintStart_toEndOf="@id/ipg_number"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipg_number"
        app:layout_constraintStart_toStartOf="@id/ipg_name"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipg_last_avg"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintEnd_toStartOf="@id/ipg_cur_avg"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@id/ipg_name"
        app:layout_constraintTop_toTopOf="@id/ipg_number"
        tools:text="— —" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipg_number"
        app:layout_constraintStart_toStartOf="@id/ipg_last_avg"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipg_cur_avg"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintEnd_toStartOf="@id/ipg_rate"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@id/ipg_last_avg"
        app:layout_constraintTop_toTopOf="@id/ipg_number"
        tools:text="— —" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipg_number"
        app:layout_constraintStart_toStartOf="@id/ipg_cur_avg"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ipg_rate"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="涨跌率"
        android:textAppearance="@style/TextAppearance.City22.Small.Color666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="15"
        app:layout_constraintStart_toEndOf="@id/ipg_cur_avg"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipg_number"
        app:layout_constraintStart_toStartOf="@id/ipg_rate"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="@id/ipg_number"
        app:layout_constraintEnd_toEndOf="@id/ipg_rate"
        app:layout_constraintTop_toTopOf="@id/ipg_number" />
</androidx.constraintlayout.widget.ConstraintLayout>