<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/color_222222</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:windowBackground">@color/base_activity_bg</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="BtnLogin">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="android:textSize">@dimen/base_text_16</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_primary_button</item>
    </style>

    <style name="EdtRegister">
        <item name="android:layout_height">45dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/base_text222</item>
        <item name="android:textSize">@dimen/base_text_13</item>
        <item name="android:textColorHint">@color/base_text_hint</item>
        <item name="android:textColorHighlight">@color/base_colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--日历组件-->
    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>
