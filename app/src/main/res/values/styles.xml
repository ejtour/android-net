<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/color_222222</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:windowBackground">@color/base_activity_bg</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BtnLogin">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="android:textSize">@dimen/base_text_16</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_large_solid_primary</item>
    </style>

    <style name="EdtRegister">
        <item name="android:layout_height">45dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@drawable/text_color_spec_add</item>
        <item name="android:textSize">@dimen/base_text_13</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColorHint">@color/base_text_hint</item>
        <item name="android:textColorHighlight">@color/base_colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--日历组件-->
    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BtnClose">
        <item name="android:layout_width">@dimen/title_bar_height</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/bg_selector_close</item>
    </style>

    <style name="BtnOrderAction">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="BtnOrderAction.PrimarySolid">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_large_solid_primary</item>
    </style>

    <style name="BtnOrderAction.GrayStroke">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:background">@drawable/bg_button_large_stroke_gray</item>
    </style>

    <style name="BtnOrderAction.PrimaryStroke">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_button_large_stroke_primary</item>
    </style>

    <style name="BtnAfterSalesAction" parent="BtnOrderAction">
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
    </style>

    <style name="BtnAfterSalesAction.PrimarySolid">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_mid_solid_primary</item>
    </style>

    <style name="BtnAfterSalesAction.PrimaryStroke">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_button_mid_stroke_primary</item>
    </style>

    <style name="BtnAfterSalesItemAction" parent="BtnOrderAction">
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="BtnAfterSalesItemAction.PrimarySolid">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_large_solid_primary</item>
    </style>

    <style name="BtnAfterSalesItemAction.PrimaryStroke">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_button_large_stroke_primary</item>
    </style>

    <style name="MineButton">
        <item name="android:background">@drawable/base_bg_selector_close</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.City22.Little.Color666</item>
    </style>

    <style name="SettingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/base_white</item>
        <item name="android:drawableRight">@drawable/ic_arrow_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.City22.Middle</item>
    </style>
</resources>
