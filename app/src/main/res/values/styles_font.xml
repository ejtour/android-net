<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.City22" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.City22.Large">
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.City22.Middle">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="TextAppearance.City22.Small">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="TextAppearance.City22.Small.Inverse">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="TextAppearance.City22.Little">
        <item name="android:textSize">@dimen/text_little_size</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="TextAppearance.City22.Little.Inverse">
        <item name="android:textSize">@dimen/text_little_size</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>
</resources>