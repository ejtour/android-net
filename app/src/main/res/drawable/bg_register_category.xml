<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/base_white"/>
                    <stroke android:width="1dp" android:color="@color/base_colorPrimary"/>
                </shape>
            </item>

            <item>
                <bitmap android:gravity="right|bottom" android:src="@drawable/ic_category_checked"/>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="true">
        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="#F5F5F5"/>
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/base_white"/>
                    <stroke android:width="1dp" android:color="@color/base_colorPrimary"/>
                </shape>
            </item>

            <item>
                <bitmap android:gravity="right|bottom" android:src="@drawable/ic_category_checked"/>
            </item>
        </layer-list>
    </item>
</selector>